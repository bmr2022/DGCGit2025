                    var partCodeDropdown = $('#PartCode');
                    var obj = $.parseJSON(response);
                    partCodeDropdown.empty();
                    partCodeDropdown.append('<option value="">--Select--</option>');


                    $.each(obj.Result, function (index, val) {
                        partCodeDropdown.append('<option value="' + val.ItemCode + '">' + val.PartCode + '</option>');
                    });
                    if ($('#Mode').val() == "U" || $('#Mode').val() == "V") {
                        var ItemCode = '@Model.ItemCode';
                        $('#PartCode').val(ItemCode).trigger("change");

                    }

                },
