        $('#submitBTN').click(function (e) {
            debugger
            e.preventDefault();

            // Collect selected requisitions
            let selectedReqs = [];
            $('.checkManual:checked').each(function () {
                selectedReqs.push({
                    ReqEntryId: $(this).data('entryid'),
                    ReqYearCode: $(this).data('yearcode'),
                    RequitionType: $(this).data('requitiontype'),
                    ReqNo: $(this).data('reqno'),
                    ReportType: $(this).data('reporttype'),
                    CancelReason: $('#cancelReasonText').val() || ''
                });
            });

            if (selectedReqs.length === 0) {
                alert('Please select at least one requisition.');
                return;
            }
            let pendCancelReq = $('[name="PendCancelReq"]').val();
            let FromDate = $('#FromDate').val();
            let ToDate = $('#ToDate').val();
            let RequitionType = $('#RequitionType').val();

            let dataToSend = {
                PendCancelReq: pendCancelReq,
                FromDate:FromDate,
                ToDate:ToDate,
                RequitionType: RequitionType,
                Requisitions: selectedReqs
            };

            if (!$('#cancelReasonText').val()) {
                alert('Please enter cancel reason.');
                return;
            }

            $.ajax({
                url: '/CancelRequition/UpdateCompleteRequisitionMultiple',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dataToSend),
                success: function (response) {
                    if (response.isSuccess) {
                        // Store message before reload
                        sessionStorage.setItem('notifyMessage', response.message || 'Data saved successfully.');
                        location.reload();
                    } else {
                        $.notify({
                            text: response.message || 'Failed to update.',
                            type: 'error',
                            position: 'top-right',
                            autoHide: true,
                            delay: 3000
                        });
                    }
                },
                error: function () {
                    $.notify({
                        text: 'Something went wrong while updating.',
                        type: 'error',
                        position: 'top-right',
                        autoHide: true,
                        delay: 3000
                    });
                }

                
            });
        });


        function formatDate1(date) {
            var day = ("0" + date.getDate()).slice(-2);
            var monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
            var month = monthNames[date.getMonth()];
            var year = date.getFullYear();
            var dateString = day + "/" + month + "/" + year;
            return dateString;
        }

