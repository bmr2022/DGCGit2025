                    selectedMRN = $("#DashboardGrid .checkManual").map(function () {
                        return $(this).val();
                    }).get();
                } else {
                    selectedMRN = [];
                }
            });
            function updateSelectAllCheckbox() {
                var total = $('#DashboardGrid .checkManual').length;
                var checked = $('#DashboardGrid .checkManual:checked').length;
                $('#selectAll').prop('checked', total > 0 && total === checked);
            }
            function reapplySelections() {
                if (!selectedMRN.length) {
                    updateSelectAllCheckbox();
                    return;
                }
                selectedMRN.forEach(val => {
                    $("#DashboardGrid .checkManual[value='" + val + "']").prop("checked", true);
                });
                updateSelectAllCheckbox();
            }

