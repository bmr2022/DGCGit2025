        function GetURLforSession() {

            var currentURL = window.location.href;
            if (currentURL.includes("type")) {
                var approvalType = decodeURIComponent(currentURL.split("type=")[1]);
                if (approvalType.includes('Unapproving Amendment Level')) {
                    $('#ApprovalType').val('amdUnApp').change();
                    GetSearchData();
                }
                if (approvalType.includes('Approving Amendment Level')) {
                    $('#ApprovalType').val('amdApproval').change();
                    GetSearchData();

                }
                if (approvalType.includes('First Level Approval')) {
                    $('#ApprovalType').val('firstLvlApproval').change();
                    GetSearchData();

                }
                if (approvalType.includes('Approving Final Level')) {
                    $('#ApprovalType').val('finalApproval').change();
                    GetSearchData();

                }
                if (approvalType.includes('Unapproving first Level')) {
                    $('#ApprovalType').val('firstLvlUnApp').change();
                    GetSearchData();

                }
                if (approvalType.includes('Unapproving Final Level')) {
                    $('#ApprovalType').val('finalUnApp').change();
                    GetSearchData();

                }

            }
            else {
                //do nothing
            }
        }

