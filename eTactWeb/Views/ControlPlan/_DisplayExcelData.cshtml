@model eTactWeb.DOM.Models.ControlPlanModel

@{
    var Cntr = 0;
    var ErrorCntr = 0;
}

@if (Model.ExcelDataList == null)
{
    <tr class="text-center">
        <td colspan="32" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.ExcelDataList)
    {
        Cntr = Cntr + 1;
        <tr class="small @Cntr data-row" style="white-space:nowrap">
            <td style="white-space:nowrap;">

                <a class="table-link link-danger deleteRowBtn">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td id="ItemCode-@Cntr">@item.ItemCode</td>
            @if (item.PartCodeExists != "N")
            {
                ErrorCntr = ErrorCntr + 1;
                <td style="color:red;font-weight:bolder" id="PartCode-@Cntr">@item.PartCode</td>
            }
            else
            {
                <td id="PartCode-@Cntr">@item.PartCode</td>
            }
            @if (item.ItemNameExists != "N")
            {
                ErrorCntr = ErrorCntr + 1;
                <td style="color:red;font-weight:bolder" id="ItemName-@Cntr">@item.ItemName</td>
            }
            else
            {
                <td id="ItemName-@Cntr">@item.ItemName</td>
            }
            
            <td id="Characteristic-@Cntr">@item.Characteristic</td>
            <td id="EvalutionMeasurmentTechnique-@Cntr">@item.EvalutionMeasurmentTechnique</td>
            <td id="ControlMethod-@Cntr">@item.ControlMethod</td>
            <td id="SpecificationFrom-@Cntr">@item.SpecificationFrom</td>
            <td id="Operator-@Cntr">@item.Operator</td>
            <td id="SpecificationTo-@Cntr">@item.SpecificationTo</td>
            <td id="FrequencyofTesting-@Cntr">@item.FrequencyofTesting</td>
            <td id="InspectionBy-@Cntr">@item.InspectionBy</td>
            <td id="Remarks-@Cntr">@item.Remarks</td>
            <td id="RejectionPlan-@Cntr">@item.RejectionPlan</td>
            <td id="DrawingNo-@Cntr">@item.DrawingNo</td>

            <input type="hidden" id="ErrPartCodeExists-@Cntr" value="@item.PartCodeExists" />
            <input type="hidden" id="ErrItemNameExists-@Cntr" value="@item.ItemNameExists" />
           
        </tr>
    }
}