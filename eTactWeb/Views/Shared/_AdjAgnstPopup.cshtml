@model eTactWeb.DOM.Models.Common.AdjustmentModel

<div class="modal fade" id="DisplayAdjDetailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" style="margin-top: 120px;">
        <div class="modal-content">
            <div class="modal-header d-flex align-items-center justify-content-between">
                <!-- Left side: Title -->
                <h5 class="modal-title mb-0" id="staticBackdropLabel">Adj Detail</h5>

                <!-- Middle: Total Adjust Amount -->
                <div class="d-flex align-items-center ms-3">
                    <label asp-for="TotalBillAmount" class="form-label me-2 mb-0">Total Bill Amt</label>
                    <input asp-for="TotalBillAmount" class="form-control form-control-sm" readonly
                           onchange="ChangeAdjustAmount()" min="0" type="number" style="width:150px;" />
                </div>
                <div class="d-flex align-items-center ms-3">
                    <label asp-for="TotalRemainingAmount" class="form-label me-2 mb-0">Total Remaining Amt</label>
                    <input asp-for="TotalRemainingAmount" class="form-control form-control-sm" readonly
                           onchange="ChangeAdjustAmount()" min="0" type="number" style="width:150px;" />
                </div>
                <div class="d-flex align-items-center ms-3">
                    <label asp-for="PendingToAdjustAmount" class="form-label me-2 mb-0">Pending to Adjst Amt</label>
                    <input asp-for="PendingToAdjustAmount" class="form-control form-control-sm" readonly
                           onchange="ChangeAdjustAmount()" min="0" type="number" style="width:150px;" />
                </div>
                <div class="d-flex align-items-center ms-3">
                    <label asp-for="TotalAdjustAmount" class="form-label me-2 mb-0">Total Adjst Amt</label>
                    <input asp-for="TotalAdjustAmount" class="form-control form-control-sm"
                           onchange="ChangeAdjustAmount()" min="0" type="number" style="width:150px;" />
                </div>
                <!-- Right side: Close button -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Error Banner in Header -->
            <div id="AdjustmentHeaderError" class="text-danger ms-3 small" style="display:block;font-size:medium;">Adjustment cannot be greater than remaining balance or total bill amount!</div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body" style="overflow:scroll;max-height:300px;">
                        <table class="table table-hover table-bordered table-striped mb-0 AdjustmntDetailtable" id="GridLabels">
                            <thead class="bg-gradient card-headerBG text-light small" style="white-space:break-spaces">
                                <tr>
                                    <th>Sr#</th>
                                    <th></th>
                                    <th>Action</th>
                                    <th>VOUCHER NO</th>
                                    <th>VOUCHER DATE</th>
                                    <th>MODE OF ADJUSTMENT</th>
                                    <th>VOUCHER TYPE</th>
                                    <th>BILL AMT</th>
                                    <th>REMAINING AMT</th>
                                    <th>ADJUSTMENT AMT</th>
                                    <th>DR/CR</th>
                                    <th>Entry ID</th>
                                    <th>YEAR</th>
                                    <th>Open Entry ID</th>
                                    <th>Open Year Code</th>
                                </tr>
                            </thead>
                            <tbody id="divDisplayAdjustmntDetail">
                            </tbody>
                        </table>
                        <div class="row g-2 gx-3">
                            <div class="col-12 text-center">
                                <strong>Total No Of Items : <span id="AdjlblTotalNoOfItems"></span></strong>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 justify-content-center mt-4" style="margin-left:50px;margin-top:10px;">
                            <button type="button" class="btn btn-sm btn-outline-success btnAddAgnstAdjustment2Grid" onclick="Agnstrefonsave()">
                                <i class="fa-solid fa-angles-down fa-fw fa-lg"></i>
                                ADD TO GRID
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" style="margin-left: 10px;" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
