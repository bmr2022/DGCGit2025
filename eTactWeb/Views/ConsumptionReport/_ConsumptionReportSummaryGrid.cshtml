@model eTactWeb.DOM.Models.ConsumptionReportModel;

<div class="table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Sr#</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RM Part Code</th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RM Item Name</th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Opening Qty</th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Opening WIP</th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Unit</th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Qty</th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Alt PO Qty</th>
                <th data-columnno="8" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Alt Unit</th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rec From MRN</th>
                <th data-columnno="10" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rec From JW</th>
                <th data-columnno="11" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rec Material Conv</th>
                <th data-columnno="12" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Inter Store Transfer</th>
                <th data-columnno="13" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Other Rec</th>
                <th data-columnno="14" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Total Rec</th>
                <th data-columnno="15" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issued To Shop Floor Agst Plan</th>
                <th data-columnno="16" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issued To Shop Floor Agst BOM Req</th>
                <th data-columnno="17" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issued To Shop Floor Agst Ind Req</th>
                <th data-columnno="18" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issued Via Challan</th>
                <th data-columnno="19" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Return Via Rejection</th>
                <th data-columnno="20" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Iss From InterStore Transfer</th>
                <th data-columnno="21" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Iss Via Material Conv</th>
                <th data-columnno="22" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Iss Stock Adjustment</th>
                <th data-columnno="23" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issue Other</th>
                <th data-columnno="24" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Total Issue</th>
                <th data-columnno="25" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FG Part Code</th>
                <th data-columnno="26" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FG Item Name</th>
                <th data-columnno="27" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Consumed RM Qty</th>
                <th data-columnno="28" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Consumed RM Unit</th>
                <th data-columnno="29" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FG OK Qty</th>
                <th data-columnno="30" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FG Prod Qty</th>
                <th data-columnno="31" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Closing Stock</th>
                <th data-columnno="32" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>WIP Closing Stock</th>
                <th data-columnno="33" data-sortorder="asc" class="sortCol"><span class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RM Item Code</th>
         
            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                if (Model.ConsumptionReportGrid == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.ConsumptionReportGrid)
                    {
                        Cntr = Cntr + 1;

                        <tr id="@Cntr" onclick="selection(this)">
                           
                            <th>@Cntr</th>
                            <td style="background-color: #e09ef0;">@item.RMPartCode</td>
                            <td>@item.RMItemName</td>
                            <td>@item.OpeningQty</td>
                            <td>@item.OpeningWIP</td>
                            <td>@item.Unit</td>
                            <td>@item.POQty</td>
                            <td>@item.AltPOQty</td>
                            <td>@item.AltUnit</td>
                            <td>@item.RecFromMRN</td>
                            <td>@item.RecFromJW</td>
                            <td>@item.RecMaterialConv</td>
                            <td>@item.InterStoreTransfer</td>
                            <td>@item.OtherRec</td>
                            <td>@item.TotalRec</td>
                            <td>@item.IssuedToShopFloorAgstPlan</td>
                            <td>@item.IssuedToShopFloorAgstBOMReq</td>
                            <td>@item.IssuedToShopFloorAgstIndReq</td>
                            <td>@item.IssuedViaChallan</td>
                            <td>@item.ReturnViaRejection</td>
                            <td>@item.IssFromInterStoreTransf</td>
                            <td>@item.IssViaMaterialConv</td>
                            <td>@item.IssStockAdjustment</td>
                            <td>@item.IssueOther</td>
                            <td>@item.TotalIssue</td>
                            <td>@item.FGPartCode</td>
                            <td>@item.FGItemName</td>
                            <td class ="GridConsumedRMQty">@item.ConsumedRMQty</td>
                            <td>@item.ConsumedRMUnit</td>
                            <td>@item.FGOKQty</td>
                            <td>@item.FGProdQty</td>
                            <td>@item.ClosingStock</td>
                            <td>@item.WIPClosingStock</td>
                            <td>@item.RMItemCode</td>



                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>
<style>

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }
</style>