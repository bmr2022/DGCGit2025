        function GetUserRightsReportDetailData() {
              
            var reportType = $('#ReportType').val(); 
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var UserName = $('#UserName').val();
            var EmployeeName = $('#EmployeeName').val();
            var FormName = $('#FormName').val();
