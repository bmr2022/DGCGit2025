    <tbody id="DashboardGrid">
        @{
            var @Cntr = 0;
            if (Model.AssetsMasterGrid == null || Model.AssetsMasterGrid.Count == 0)
            {
                <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
            }
            else
            {
                foreach (var item in Model.AssetsMasterGrid)
                {
                    Cntr = Cntr + 1;
                    <tr onclick="selection(this)">
                        <th>@Cntr</th>
                        <td style="text-align:center;white-space: nowrap;">
                            <div id="container">

                                <div id="viewCursorDiv-@Cntr">
                                    <a class="table-link link-success" asp-action="DiscountCustomerCategoryMaster" asp-route-Mode="V" asp-route-ID="@item.AssetsEntryId" asp-route-YC="@item.YearCode" onclick="BackButtonData(event,'@item.AssetsEntryId','@item.YearCode');"
                                       >
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="editCursorDiv-@Cntr">

                                    <a class="table-link link-primary" asp-action="DiscountCustomerCategoryMaster" onclick="confirmEdit(event)" asp-route-Mode="U" asp-route-ID="@item.DiscountCustCatEntryId" asp-route-YC="@item.DiscountCustCatYearCode" asp-route-FromDate="@item.FromDate"
                                       asp-route-ToDate="@item.ToDate"
                                       asp-route-ID="@item.AssetsEntryId"
                                       asp-route-YC="@item.YearCode"
                                      >
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="deleteCursorDiv-@Cntr">
                                    <a class="table-link link-danger" asp-action="DeleteByID" asp-route-EntryId="@item.DiscountCustCatEntryId" asp-route-YearCode="@item.DiscountCustCatYearCode" asp-route-EntryDate="@item.ActualEntryDate" asp-route-EntryByempId="@ActualEntryByEmpid">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>


                            </div>
                        </td>

                        <td>@item.AssetsEntryId</td>
                        <td>@item.AccountCode</td>
                        <td>@item.EntryDate?.ToString().Split(' ')[0]</td>
                        <td>@item.AssetsCode</td>
                        <td>@item.AssetsName</td>
                        <td>@item.ItemCode</td>
                        <td>@item.AssetsCateogryId</td>
                        <td>@item.ParentAccountName</td>
                        <td>@item.ParentAccountCode</td>
                        <td>@item.MainGroup</td>
                        <td>@item.SubGroup</td>
                        <td>@item.UnderGroup</td>
                        <td>@item.SubSubGroup</td>
                        <td>@item.CostCenterId</td>
                        <td>@item.FiscalYear</td>
                        <td>@item.VendoreAccountCode</td>
                        <td>@item.PONO</td>
                        <td>@item.PODate?.ToString().Split(' ')[0]</td>
                        <td>@item.POYear</td>
                        <td>@item.InvoiceNo</td>
                        <td>@item.InvoiceDate?.ToString().Split(' ')[0]</td>
                        <td>@item.InvoiceYearCode</td>
                        <td>@item.NetBookValue</td>
                        <td>@item.PurchaseValue</td>
                        <td>@item.ResidualValue</td>
                        <td>@item.DepreciationMethod</td>
                        <td>@item.PurchaseNewUsed</td>
                        <td>@item.CountryOfOrigin</td>
                        <td>@item.FirstAqusitionOn?.ToString().Split(' ')[0]</td>
                        <td>@item.OriginalValue</td>
                        <td>@item.CapatalizationDate?.ToString().Split(' ')[0]</td>
                        <td>@item.BarCode</td>
                        <td>@item.SerialNo</td>
                        <td>@item.LocationOfInsallation</td>
                        <td>@item.ForDepartmentId</td>
                        <td>@item.Technician</td>
                        <td>@item.TechnicialcontactNo</td>
                        <td>@item.TechEmployeeName</td>
                        <td>@item.CustoidianEmpId</td>
                        <td>@item.ConsiderInInvetory</td>
                        <td>@item.InsuranceCompany</td>
                        <td>@item.InsuredAmount</td>
                        <td>@item.InsuranceDetail</td>
                        <td>@item.CC</td>
                        <td>@item.UID</td>
                        <td>@item.ActualEntryBy</td>
