@model eTactWeb.DOM.Models.TransactionLedgerModel

<div class="card-body table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static; " id="dashRThead">
            <tr>
                @* <th style="width:5px;">Action</th> *@
                <th style="width:10px;">Sr#</th>

                <th data-columnno="1" data-sortorder="asc" class="sortCol" style="width:90px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Parent Group Name</th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Account Name</th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Open DR</th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Open CR</th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Total Opening</th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Current DR</th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Current CR</th>
                <th data-columnno="8" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Net Current Amt</th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Net Amt</th>
                <th data-columnno="10" data-sortorder="asc" class="sortCol" style="width:60px;"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Group/Ledger</th>
            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                if (Model.TransactionLedgerGrid == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.TransactionLedgerGrid)
                    {
                        Cntr = Cntr + 1;

                        <tr id="@Cntr" onclick="selection(this)" style="background-color:#d8d3cb">
                            
                            <th>@Cntr</th>
                            <td href="javascript:void(0);" class="drillDownLink" style="color:blue;cursor:pointer;" onclick="callDrillDown(this,'TransactionLedger', getTransactionLedgerFilters())"
                                data-controller="TransactionLedger"
                                data-action="Index"
                                data-seqno="@Cntr"
                                data-targetform="GROUPDETAIL"
                                data-clickname="ParentLedgerClick"
                                data-groupledger="@item.ParentAccountCode">
                                @item.ParentLedgerName<input type="hidden" value="@item.ParentAccountCode" id="ParentCode-@Cntr" />
                            </td>
                            <td href="javascript:void(0);" class="drillDownLink" style="color:blue;cursor:pointer;" onclick="callDrillDown(this,'TransactionLedger', getTransactionLedgerFilters())"
                                data-controller="TransactionLedger"
                                data-action="Index"
                                data-seqno="@Cntr"
                                data-targetform="MonthlySummary"
                                data-clickname="LedgerClick"
                                data-groupledger="@item.ParentAccountCode"
                                data-accountcode="@item.AccountCode">
                                @item.AccountName<input type="hidden" value="@item.AccountCode" id="AccountCode-@Cntr" />
                            </td>
                            <td id="OpnDr-@Cntr">@item.OpnDr</td>
                            <td id="OpnCr-@Cntr">@item.OpnCr</td>
                            <td id="TotOpen-@Cntr">@item.TotalOpening</td>
                            <td>@item.CurrDrAmt</td>
                            <td>@item.CurrCrAmt</td>
                            <td id="NetCurrentAmt-@Cntr">@item.NetCurrentAmt</td>
                            <td id="NetAmt-@Cntr">@item.NetAmount</td>
                            @if(item.GroupLedger == "G")
                            {
                                <td>Group</td>
                            }
                            else
                            {
                                <td>Ledger</td>
                            }
                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>

<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }
</style>
