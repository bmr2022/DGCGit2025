@model eTactWeb.DOM.Models.CustomerSaleRateMasterModel
@{
    // ViewData["Title"] = "Amendment";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                Customer Sale rate Master
              @*   Sale Schedule Amendment- <strong>Dashboard</strong> *@
               @*  <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="SaleSchedules" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span> *@
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row align-items-end gy-1">
                            <div class="col-auto">
                                <label asp-for="CNRMEntryId" class="form-label">Entry ID</label>
                                <input asp-for="CNRMEntryId" class="form-control form-control-sm" style="width: 100px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="CNRMEntryDate" class="form-label">Entry Date</label>
                                <input asp-for="CNRMEntryDate" class="form-control form-control-sm" style="width: 130px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="CNRMYearCode" class="form-label">Year Code</label>
                                <input asp-for="CNRMYearCode" class="form-control form-control-sm" style="width: 100px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="EntryByMachineName" class="form-label">Customer Name</label>
                                <select class="form-select form-select-sm" asp-for="EntryByMachineName" asp-items="ViewBag.CustomerList" style="width: 160px;">
                                    <option value="0">-Select-</option>
                                </select>
                            </div>
                            <div class="col-auto">
                                <label asp-for="ItemCode" class="form-label">Part Code</label>
                                <select class="form-select form-select-sm" asp-for="ItemCode" asp-items="ViewBag.PartCodeList" style="width: 130px;">
                                    <option value="0">-Select-</option>
                                </select>
                            </div>
                            <label asp-for="CNRMEntryId" class="form-label">Item Name</label>
                            <input asp-for="CNRMEntryId" class="form-control form-control-sm" style="width: 100px;" />
                            <div class="col-auto">
                                <label asp-for="RateUnit" class="form-label">Unit</label>
                                <select class="form-select form-select-sm" asp-for="RateUnit" style="width: 100px;">
                                    <option value="0">-Select-</option>
                                </select>
                            </div>
                            <div class="col-auto">
                                <label asp-for="PrevRate" class="form-label">Prev Rate</label>
                                <input asp-for="PrevRate" class="form-control form-control-sm" style="width: 100px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="Rate" class="form-label">Rate</label>
                                <input asp-for="Rate" class="form-control form-control-sm" style="width: 100px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="EffectiveDate" class="form-label">Effective Date</label>
                                <input asp-for="EffectiveDate" class="form-control form-control-sm" style="width: 130px;" />
                            </div>
                            <div class="col-auto">
                                <label asp-for="EffectiveTillDate" class="form-label">To Date</label>
                                <input asp-for="EffectiveTillDate" class="form-control form-control-sm" style="width: 130px;" />
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-sm btn-outline-info" type="button" onclick="GetSearchData();">
                                    ADD
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divSSComDashboardGrid">
                    <partial name="_CustSaleNewRateGrid" />
                </div>
            </div>
        </div>
    </div>
</div>
