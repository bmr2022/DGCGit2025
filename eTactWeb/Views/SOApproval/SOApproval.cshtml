        function GetURLforSession() {
             
            var currentURL = window.location.href;
            if (currentURL.includes("type")) {
                var approvalType = decodeURIComponent(currentURL.split("type=")[1]);
                if (approvalType.includes('SO Approval')) {
                    $('#ApprovalType').val('UnAppSO').change();
                    
                    GetInitialData();
                }
                if (approvalType.includes('SO Unapproval')) {
                    $('#ApprovalType').val('AppSO').change();
                    GetApprovedSO();
                }
                if (approvalType.includes('SO Amendment Approval')) {
                    $('#ApprovalType').val('AppAmmSO').change();
                    GetUnApprovedAmmSO();
                }
                if (approvalType.includes('SO Amendment Unapproval')) {
                    $('#ApprovalType').val('UnAppAmmSO').change();
                    GetApprovedAmmSO();
                }

            }
            else {
                //do nothing
            }
        }

