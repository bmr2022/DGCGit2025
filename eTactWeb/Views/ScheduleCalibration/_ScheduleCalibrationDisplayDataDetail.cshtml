@model eTactWeb.DOM.Models.PendingScheduleCalibrationModel
@using Microsoft.AspNetCore.Http
@using System.Reflection.PortableExecutable
@inject IHttpContextAccessor HttpContextAccessor
@{
    var yearCode = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("YearCode"));
}


<div class="table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="GateDataTable">
        <thead class="bg-gradient card-headerBG text-light small" style="white-space:nowrap">
            <tr>
                <th>Chk/Unchk <input id="checkuncheck" class="form-check-input me-1 mt-2" type="checkbox" role="switch" /></th>
                <th>Sr#</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Tool Name
                </th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Tool Code
                </th>
           
                <th data-columnno="4" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Item Name
                </th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Part Code
                </th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Last Calibration Date
                </th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Due Calibration Date
                </th>
                <th data-columnno="16" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Calibration Agency
                </th>
                <th data-columnno="16" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Calibration Frequency
                </th>
                <th data-columnno="16" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Next Calibration Date
                </th>

                <th data-columnno="8" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Last Calibration Certificate No
                </th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Calibration Result
                </th>
                <th data-columnno="10" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Tolerance Range
                </th>
                <th data-columnno="11" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Calibration Remark
                </th>
                <th data-columnno="12" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Tech Employee Name
                </th>
                <th data-columnno="13" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Technician
                </th>
                <th data-columnno="14" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Technician Contact No
                </th>
                <th data-columnno="15" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Custodian Emp ID
                </th>
               
            </tr>
        </thead>
        <tbody id="PendinggateDashboardtable">
            @{
                var Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;

                if (Model.PendingScheduleCalibrationGrid == null || Model.PendingScheduleCalibrationGrid.Count == 0)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.PendingScheduleCalibrationGrid)
                    {
                        Cntr++;
                        <tr>
                            <td style="text-align:center;">
                                <input style="background-color: #b2b3f0;" id="AcceptedQtySHA-@Cntr" class="form-check-input me-1 mt-2" type="checkbox" role="switch" onchange="CheckacceptedQtySHA();" />
                            </td>
                          
                            <td>@srNo</td> <!-- Action (Serial) -->
                            <td>@item.ToolName</td>
                            <td>@item.ToolCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.PartCode</td>
                            <td>@(item.LastCalibrationDate == null ? string.Empty : item.LastCalibrationDate.ToString().Split(" ")[0])</td>
                            <td>@(item.DueCalibrationDate == null ? string.Empty : item.DueCalibrationDate.ToString().Split(" ")[0])</td>
                            <td>@item.CalibrationAgencyId</td>
                            <td>@item.CalibrationFrequencyInMonth</td>
                            <td>@(item.NextCalibrationDate == null ? string.Empty : item.NextCalibrationDate.ToString().Split(" ")[0])</td>
                            
                            <td>@item.LastCalibrationCertificateNo</td>
                            <td>@item.CalibrationResultPassFail</td>
                            <td>@item.TolrenceRange</td>
                            <td>@item.CalibrationRemark</td>
                            <td>@item.TechEmployeeName</td>
                            <td>@item.Technician</td>
                            <td>@item.TechnicialcontactNo</td>
                            <td>@item.CustoidianEmpId</td>
                          
                            <td style="display:none;">@item.ItemCode</td>
                          
                        </tr>
                        srNo++;
                    }
                }
            }
        </tbody>

    </table>

</div>

@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
}

<center><strong>TOTAL ROWS : <span>@displayedRows</span></strong></center>

@{
    int totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);
}
@if (Model.TotalRecords > 0)
{
    <ul class="pagination d-flex align-items-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber - 1)); return false;">Previous</a>
            </li>
        }

        @if (Model.PageNumber > 3)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(1); return false;">1</a>
            </li>
            <li class="page-item disabled"><a class="page-link">...</a></li>
        }

        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageNumber + 2, totalPages); i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="#" onclick="loadPage(@i); return false;">@i</a>
            </li>
        }

        @if (Model.PageNumber < totalPages - 2)
        {
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@totalPages); return false;">@totalPages</a>
            </li>
        }

        @if (Model.PageNumber < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber + 1)); return false;">Next</a>
            </li>
        }
    </ul>
}
<style>
    <style >
    #container {
        display: flex;
    }

    #container > div {
        flex: 1;
        margin-right: 10px;
    }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    tbody td {
        /* Table cell styles */
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    .pagination {
        display: flex;
        justify - content: center;
        align - items: center;
        list - style: none;
        padding: 0;
        margin: 20px auto;
        gap: 5px; /* Space between buttons */
        white - space: nowrap; /* Keeps it in a single line */
    }

    .page - item {
        display: inline - block;
    }

    .page - link {
        display: flex;
        align - items: center;
        justify - content: center;
        width: 40px;
        height: 40px;
        text - decoration: none;
        color: black;
        border: 1px solid #ddd;
        font - size: 16px;
        background - color: white;
        border - radius: 5px;
        transition: background 0.3s;
    }

    .page - item.active.page - link {
        background - color: #4CAF50;
        color: white;
        border: 1px solid #4CAF50;
    }

    .page - item.disabled.page - link {
        background - color: #f0f0f0;
        color: #999;
        cursor: default;
    }

    .page - link: hover: not(.disabled): not(.active) {
        background - color: #ddd;
    }

</style>


