@model eTactWeb.DOM.Models.Features_OptionsModel;
<div class="table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="GateDataTable" style="width: 100%;">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashGateThead">
            <tr>
                <th>Sr#</th>
                <th>Action</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Sale Bill Print Report Name
                </th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> JW Sale Bill Print Report Name
                </th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Purchase Rejection Print Report Name
                </th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Debit Note Print Report Name
                </th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Credit Note Print Report Name
                </th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Sale Rejection Print Report Name
                </th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Purchase Bill Print Report Name
                </th>
                <th data-columnno="8" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Direct Purchase Bill Print Report Name
                </th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Purchase Bill Voucher Print Report Name
                </th>
                <th data-columnno="10" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Direct Purchase Bill Voucher Print Report Name
                </th>
                <th data-columnno="11" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Bank Receipt Voucher Print Report Name
                </th>
                <th data-columnno="12" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Bank Payment Voucher Print Report Name
                </th>
                <th data-columnno="13" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Cash Receipt Voucher Print Report Name
                </th>
                <th data-columnno="14" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Cash Payment Voucher Print Report Name
                </th>
                <th data-columnno="15" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Journal Voucher Print Report Name
                </th>


            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var Cntr = 0;
                if (Model.features_OptionsModelsGrid == null || Model.features_OptionsModelsGrid.Count == 0)
                {
                    <tr class="text-center"><td colspan="6" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.features_OptionsModelsGrid)
                    {
                        Cntr = Cntr + 1;
                        <tr onclick="selection(this)">
                            <td>@Cntr</td>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">


                                    <div id="editCursorDiv-@Cntr">
                                        <a class="table-link link-primary" id="editCursor-@Cntr"
                                           asp-action="Features_Options"
                                           asp-controller="Features_Options"
                                           asp-route-Mode="U"
                                           asp-route-ID="@Cntr"
                                           asp-route-Type="@item.Type"
                                           asp-route-SaleBillPrintReportName="@item.SaleBillPrintReportName"
                                           asp-route-JWSaleBillPrintReportName="@item.JWSaleBillPrintReportName"
                                           asp-route-PurchaseRejPrintReportName="@item.PurchaseRejPrintReportName"
                                           asp-route-DebitNotePrintReportName="@item.DebitNotePrintReportName"
                                           asp-route-CreditNotePrintReportName="@item.CreditNotePrintReportName"
                                           asp-route-SaleRejectionPrintReportName="@item.SaleRejectionPrintReportName"
                                           asp-route-PurchaseBillPrintReportName="@item.PurchaseBillPrintReportName"
                                           asp-route-DirectPurchaseBillPrintReportName="@item.DirectPurchaseBillPrintReportName"
                                           asp-route-PurchBillVoucherPrintReportName="@item.PurchBillVoucherPrintReportName"
                                           asp-route-DirectPurchBillVoucherPrintReportName="@item.DirectPurchBillVoucherPrintReportName"
                                           asp-route-BankRecVoucherPrintReportName="@item.BankRecVoucherPrintReportName"
                                           asp-route-BankPaymentVoucherPrintReportName="@item.BankPaymentVoucherPrintReportName"
                                           asp-route-CashRecVoucherPrintReportName="@item.CashRecVoucherPrintReportName"
                                           asp-route-CashPaymentVoucherPrintReportName="@item.CashPaymentVoucherPrintReportName"
                                           asp-route-JournalVoucherPrintReportName="@item.JournalVoucherPrintReportName"
                                           onclick="confirmEdit(event)">

                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>



                                </div>
                            </td>
                            <td>@item.SaleBillPrintReportName</td>
                            <td>@item.JWSaleBillPrintReportName</td>
                            <td>@item.PurchaseRejPrintReportName</td>
                            <td>@item.DebitNotePrintReportName</td>
                            <td>@item.CreditNotePrintReportName</td>
                            <td>@item.SaleRejectionPrintReportName</td>
                            <td>@item.PurchaseBillPrintReportName</td>
                            <td>@item.DirectPurchaseBillPrintReportName</td>
                            <td>@item.PurchBillVoucherPrintReportName</td>
                            <td>@item.DirectPurchBillVoucherPrintReportName</td>
                            <td>@item.BankRecVoucherPrintReportName</td>
                            <td>@item.BankPaymentVoucherPrintReportName</td>
                            <td>@item.CashRecVoucherPrintReportName</td>
                            <td>@item.CashPaymentVoucherPrintReportName</td>
                            <td>@item.JournalVoucherPrintReportName</td>




                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows">@Cntr</span></strong></center>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
