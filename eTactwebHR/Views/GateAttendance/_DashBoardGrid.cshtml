                                            <a class="table-link link-primary" asp-action="GateAttendance" asp-route-Mode="U" asp-route-ID="@item.GateAttEntryId" asp-route-YearCode="@item.GateAttYearCode" onclick="EditButtonData(event,'@item.GateAttEntryId','@item.GateAttYearCode');">
