                                                </span>
                                            </a>
                                        </div>
                                    }
                                    @if (item.GateAttYearCode != yearCode || item.Approved == "Y" /* || item.Approval1Levelapproved == "Y" || item.ApproveAmm == "Y" */ )
                                    {
                                        <div>
                                            <a class="table-link link-danger noCursor">
                                                <span class="fa-stack">
