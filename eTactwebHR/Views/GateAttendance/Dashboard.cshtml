                        else if ((AgainstInvNo != null && AgainstInvNo != undefined && AgainstInvNo != '') || (AgainstVoucherNo != null && AgainstVoucherNo != undefined && AgainstVoucherNo != '') || (AgainstVoucherDate != null && AgainstVoucherDate != undefined && AgainstVoucherDate != ''))
