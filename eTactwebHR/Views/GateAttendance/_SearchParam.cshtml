@model eTactWeb.DOM.Models.GateAttDashBoard

<div class="row">
    @* <div class="col-xxl-1 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="AttendanceEntryMethodType" class="form-label">Item Type</label>
        <select class="form-select" asp-for="AttendanceEntryMethodType">
            <option value="">-Select-</option>
            <option value="Manual">Manual</option>
            <option value="Import">Import</option>
        </select>
