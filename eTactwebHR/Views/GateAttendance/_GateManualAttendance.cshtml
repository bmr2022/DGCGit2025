@using static eTactWeb.DOM.Models.Common
@model eTactWeb.DOM.Models.GateAttendanceModel
@{
    // Master dropdown lists come from ViewBag
    var deptList = ViewBag.DeptList as List<TextValue> ?? new();
    var desigList = ViewBag.DesigList as List<TextValue> ?? new();
    var employeeList = ViewBag.EmployeeList as List<TextValue> ?? new();
}
<style>

    .select2-container--default .select2-selection--single {
        background-color: #127387;
        border: 1.5px solid #0a0a0a !important;
        border-radius: 4px;
    }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            /* border-bottom: 1.5px solid #000 !important; */
            border-bottom: none !important;
        }

    .select2-container--default .select2-results > .select2-results__options {
        background-color: #e0f2f1; /* Dropdown background color */
        color: #000;
    }
</style>

<div class="card-body overflow-auto pb-0">
    <div class="table-responsive" style="max-height:150px;">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead class="bg-gradient card-headerBG text-light small">
                <tr>
                    <th style="width: 10px;">Sr. No.</th>
                    <th style="width: 25px;">Employee Name</th>
                    <th style="width: 15px;">Employee Code</th>
                    <th style="width: 15px;">Shift Name</th>
                    <th style="width: 15px;">Employee Category</th>
                    @if (Model != null && Model.DayHeaders != null)
                    {
                        @foreach (var dayCol in Model.DayHeaders)
                        {
                            <th style="width: 10px">@dayCol</th>
                        }
                    }
                    else
                    {
                        <th style="width: 10px;">In Time</th>
                        <th style="width: 10px;">Out Time</th>
                    }
                    <th style="width: 15px;">Department</th>
                    <th style="width: 15px;">Designation</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.GateAttDetailsList != null && Model.GateAttDetailsList.Any())
                {
                    for (int i = 0; i < Model.GateAttDetailsList.Count; i++)
                    {
                        <tr>
                            <td>
                                @(i + 1) <input type="checkbox" name="selectedEmpIds" value="@Model.GateAttDetailsList[i].EmpId" onclick="checkUncheckEmp(@Model.GateAttDetailsList[i].EmpId)" />
                            </td>
                            <td>@Model.GateAttDetailsList[i].EmployeeName</td>
                            <td>@Model.GateAttDetailsList[i].EmployeeCode</td>
                            <td>@Model.GateAttDetailsList[i].ActualEmpShiftName</td>
                            <td>@Model.GateAttDetailsList[i].EmpCategory</td>
                            @if (Model != null && Model.DayHeaders != null)
                            {
                                @if (Model.DayOrMonthType == "Daily")
                                {
                                    var Fromvalue = Model.GateAttDetailsList[i].Attendance.ContainsKey("FromTime") ? Model.GateAttDetailsList[i].Attendance["FromTime"] : "";
                                    var Tovalue = Model.GateAttDetailsList[i].Attendance.ContainsKey("ToTime") ? Model.GateAttDetailsList[i].Attendance["ToTime"] : "";
                                    <td><input type="text" id='@("txt_" + Model.GateAttDetailsList[i].EmpId + "_InTime")' name="Attendance[@Model.GateAttDetailsList[i].EmpId][InTime]" value="@Fromvalue" class="form-control form-control-sm att-input" data-empid="@Model.GateAttDetailsList[i].EmpId" data-type="InTime" /></td>
                                    <td><input type="text" id='@("txt_" + Model.GateAttDetailsList[i].EmpId + "_OutTime")' name="Attendance[@Model.GateAttDetailsList[i].EmpId][OutTime]" value="@Tovalue" class="form-control form-control-sm att-input" data-empid="@Model.GateAttDetailsList[i].EmpId" data-type="OutTime" /></td>
                                }
                                else
                                {
                                    @foreach (var dayCol in Model.DayHeaders)
                                    {
                                        var value = Model.GateAttDetailsList[i].Attendance.ContainsKey(dayCol) ? Model.GateAttDetailsList[i].Attendance[dayCol] : "";
                                        var parts = dayCol.Split('('); var dayNo = parts[0]; var type = parts[1].Replace(")", "");
                                        <td><input type="text" id='@("txt_" + Model.GateAttDetailsList[i].EmpId + "_" + dayNo + "_" + type)' name="Attendance[@Model.GateAttDetailsList[i].EmpId][@dayCol]" value="@value" class="form-control form-control-sm att-input" data-empid="@Model.GateAttDetailsList[i].EmpId" data-day="@dayNo" data-type="@type" /></td>
                                    }
                                }
                            }
                            else
                            {
                                <td>@Model.GateAttDetailsList[i].AttInTime</td>
                                <td>@Model.GateAttDetailsList[i].AttOutTime</td>
                            }
                            <td>@Html.DropDownList($"dept_{Model.GateAttDetailsList[i].EmpId}", new SelectList(deptList, "Value", "Text", Model.GateAttDetailsList[i].DeptId), new { @class = "form-select form-select-sm dept-dd", data_empid = Model.GateAttDetailsList[i].EmpId })</td>
                            <td>@Html.DropDownList($"desig_{Model.GateAttDetailsList[i].EmpId}", new SelectList(desigList, "Value", "Text", Model.GateAttDetailsList[i].DesignationEntryId), new { @class = "form-select form-select-sm desig-dd", data_empid = Model.GateAttDetailsList[i].EmpId })</td>
                            <input type="hidden" name="GateAttDetailsList[@i].DeptId" value="@Model.GateAttDetailsList[i].DeptId" />
                            <input type="hidden" name="GateAttDetailsList[@i].EmpId" value="@Model.GateAttDetailsList[i].EmpId" />
                            <input type="hidden" name="GateAttDetailsList[@i].DesignationEntryId" value="@Model.GateAttDetailsList[i].DesignationEntryId" />
                            <input type="hidden" name="GateAttDetailsList[@i].ActualEmpShiftId" value="@Model.GateAttDetailsList[i].ActualEmpShiftId" />
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>