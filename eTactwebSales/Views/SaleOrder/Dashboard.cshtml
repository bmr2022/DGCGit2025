        function GetTotalBYSp() {
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetTotalBYSp")",   // Your MVC Action
                data: $('#SParam').serialize(),       // Serialize form data
                dataType: "json",
                success: function (result) {

                    // 🔹 Handle double-encoded JSON (escaped as string)
                    if (typeof result === "string") {
                        try {
                            result = JSON.parse(result);
                        } catch (e) {
                            console.error("JSON parse error:", e);
                            return;
                        }
                    }

                    // 🔹 Validate and extract data
                    if (result && result.Result && result.Result.length > 0) {
                        var obj = result.Result[0];

                        // Update totals with formatted numbers
                        $('#TotalBasicAmount').text(parseFloat(obj.BasicAmount || 0).toFixed(2));
                        $('#TotalNetAmont').text(parseFloat(obj.NetAmount || 0).toFixed(2));
                        $('#TotalpendingAmt').text(parseFloat(obj.pendingAmt || 0).toFixed(2));
                    } else {
                        // If no data found, clear values
                        $('#TotalBasicAmount').text("0.00");
                        $('#TotalNetAmont').text("0.00");
                        $('#TotalpendingAmt').text("0.00");
                    }
                },
                error: function (xhr, status, error) {
                    console.error("AJAX error:", error);
                    // Clear totals if AJAX fails
                    $('#TotalBasicAmount').text("0.00");
                    $('#TotalNetAmont').text("0.00");
                    $('#TotalpendingAmt').text("0.00");
                }
            });
        }
