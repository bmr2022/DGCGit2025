                dataType: "json",
                success: function (result, status, error) {

                    if (result != null) {
                        var obj = $.parseJSON(result);
                        if (obj.Result != null) {
                            if (obj.Result[0].ShowHideSaleOrderEntryDetail === "N") {
                                $('.SaleOrderEntryDetail').hide();
                            } else {
                                $('.SaleOrderEntryDetail').show();
                            }
