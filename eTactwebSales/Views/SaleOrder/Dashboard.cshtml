                                @*<select class="form-select" asp-for="Branch" asp-items="@(new SelectList(Model.BranchList,"Value","Text"))"></select>*@
                                <select class="form-select" asp-for="CC" asp-items="@(new SelectList(Model.BranchList,"Value","Text"))"><option value="@Model.CC" selected></option></select>
                                @*<input asp-for="CC" class="form-control" value="@Model.CC" />*@
                            </div>
                            <div class="col-xxl-1 col-xl-1 col-lg-1 col-md-3 col-sm-6 col-xs-12">
                                <label asp-for="SONo" class="form-label">SO No</label>
                                @* <select class="form-select" asp-for="SONo" asp-items="@(new SelectList(Model.SONoList,"Value","Text"))">
                                <option value=0>-Select-</option>
                                </select>*@
                                <input asp-for="SONo" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-1 col-lg-1 col-md-3 col-sm-6 col-xs-12">
                                <label asp-for="OrderType" class="form-label">Order Type</label>
                                <select class="form-select" asp-for="OrderType">
                                    <option value="">-Select-</option>
                                    <option value="Export">Export</option>
                                    <option value="Domestic">Domestic</option>
                                </select>
                            </div>
                            <div class="col-xxl-1 col-xl-1 col-lg-1 col-md-3 col-sm-6 col-xs-12">
                                <label asp-for="SOType" class="form-label">SO Type</label>
                                <select class="form-select" asp-for="SOType">
                                    <option value="">-Select-</option>
                                    <option value="OPEN">OPEN</option>
                                    <option value="CLOSE">CLOSE</option>
                                </select>
                            </div>
                            <div class="col-lg-1 col-md-4 col-sm-12 col-xs-12">
                                <label asp-for="PartCode" class="form-label">Part Code</label>
                                <input asp-for="PartCode" class="form-control" />
                            </div>
                            <div class="col-lg-1 col-md-4 col-sm-12 col-xs-12">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            
                            @*   <div class="col-lg-4 col-md-8 col-sm-6 col-xs-12 d-flex justify-content-evenly mt-3">
                            <button class="btn btn-sm btn-outline-info" type="button" onclick="GetSearchData();">
                            <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                            </button>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="SaleOrder" asp-action="Dashboard">
                            <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                            </a>
                            <button class="btn btn-sm btn-outline-success" type="button" id="btnExcel">
                            <i class="far fa-excel fa-fw fa-lg"></i>EXCEL
                            </button>

                            </div>*@
                            <div class="d-flex">
                                <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 justify-content-center mt-3">
                                    <button class="btn btn-sm btn-outline-info" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" onclick="GetSearchData();">
                                        <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                                    </button>
                                    <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="btnExcel">
                                        <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                    </button>
                                    <a class="btn btn-sm btn-outline-danger" style="padding:3px;height:30px;width:100px;margin-left:20px;" asp-controller="SaleOrder" asp-action="Dashboard">
                                        <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                    </a>
                                   
                                </div>

                                <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 justify-content-center mt-4" style="margin-left:50px;margin-top:10px;">
                                    <label class="color-box" style="background-color: #FF0000;"></label><label style="margin-left:5px;margin-top:-5px;">UNAPPROVED</label>
                                    <label class="color-box" style="background-color: green;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">APPROVED</label>
                                    <label class="color-box" style="background-color: blue;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Amendment Approved</label>
                                </div>
                                <div class="ms-auto d-flex align-items-center">
                                    <div class="col-md-4">
                                        <label class="form-label me-2">Global search</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                                    </div>
                                </div>
                            </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_SODashboardGrid" />
                </div>
            </div>
            <div class="row g-2 gx-3 totalrows">
                <div class="col-12 text-center">
                    <strong>Total No Of Rows : <span id="lblTotalNoOfItems"></span></strong>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-box {
        width: 10px;
        height: 10px;
    }
</style>

@section Scripts
    {
    <script src="~/Scripts/table2excel.js"></script>
    <script>
        $(function () {
            //$('#SOGrid').dataTable();
            GetFormRights();
            // $("#FromDate").datepicker({ changeMonth: true, changeYear: true, dateFormat: 'dd/mm/yy' });
            var currentDate = new Date();

            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                var dateString = day + "/" + month + "/" + year;
                return dateString;
            }
            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');
            // $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", date);
            // $("#FromDate").on('keydown', function (e) { e.preventDefault(); return false; });
            // $("#ToDate").datepicker({ changeMonth: true, changeYear: true, dateFormat: 'dd/mm/yy' });
            // $("#ToDate").on('keydown', function (e) { e.preventDefault(); return false; });

            LockedFincialYear();
            //GetSearchData();
            CheckApproved();
            TotalRows();


            AutoComplete('VSALEORDER', 'CustomerName', 'CustomerName', null);
            AutoComplete('VSALEORDER', 'CustOrderNo', 'CustOrderNo', null);
            AutoComplete('VSALEORDER', 'ItemName', 'ItemName', null);
            AutoComplete('VSALEORDER', 'PartCode', 'PartCode', null);
            AutoComplete('VSALEORDER', 'SONo', 'SONo', null);
            AutoComplete('VSALEORDER', 'CC', 'CC', null);


            //sortTable(2, false);

            //$("#btnExcel").click(function () {
            //     
            //    $("#SOGrid").table2excel({
            //        filename: "Table.xls"
            //    });
            //});

            $('#SONo').rules('remove', 'required');

            $("#btnExcel").click(function () {
                var table = $("#SOGrid");
                if (table.length === 0) {
                    console.error("Table element with ID 'SOGrid' not found.");
                    return;
                }

                try {
                    table.table2excel({
                        filename: "Table.xls"
                    });
                } catch (error) {
                    console.error("An error occurred while exporting to Excel:", error);
                }
            });

        });

        var currentSearchColumn = null;
        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#divSOGrid tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });

        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup');
        });

        $(document).on("click", ".sortCol", function () {
             ;
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable('SOGrid',colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('SOGrid',colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function CheckApproved() {
            var rowSOGrid = $('#divSOGrid tr').length;

            for (var i = 1; i <= rowSOGrid; i++) {
                var Approved = $('#hiddenApproved-' + i).val();
                var AmendApproved = $('#hiddenAmendApproved-' + i).val();

                if (Approved === "Y") {
                    $('#SOGridrow-' + i).css("color", "green");
                    $('#editCursorDiv-' + i).empty();
                    $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                        <span class="fa-stack">
                                                                                     <i class="fa fa-square fa-stack-2x"></i>
                                                                                     <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                     </span>
                                                                                     </a>`);
                    $('#deleteCursorDiv-' + i).empty();
                    $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                               <span class="fa-stack">
                                                                                                   <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                     </span>
                                                                                              </a>`);
                } else {
                    if (AmendApproved === "Y") {
                        $('#SOGridrow-' + i).css("color", "blue");
                        $('#editCursorDiv-' + i).empty();
                        $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                <span class="fa-stack">
                                                                                             <i class="fa fa-square fa-stack-2x"></i>
                                                                                             <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                             </span>
                                                                                             </a>`);
                        $('#deleteCursorDiv-' + i).empty();
                        $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                       <span class="fa-stack">
                                                                                                           <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                             </span>
                                                                                                      </a>`);
                    } else {
                        $('#SOGridrow-' + i).css("color", "#FF0000");
                    }
                }
            }
        }

        function TotalRows() {
            var soGridrow = $('#divSOGrid tr').length;
            if (soGridrow >= 1) {
                $('#lblTotalNoOfItems').text(soGridrow);
            } else {
                $('#lblTotalNoOfItems').text(0);
            }
        }

        function GetFormRights() {
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    if (data != null) {
                        var obj = $.parseJSON(data);
                         
                        if (obj.Result.Table.length == 0) {
                            var rowCounter = $('#divDashboardGrid tr').length;
                             for (var i = 0; i < rowCounter; i++) {
                                    $('#viewCursorDiv-' + i).empty();
                                $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                        <span class="fa-stack">
                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                        </span>
                                                                                    </a>`);
                                }
                                 for (var i = 0; i < rowCounter; i++) {
                                    $('#editCursorDiv-' + i).empty();
                                $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                                }
                                 for (var i = 0; i < rowCounter; i++) {
                                    $('#deleteCursorDiv-' + i).empty();
                                $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                        <span class="fa-stack">
                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                        </span>
                                                                                    </a>`);
                                }
                            $("#divDashboardGrid").css("display", "none");
                            $(".totalrows").css("display", "none");
                            $("#SParam").hide();
                        } else {
                         (obj);
                        var optAll = obj.Result.Table[0].OptAll;
                        var optSave = obj.Result.Table[0].OptSave;
                        var optUpdate = obj.Result.Table[0].OptUpdate;
                        var optDelete = obj.Result.Table[0].OptDelete;
                        var optView = obj.Result.Table[0].OptView;
                        var rowCounter = $('#divDashboardGrid tr').length;
                        if (!optAll) {
                            if (!optView) {

                                for (var i = 0; i < rowCounter; i++) {
                                    $('#viewCursorDiv-' + i).empty();
                                        $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                        <span class="fa-stack">
                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                        </span>
                                                                                    </a>`);
                                }
                            }
                            if (!optUpdate) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#editCursorDiv-' + i).empty();
                                        $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                                }
                            }
                            if (!optDelete) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#deleteCursorDiv-' + i).empty();
                                        $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                        <span class="fa-stack">
                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                        </span>
                                                                                    </a>`);
                                }
                            }
                            if (!(optUpdate || optDelete || optView)) {
                                    $("#divDashboardGrid").css("display", "none");
                                    $(".totalrows").css("display", "none");
                                    $("#SParam").hide();
                            }
                        }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }

        function GetSearchData() {
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    CheckApproved();

                    TotalRows();
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }


        function LockedFincialYear() {
            var YearCode = parseInt($('#hiddenYearCode').val());
            var rowCounter = $('#divDashboardGrid tr').length;
            $.ajax({
                type: "POST",
                data: { "YearCode": YearCode },
                url: "@Url.Action("GetLockedYear")",
                dataType: "json",
                success: function (result, status, error) {
                     (result);
                    if (result != null) {
                        var obj = $.parseJSON(result);
                        if (obj.Result[0] != undefined) {
                            if (obj.Result[0].ClosedForAllusers == "Y") {
                                for (var i = 1; i <= rowCounter; i++) {
                                    $('#editCursorDiv-' + i).empty();
                                    $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                                                                                                                        <span class="fa-stack">
                                                                                                                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                                                                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                                                                                                                        </span>
                                                                                                                                                                                                    </a>`);
                                    $('#deleteCursorDiv-' + i).empty();
                                    $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                                                                                                                        <span class="fa-stack">
                                                                                                                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                                                                                                                        </span>
                                                                                                                                                                                                    </a>`);
                                }
                            }
                        }
                        // $('.card-footer #submitBTN').prop('disabled', true);
                    }
                }
            });
        }



    </script>
}