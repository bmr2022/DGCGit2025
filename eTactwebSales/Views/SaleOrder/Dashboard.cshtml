        function BackButtonData(event) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&fromDateBack=" + $('#FromDate').val() + "&toDateBack=" + $('#ToDate').val() + "&summaryDetail=" + $('#SummaryDetail').val() + "&customerNameBack=" + $('#CustomerName').val() + "&customerOrderNoBack=" + $('#CustOrderNo').val() + "&branchBack=" + $('#CC').val() + "&sonoBack=" + $('#SONo').val() + "&orderTypeBack=" + $('#OrderType').val() + "&soTypeBack=" + $('#SOType').val() + "&partCodeBack=" + $('#PartCode').val() + "&itemNameBack=" + $('#ItemName').val();
            window.location.href = linkUrl;
        }

        function TotalRows() {
            var soGridrow = $('#divSOGrid tr').length;
            if (soGridrow >= 1) {
                $('#lblTotalNoOfItems').text(soGridrow);
            } else {
                $('#lblTotalNoOfItems').text(0);
            }

            var totalOrderAmt = 0;
            var totalOrderNetAmt = 0;
            var totalPendingAmt = 0;
            for (var i = 1; i <= soGridrow; i++) {
                var orderAmt = parseFloat($('#hiddenOrderAmt-' + i).text().trim()) || 0;
                var orderNetAmt = parseInt($('#hiddenOrderNetAmt-' + i).text().trim()) || 0;
                var pendingAmt = parseFloat($('#hiddenPendingAmt-' + i).text().trim()) || 0;

                totalOrderAmt += isNaN(orderAmt) ? 0 : orderAmt;
                totalOrderNetAmt += isNaN(orderNetAmt) ? 0 : orderNetAmt;
                totalPendingAmt += isNaN(pendingAmt) ? 0 : pendingAmt;
            }
            $('#OrderAmt').text(totalOrderAmt.toFixed(2));
            $('#OrderNetAmt').text(totalOrderNetAmt);
            $('#pendingAmt').text(totalPendingAmt.toFixed(2));
        }

