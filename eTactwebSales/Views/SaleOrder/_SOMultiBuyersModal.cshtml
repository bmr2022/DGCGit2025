@model eTactWeb.DOM.Models.SaleOrderModel

<style>
    .modal-content {
        border: none;
    }
</style>
<!-- Modal -->
<div class="modal fade" id="SOBillToShipTo" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="RefreshSchedule('');" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-2 gx-3">
                            <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                <label  class="form-label">BillTo Party Name</label>
                                <div class="form-check form-switch mx-3 w-auto position-absolute d-inline">
                                    <input asp-for="PN1BillTo" class="form-check-input" type="checkbox" role="switch" />Show All
                                </div>
                                <select class="form-select" asp-for="MBillToAccountCode" asp-items="@(new SelectList(Model.AccountList,"Value","Text"))">
                                    <option value="">-Select-</option>
                                </select>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="MBuyerAddress" class="form-label">Buyers Address</label>
                                <input asp-for="MBuyerAddress" class="form-control" />
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                <label class="form-label">ShipTo Party Name</label>
                                <div class="form-check form-switch mx-3 w-auto position-absolute d-inline">
                                    <input asp-for="PN1ShipTo" class="form-check-input" type="checkbox" role="switch" />Show All
                                </div>
                                <select class="form-select" asp-for="MShiptoAccountCode" asp-items="@(new SelectList(Model.AccountList,"Value","Text"))">
                                    <option value="">-Select-</option>
                                </select>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="MShipToAddress" class="form-label">ShipTo Address</label>
                                <input asp-for="MShipToAddress" class="form-control" />
                            </div>

                        </div>
                        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-6 col-xs-12 text-end mt-4">
                            <button type="button" class="addMultiBuyers btn btn-sm btn-primary">
                                <i class="fa-solid fa-angles-down fa-fw fa-lg"></i>ADD TO GRID
                            </button>
                        </div>
                    </div>
                </div>

                <div class="progress my-2" style="height: 4px;">
                    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="card">
                    <div class="card-body" id="divMultiBuyerGrid">
                        <partial name="_SOMultiBuyerGrid" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


