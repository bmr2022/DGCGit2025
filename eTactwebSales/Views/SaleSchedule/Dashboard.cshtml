@model eTactWeb.DOM.Models.SSDashboard

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                Sale Schedule - <strong>Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="SaleSchedule" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label class="form-label">From Date</label>
                                <input asp-for="FromDate" maxlength="10" class="form-control" />
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label class="form-label">To Date</label>
                                <input asp-for="ToDate" maxlength="10" class="form-control" />
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label asp-for="SummaryDetail" class="form-label">Summary/Detail</label>
                                <select class="form-select" asp-for="SummaryDetail" onchange="GetSearchData();">
                                    <option value="">-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label asp-for="CustomerName" class="form-label">Customer Name</label>
                                <input asp-for="CustomerName" class="form-control" />
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label asp-for="CustOrderNo" class="form-label">Customer Order</label>
                                <input asp-for="CustOrderNo" class="form-control" />
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                                <label asp-for="SONO" class="form-label">SO No</label>
                                <select class="form-select" asp-for="SONO" asp-items="@(new SelectList(Model.SONOList, "Value", "Text"))">
                                    <option value="0">-Select-</option>
                                </select>
                            </div>
                        </div>

                        <!-- Global Search Box & Status Labels in Same Row -->
                        <div class="row align-items-end mt-2">
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                                <label class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                                <label class="form-label">Global Search</label>
                                <input type="text" class="form-control" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 d-flex justify-content-end">
                                <button class="btn btn-sm btn-outline-info me-3" type="button" onclick="GetSearchData();">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg"></i> SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success me-3" style="padding:3px;height:30px;width:100px;" type="button" id="btnSSExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg"></i> EXCEL
                                </button>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="SaleSchedule" asp-action="Dashboard">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i> RESET
                                </a>
                            </div>
                        </div>

                        <!-- Status Labels in the Same Row -->
                        <div class="row mt-2">
                            <div class="col d-flex align-items-center gap-4">
                                <div class="d-flex align-items-center">
                                    <label class="color-box" style="background-color: #FF0000; width: 20px; height: 20px; display: inline-block;"></label>
                                    <label class="ms-2">UNAPPROVED</label>
                                </div>
                                <div class="d-flex align-items-center">
                                    <label class="color-box" style="background-color: green; width: 20px; height: 20px; display: inline-block;"></label>
                                    <label class="ms-2">APPROVED</label>
                                </div>
                                <div class="d-flex align-items-center">
                                    <label class="color-box" style="background-color: blue; width: 20px; height: 20px; display: inline-block;"></label>
                                    <label class="ms-2">Amendment Approved</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_SSDashboardGrid" />
                </div>
            </div>
            <div class="row g-2 gx-3 totalrows">
                <div class="col-12 text-center mb-1">
                    <strong>Total No Of Rows : <span id="lblSchTotalNoOfDashRows"></span></strong>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-box {
        width: 10px;
        height: 10px;
    }
</style>

@section Scripts
    {
    <script>
        $(function () {
            GetFormRights();
            var date = new Date();
            date.setMonth(date.getMonth());
            date.setDate(1);
            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", date);
            $("#FromDate").on('keydown', function (e) { e.preventDefault(); return false; });
            $("#ToDate").datepicker({ changeMonth: true, changeYear: true, dateFormat: 'dd/mm/yy' });
            $("#ToDate").on('keydown', function (e) { e.preventDefault(); return false; });

            AutoComplete('VSALESCHEDULE', 'CustomerName', 'CustomerName', null);
            AutoComplete('VSALESCHEDULE', 'CustOrderNo', 'CustomerOrderNo', null);
            AutoComplete('VSALESCHEDULE', 'ItemName', 'ItemName', null);

            RowCount();
            $('#SONO').select2();

            CheckSchApproved();
             
            sortTable(1, false);
            // var columnNo = $('.SSGrid th').data('columnno');
        });

        function GetSearchData() {
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    RowCount();
                    CheckSchApproved();
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#divSSGrid tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup');
        });

         $(document).on("click", ".sortCol", function () {
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable('SSGrid',colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('SSGrid',colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function confirmdelete(event) {

            event.preventDefault();
            if (confirm("are you sure you want to delete this entry?")) {
                var linkurl = $(event.currentTarget).attr("href");;
                window.location.href = linkurl;
            }
        }


        function RowCount() {
            var SchRowCount = $('#divDashboardGrid tbody tr').length;
            var SchColumnCount = $('#divDashboardGrid tbody tr td').length;
            if (SchColumnCount > 1) {
                $('#lblSchTotalNoOfDashRows').text(SchRowCount);
            } else {
                $('#lblSchTotalNoOfDashRows').text(0);
            }
        }

        $("#btnSSExcel").click(function () {

            var table = $(".SSGrid");
            if (table.length === 0) {
                console.error("Table element with ID 'SSGrid' not found.");
                return;
            }

            try {
                table.table2excel({
                    filename: "SaleSchduleTable.xls"
                });
            } catch (error) {
                console.error("An error occurred while exporting to Excel:", error);
            }
        });

        function CheckSchApproved() {
            var rowSSGrid = $('#divSSGrid tr').length;

            for (var i = 1; i <= rowSSGrid; i++) {
                var Approved = $('#hiddenSSApproved-' + i).val();
                var AmendApproved = $('#hiddenSSAmendApproved-' + i).val();

                if (Approved == "Y") {
                    $('#SSGridRow-' + i).css("color", "green");
                } else {
                    if (AmendApproved == "Y") {
                        $('#SSGridRow-' + i).css("color", "blue");
                    } else {
                        $('#SSGridRow-' + i).css("color", "#FF0000");
                    }
                }
            }
        }

        function GetFormRights() {
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    if (data != null) {
                        var obj = $.parseJSON(data);

                        if (obj.Result.Table.length == 0) {
                            var rowCounter = $('#divDashboardGrid tr').length;
                            for (var i = 0; i < rowCounter; i++) {
                                $('#viewCursorDiv-' + i).empty();
                                $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#editCursorDiv-' + i).empty();
                                $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#deleteCursorDiv-' + i).empty();
                                $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                            }
                            $("#divDashboardGrid").css("display", "none");
                            $(".totalrows").css("display", "none");
                            $("#SParam").hide();
                        } else {
                             (obj);
                            var optAll = obj.Result.Table[0].OptAll;
                            var optSave = obj.Result.Table[0].OptSave;
                            var optUpdate = obj.Result.Table[0].OptUpdate;
                            var optDelete = obj.Result.Table[0].OptDelete;
                            var optView = obj.Result.Table[0].OptView;
                            var rowCounter = $('#divDashboardGrid tr').length;
                            if (!optAll) {
                                if (!optView) {

                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#viewCursorDiv-' + i).empty();
                                        $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                                    }
                                }
                                if (!optUpdate) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#editCursorDiv-' + i).empty();
                                        $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                                    }
                                }
                                if (!optDelete) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#deleteCursorDiv-' + i).empty();
                                        $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                <span class="fa-stack">
                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                </span>
                                                                                            </a>`);
                                    }
                                }
                                if (!(optUpdate || optDelete || optView)) {
                                    $("#divDashboardGrid").css("display", "none");
                                    $(".totalrows").css("display", "none");
                                    $("#SParam").hide();
                                }
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }

    </script>
    <script src="~/Scripts/table2excel.js"></script>
}
