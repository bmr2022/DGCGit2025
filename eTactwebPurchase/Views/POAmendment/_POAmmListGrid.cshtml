@model eTactWeb.DOM.Models.PODashBoard

<table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0">
    <thead class="bg-gradient card-headerBG text-light">
        <tr>
            <th>Sr#</th>
            <th>Action</th>
            <th>Entry ID</th>
            <th>SO No</th>
            <th>Year</th>
            <th>Customer Name</th>
            <th>Customer Order No</th>
            <th>Order Type</th>
            <th>SO Type</th>
            <th>SO For</th>
            <th>WEF</th>
            <th>SO Close Date</th>
            <th>Currency</th>
            <th>Customer Address</th>
            <th>Delivery Address</th>
            <th>Consignee</th>
            <th>Consignee Address</th>
            <th>Order Amount</th>
            <th>Order Net Amount</th>
            <th>SO Confirm Date</th>
            <th>Approved</th>
            <th>SO Complete</th>
            <th>Approved Date</th>
            <th>CC</th>
            <th>Updated On</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @{
            var @Cntr = 0;
            if (Model.PODashboard == null || Model.PODashboard.Count == 0)
            {
                <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
            }
            else
            {
                foreach (var item in Model.PODashboard)
                {
                    Cntr = Cntr + 1;
                    <tr>
                        <td class="FWB">@Cntr</td>
                        <td style="text-align:center;">
                            <a onclick="location.href='@Url.Action("SOAmendment",new{Mode="U",EID=item.EID})'">
                                <i class="fa-solid fa-floppy-disk-pen fa-fw fa-2x" style="--fa-secondary-color: crimson; --fa-secondary-opacity: 1.0;"></i>
                            </a>
                        </td>
                        <td class="FWB">@item.EntryID</td>
                        <td class="FWB">@item.PONo</td>
                        <td>@item.YearCode</td>
                        <td>@item.VendorName</td>
                        <td>@item.PONO</td>
                        <td>@item.OrderType</td>
                        <td>@item.POType</td>
                        <td>@item.POFor</td>
                        <td>@item.WEF</td>
                        <td>@item.POCloseDate</td>
                        <td>@item.Currency</td>
                        <td>@item.VendorAddress</td>
                        <td>@item.OrderAmt</td>
                        <td>@item.OrderNetAmt</td>
                        <td>@item.Approved</td>
                        <td>@item.POComplete</td>
                        <td>@item.ApprovedDate</td>
                        <td>@item.CC</td>
                        <td>@item.UpdatedOn</td>
                        <td>@item.CreatedOn</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
<script>
    $('#fa-floppy-disk-pen').click(function(){
        $(this)
    });
</script>