@model eTactWeb.DOM.Models.IndentRegisterModel

<div class="card-body table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Action</th>
                <th>Sr#</th>

               
                <th data-columnno="1" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indent No</th>
                <th data-columnno="2" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indent Date</th>
                <th data-columnno="3" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Item/Service</th>
                <th data-columnno="4" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Item Name</th>
                <th data-columnno="5" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Part Code</th>
                <th data-columnno="6" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Specification</th>
                <th data-columnno="7" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Item Description</th>
                <th data-columnno="8" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indent Qty</th>
                <th data-columnno="9" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Unit</th>
                <th data-columnno="10" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Total PO Qty</th>
                <th data-columnno="11" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Pending Qty for PO</th>
                <th data-columnno="12" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Req Date</th>
                <th data-columnno="13" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Model</th>
                <th data-columnno="14" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Size</th>
                <th data-columnno="15" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Color</th>
                <th data-columnno="16" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Item Remark</th>
                <th data-columnno="17" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Approved Value</th>
                <th data-columnno="18" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Alt Qty</th>
                <th data-columnno="19" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Alt Unit</th>
                <th data-columnno="20" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Store Name</th>
                <th data-columnno="21" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Total Stock</th>
                <th data-columnno="22" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Vendor1</th>
                <th data-columnno="23" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Vendor2</th>
                <th data-columnno="24" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> For Department</th>
                <th data-columnno="25" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indentor Name</th>
                <th data-columnno="26" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indent Remark</th>
                <th data-columnno="27" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Indent Completed</th>
                <th data-columnno="28" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Canceled</th>
                <th data-columnno="29" class="sortCol" data-sortorder="asc"><span class="sort-icon"><i class="fa"></i></span> Closed</th>
            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                if (Model.IndentRegisterGrid == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.IndentRegisterGrid)
                    {
                        Cntr = Cntr + 1;

                        <tr id="@Cntr" onclick="selection(this)">
                            <td>
                                <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <td>@Cntr</td>
                            <td>@item.IndentNo</td>
                            <td>@item.IndentDate</td>
                            <td>@item.itemservice</td>
                            <td>@item.ItemNameOnly</td>
                            <td>@item.PartCode</td>
                            <td>@item.Specification</td>
                            <td>@item.ItemDescription</td>
                            <td>@item.IndentQty</td>
                            <td>@item.Unit</td>
                            <td>@item.TotalPOQty</td>
                            <td>@item.PendQtyForPO</td>
                            <td>@item.ReqDate</td>
                            <td>@item.Model</td>
                            <td>@item.Size</td>
                            <td>@item.Color</td>
                            <td>@item.ItemRemark</td>
                            <td>@item.Approvalue</td>
                            <td>@item.AltQty</td>
                            <td>@item.AltUnit</td>
                            <td>@item.StoreName</td>
                            <td>@item.TotalStock</td>
                            <td>@item.Account_Name</td>
                            <td>@item.Account_Name2</td>
                            <td>@item.DeptName</td>
                            <td>@item.IndentorName</td>
                            <td>@item.IndentRemark</td>
                            <td>@item.IndentCompleted</td>
                            <td>@item.canceled</td>
                            <td>@item.closed</td>

                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>

<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }
</style>
