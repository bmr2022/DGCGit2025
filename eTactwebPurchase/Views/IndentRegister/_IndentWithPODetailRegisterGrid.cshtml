                            <td>@item.ReqDate?.Split(' ')[0]</td>
                            <td>@item.POVendorName</td>
                            <td>@item.PONO</td>
                            <td>@item.PODate?.Split(' ')[0]</td>
                            <td>@item.Model</td>
                            <td>@item.Size</td>
                            <td>@item.Color</td>
                            <td>@item.ItemRemark</td>
                            <td>@item.Approvalue</td>
                            <td>@item.AltQty</td>
                            <td>@item.AltUnit</td>
                            <td>@item.StoreName</td>
                            <td>@item.TotalStock</td>
                            <td>@item.Account_Name</td>
                            <td>@item.Account_Name2</td>
