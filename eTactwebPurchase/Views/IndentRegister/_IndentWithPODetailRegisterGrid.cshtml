        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                if (Model.IndentRegisterGrid == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.IndentRegisterGrid)
                    {
                        Cntr = Cntr + 1;

                        <tr id="@Cntr" onclick="selection(this)">

                            <th>@Cntr</th>

                            <td>@item.IndentNo</td>
                            <td>@item.IndentDate?.Split(' ')[0]</td>
                            <td>@item.itemservice</td>
                            <td>@item.ItemName</td>
                            <td>@item.PartCode</td>
                            <td>@item.Specification</td>
                            <td>@item.ItemDescription</td>
