        }

        function FillItemName() {
             
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            $.ajax({
                url: '@Url.Action("GetItemName", "IndentRegister")',
                data:
                    {
                    "FromDate": FromDate,
                    "ToDate": ToDate,
                    },
