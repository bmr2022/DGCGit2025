@model eTactWeb.DOM.Models.PORegisterModel
<div class="table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Action</th>
                <th>Sr#</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="1">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PartyName
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="2">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PONO
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="3">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PODate
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="4">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ItemName
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="5">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PartCode
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="6">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PORate
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="7">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Currency
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="8">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POQty
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="9">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>DisPer
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="10">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>DisAmt
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="11">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POValue
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="12">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POEffDate
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="13">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POCloseDate
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="14">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POEntryId
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="15">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>YearCode
                </th>

            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;
                if (Model.PORegisterDetails == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.PORegisterDetails)
                    {
                        Cntr = Cntr + 1;

                        <tr id="SAGridRow-@Cntr">
                            <td>
                                <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <th>@srNo</th>
                            <td>@item.PartyName</td>
                            <td>@item.PONO</td>
                            <td>@(item.PODate == null ? string.Empty : item.PODate.Split(" ")[0])</td>
                            <td>@item.ItemName</td>
                            <td>@item.PartCode</td>
                            <td style="background-color:#ebd9c6">@item.PORate</td>
                            <td>@item.Currency</td>
                            <td id="POQty-@Cntr">@item.POQty</td>
                            <td>@item.DisPer</td>
                            <td>@item.DisAmt</td>
                            <td id="POValue-@Cntr">@item.POValue</td>
                            <td>@(item.POclosedate == null ? string.Empty : item.POclosedate.Split(" ")[0])</td>
                            <td>@(item.poAmmeffdate == null ? string.Empty : item.poAmmeffdate.Split(" ")[0])</td>
                            <td>@item.POEntryId</td>
                            <td>@item.PoYear</td>

                        </tr>
                        srNo++;
                    }
                }
            }

        </tbody>
    </table>
</div>
@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
    <center><strong>TOTAL ROWS: <span>@displayedRows</span></strong></center>
}
<style>
    #divStockRegisterBody {
        background-color: #d9f2e6;
    }
</style>