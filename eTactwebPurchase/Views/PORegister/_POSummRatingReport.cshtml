@model eTactWeb.DOM.Models.PORegisterModel
<div class="table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Action</th>
                <th>Sr#</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="1">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Item Name
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="2">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Part Code
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="3">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Currency
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="4">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Qty
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="5">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Value
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="6">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>REC Qty
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="7">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rec Value
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="8">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>QC OK Qty
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="9">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Bal Qty
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="10">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Bal Value
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="11">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rating
                </th>
                <th class="sortCol" data-sortorder="asc" data-columnno="12">
                    <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Party Name
                </th>

            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;
                if (Model.PORegisterDetails == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.PORegisterDetails)
                    {
                        Cntr = Cntr + 1;

                        <tr id="SAGridRow-@Cntr" class="po-row">
                            <td>
                                <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <th>@srNo</th>
                            <td>@item.ItemName</td>
                            <td>@item.PartCode</td>
                            <td>@item.Currency</td>
                            <td>@item.POQty</td>
                            <td>@item.POValue</td>
                            <td>@item.RECQty</td>
                            <td>@item.RecValue</td>
                            <td>@item.QCOKQty</td>
                            <td>@item.BalQty</td>
                            <td>@item.BalValue</td>
                            <td>@item.Rating</td>
                            <td>@item.PartyName</td>

                        </tr>
                        srNo++;
                    }
                }
            }

        </tbody>
    </table>
</div>
@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
    <center><strong>TOTAL ROWS: <span>@displayedRows</span></strong></center>
}
<style>
    #divStockRegisterBody {
        background-color: #e6ffee;
    }
</style>