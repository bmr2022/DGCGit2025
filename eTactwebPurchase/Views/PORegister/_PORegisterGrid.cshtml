@model eTactWeb.DOM.Models.PORegisterModel
@if (Model.ReportMode == "PO vs Receiving Detail ( GateMRNQC)")
{
    <partial name="_POSummaryReport" />
}
else if (Model.ReportMode == "LIST OF PO")
{
    <partial name="_ListOfPOReport" />
}
else if (Model.ReportMode == "SUMMRATEING")
{
    <partial name="_POSumRatingReport" />
}
else if (Model.ReportMode == "LISTOFSCHEDULESUMMARY")
{
    <partial name="_ListOfPOSummaryReport" />
}
else if (Model.ReportMode == "LISTOFSCHEDULE")
{
    <partial name="_ListOfSchduleReport" />
}
else if (Model.ReportMode == "CONSOLIDATED")
{
    <partial name="_POConsolidatedReport" />
}
else if (Model.ReportMode == "PARTYWISECONSOLIDATED")
{
    <partial name="_POPartyWiseConsolidatedReport" />
}
else if (Model.ReportMode == "ITEMWISECONSOLIDATED")
{
    <partial name="_POItemWiseConsolidatedReport" />
}
else if (Model.ReportMode == "PRICEHISTORY")
{
    <partial name="_POPriceHistoryReport" />
}
else if (Model.ReportMode == "Order vs Dispatch")
{
    <partial name="_POOrderDispatchReport" />
}

else
{
    <div class="table-responsive" style="max-height:300px;overflow-y:auto;">
        <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
            <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashRThead">
                <tr>
                    <th>Action</th>
                    <th>Sr#</th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="1">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PONO
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="2">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="3">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Type
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="4">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Eff Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="5">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Close Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="6">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Amm Eff Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="7">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Order Type
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="8">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Vendor
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="9">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Part Code
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="10">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Item Name
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="11">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Unit
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="12">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Rate
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="13">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Dis %
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="14">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Dis Amt
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="15">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Item Amount
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="16">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Ammendment No
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="17">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Ammendment Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="18">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Ass Rate
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="19">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Delivery Terms
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="20">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Delivery Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="21">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO Qty
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="22">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PO FOR
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="23">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Currency
                    </th>
                 
                    <th class="sortCol" data-sortorder="asc" data-columnno="25">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Amm Date
                    </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="26">
                        <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>HSN No
                    </th>

                </tr>
            </thead>
            <tbody id="divStockRegisterBody">
                @{
                    var @Cntr = 0;
                    int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                    int srNo = srNoStart + 1;
                    if (Model.PORegisterDetails == null)
                    {
                        <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.PORegisterDetails)
                        {
                            Cntr = Cntr + 1;

                            <tr id="SAGridRow-@Cntr" onclick="selection(this)">
                                <td>
                                    <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </td>
                                <th>@srNo</th>
                                <td style="background-color: #e09ef0;">@item.PONO</td>
                                <td>@item.PODate</td>
                                <td>@item.POtype</td>
                                <td>@item.POEffDate</td>
                                <td>@item.POclosedate</td>
                                <td>@item.poAmmeffdate</td>
                                <td>@item.ordertype</td>
                                <td>@item.VendorName</td>
                                <td>@item.PartCode</td>
                                <td>@item.ItemName</td>
                                <td>@item.unit</td>
                                <td>@item.Rate</td>
                                <td>@item.DisPer</td>
                                <td>@item.DisAmt</td>
                                <td>@item.ItemAmount</td>
                                <td>@item.Ammno</td>
                                <td>@item.AmmDate</td>
                                <td>@item.Assrate</td>
                                <td>@item.Deliveryterms</td>
                                <td>@item.deliveryDate</td>
                                <td>@item.POQty</td>
                                <td>@item.POFOR</td>
                                <td>@item.Currency</td>
                                <td>@item.AmmDate</td>
                                <td>@item.HSNNO</td>


                            </tr>
                            srNo++;
                        }
                    }
                }

            </tbody>
        </table>
    </div>
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
    <center><strong>TOTAL ROWS  : <span>@displayedRows</span></strong></center>
}
@{
    int totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);
}
@if (Model.TotalRecords > 0)
{
    <ul class="pagination d-flex align-items-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber - 1)); return false;">Previous</a>
            </li>
        }

        @if (Model.PageNumber > 3)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(1); return false;">1</a>
            </li>
            <li class="page-item disabled"><a class="page-link">...</a></li>
        }

        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageNumber + 2, totalPages); i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="#" onclick="loadPage(@i); return false;">@i</a>
            </li>
        }

        @if (Model.PageNumber < totalPages - 2)
        {
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@totalPages); return false;">@totalPages</a>
            </li>
        }

        @if (Model.PageNumber < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber + 1)); return false;">Next</a>
            </li>
        }
    </ul>
}
<style>

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }

</style>


