                            </th>
                            <th class="sortCol" data-sortorder="asc" data-columnno="36">
                                <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>GST %
                            </th>
                       <th class="sortCol" data-sortorder="asc" data-columnno="36">
                                <span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>POType
                            </th>
                       
                   

            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;
                if (Model.PORegisterDetails == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.PORegisterDetails)
                    {
                        Cntr = Cntr + 1;

                        <tr id="SAGridRow-@Cntr" class="po-row" data-active="@item.Active">
                            <td>
                                <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <th>@srNo</th>
                            <td>@item.VendorName</td>
                            <td style="background-color: #e09ef0;">@item.PONO</td>
                            <td>@item.POYearCode</td>
                            <td>@item.PODate.Split(" ")[0]</td>
                            <td>@item.POFOR</td>
                            <td class="sch-fields">@item.SchNO</td>
                            <td class="sch-fields">@item.Schdate.Split(" ")[0]</td>
                            <td class="sch-fields">@item.SchYear</td>
                            <td>@item.PartCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.Currency</td>
                            <td>@item.PORate</td>
                            <td id="POQty-@Cntr">@item.POQty</td>
                            <td id="PendQty-@Cntr" class="PendQty" style="background-color:#c6ebd9">@item.PendQty</td>
                            <td>@item.DisPer</td>
                            <td>@item.DisAmt</td>
                            <td>@item.POAmount</td>
                            <td>@item.Oldrate</td>
                            <td>@item.MRNNo</td>
                            <td>@item.MRNDATE.Split(" ")[0]</td>
                            <td>@item.GateNo</td>
                            <td>@item.GateYearCode</td>
                            <td>@item.GateDate.Split(" ")[0]</td>
                            <td>@item.BillQty</td>
                            <td id="RECQty-@Cntr">@item.RECQty</td>
                            <td>@item.AcceptedQty</td>
                            <td>@item.InvNo</td>
                            <td>@item.INVDate.Split(" ")[0]</td>
                            <td>@item.MIRNo</td>
                            <td>@item.MIRDate.Split(" ")[0]</td>
                            <td>@item.BatchNo</td>
                            <td>@item.UniqueBatchno</td>
                            <td>@item.ItemGroup</td>
                            <td>@item.ItemCategory</td>
                            <td>@item.DOMESTICIMPORT</td>
                            <td>@item.GSTAmt</td>
                            <td>@item.GSTPer</td>
                            <td class ="POtype" style="background-color:#ebd9c6">@item.POtype</td>


                                                      
                        </tr>
                        srNo++;
                    }
                }
            }
        </tbody>
    </table>
</div>
@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
    <center><strong>TOTAL ROWS: <span>@displayedRows</span></strong></center>
}
<style>
    #divStockRegisterBody {
        background-color: #ffebe6;
    }
</style>