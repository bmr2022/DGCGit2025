            //ENTRYID
            debugger
            $.ajax({
                type: "GET",
                url: "@Url.Action("PoallowtoprintWithoutApproval")",
                dataType: "json",
                async: false,
                
                success: function (result, status, error) {
                    debugger
                    if (result != null) {
                        var obj = $.parseJSON(result);
                        $('#PoallowtoprintWithoutApproval').val(obj.Result.Table[0].PoallowtoprintWithoutApproval);
                       
                    }
                }
