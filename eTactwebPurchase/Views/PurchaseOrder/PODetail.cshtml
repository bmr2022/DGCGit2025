                            EXPORT
                        </a>
                        <a type="button" class="btn btn-sm btn-outline-light bg-gradient" asp-action="PrintReport" asp-controller="PurchaseOrder" asp-route-EntryId="@Model.EntryID" asp-route-YearCode="@Model.YearCode" asp-route-PONO="@Model.PONo">
                            <i class="fa fa-pencil-square fa-fw fa-lg" aria-hidden="true"></i>
                            PRINT
                        </a>

                        <div class="col-auto">
                            <button type="button" class="PartialSave btn btn-secondary btn-sm mr-2" style="color:white!important;margin-right:5px;">
                                <i class="fa-regular fa-pen-to-square" style="--fa-secondary-color: crimson; --fa-secondary-opacity: 1.0;"></i>
                                PARTIAL SAVE
                            </button>
                        </div>
