@model eTactWeb.DOM.Models.PurchaseOrderModel

@{
    if (Model.ItemDetailGrid == null || !Model.ItemDetailGrid.Any())
    {
        <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
    }
    else
    {
        for (int i = 0; i < Model.ItemDetailGrid.Count; i++)
        {
            var item = Model.ItemDetailGrid[i];
            <tr>
                <td>@(i + 1)</td>

                <td>
                    <input type="checkbox" class="row-select"
                           id="MBCheckbox-@i"
                           name="model[@i].IsSelected"
                           value="true" />
                </td>

                <td style="background-color:#e09ef0;">
                    <input type="text" id="PartText-@i"
                           name="model[@i].PartText"
                           value="@item.PartText" readonly />

                    <input type="hidden" id="ItemCode-@i" name="model[@i].ItemCode" value="@item.ItemCode" />
                    <input type="hidden" id="Amount-@i" name="model[@i].Amount" value="@item.Amount" />
                    <input type="hidden" id="VehicleNo-@i" name="model[@i].VehicleNo" value="@item.VehicleNo" />
                    <input type="hidden" id="ItemGroupName-@i" name="model[@i].ItemGroupName" value="@item.ItemGroupName" />
                    <input type="hidden" id="ItemLocation-@i" name="model[@i].ItemLocation" value="@item.ItemLocation" />
                    <input type="hidden" id="Unit-@i" name="model[@i].Unit" value="@item.Unit" />
                    <input type="hidden" id="HSNNo-@i" name="model[@i].HSNNo" value="@item.HSNNo" />
                </td>

                <td>
                    <input type="text" id="ItemText-@i"
                           name="model[@i].ItemText"
                           value="@item.ItemText"
                           style="width:350px" readonly />
                </td>

                <td>
                    <input id="Rate-@i" type="number"
                           name="model[@i].Rate"
                           value="@item.Rate" style="width:70px" />
                </td>

                <td>
                    <input id="SORate-@i" type="number"
                           name="model[@i].SORate"
                           value="@item.SORate" style="width:70px" />
                </td>

                <td>
                    <input type="number" id="Balance-@i"
                           name="model[@i].Balance"
                           value="@item.Balance" style="width:70px" readonly/>
                </td>

                <td>
                    <input type="number" id="MinLevel-@i"
                           name="model[@i].MinLevel"
                           value="@item.MinLevel" style="width:60px" readonly />
                </td>

                <td>
                    <input type="number" id="MaxLevel-@i"
                           name="model[@i].MaxLevel"
                           value="@item.MaxLevel" style="width:60px" readonly/>
                </td>

                <td>
                    <input type="number" id="POQty-@i"
                           name="model[@i].POQty"
                           value="@item.POQty" style="width:70px" />
                </td>
            </tr>
        }
    }
}
