@model eTactWeb.DOM.Models.PODashBoard
<div class="table-responsive" style="max-height:350px;">
    <table class="table table-bordered TbCss text-nowrap mb-0" id="PODashboardGrid">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashPOThead">
            <tr>
                <th>Sr#</th>
                <th>Action</th>
                <th data-columnno="2"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Entry ID</th>
                <th data-columnno="3"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Amm No</th>
                <th data-columnno="4"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>PO No</th>
                <th data-columnno="5"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>PO Date</th>
                <th data-columnno="6"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>PO type</th>
                <th data-columnno="7"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>PO For</th>
                <th data-columnno="8"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>WEF</th>
                <th data-columnno="9"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>FOC</th>
                <th data-columnno="10"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>PO Close Date</th>
                <th data-columnno="11"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Payment Terms</th>
                <th data-columnno="12"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Currency</th>
                <th data-columnno="13"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Vendor Name</th>
                <th data-columnno="14"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Delivery Address</th>
                <th data-columnno="15"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Order type</th>
                <th data-columnno="16"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Service</th>
                <th data-columnno="17"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Created on</th>
                <th data-columnno="18"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa fa-sort-asc ascCol" aria-hidden="true"></i><i class="fa fa-sort-desc descCol" aria-hidden="true"></i></span>Updated on</th>


            </tr>
        </thead>
        <tbody id="divDashboardGrid">
            @{
                var @Cntr = 0;
                if (Model.PODashboard == null || Model.PODashboard.Count == 0)
                {
                    <tr class="text-center"><td colspan="18" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.PODashboard)
                    {
                        Cntr = Cntr + 1;
                        <tr id="approvedRow-@Cntr">
                            <td class="FWB">
                                @Cntr
                                <input type="hidden" id="approvedOrNot-@Cntr" value="@item.Approved" />
                                <input type="hidden" id="fLevelApproved-@Cntr" value="@item.Approval1Levelapproved" />
                                <input type="hidden" id="AmmApproved-@Cntr" value="@item.ApproveAmm" />
                            </td>
                            @{
                                if (Model.Mode == "Pending")
                                {
                                    <td style="text-align:center;">
                                        <a onclick="location.href='@Url.Action("PODetail",new{Mode="POA",ID=item.EntryID,YC=item.YearCode})'">
                                            <i class="fa-solid fa-floppy-disk-pen fa-fw fa-2x" style="--fa-secondary-color: crimson; --fa-secondary-opacity: 1.0;"></i>
                                        </a>
                                    </td>
                                }
                                if (Model.Mode == "U")
                                {
                                    <td style="text-align:center;">
                                        <a onclick="location.href='@Url.Action("PODetail",new{Mode="PAU",ID=item.EntryID,YC=item.YearCode})'">
                                            <i class="fa-solid fa-floppy-disk-pen fa-fw fa-2x" style="--fa-secondary-color: crimson; --fa-secondary-opacity: 1.0;"></i>
                                        </a>
                                    </td>
                                }
                                if (Model.Mode == "Completed")
                                {
                                    <td style="text-align:center;">
                                        <a id="AmmCompleteView-@Cntr" onclick="location.href='@Url.Action("ViewPOCompleted",new{Mode="POC",ID=item.EntryID,YC=item.YearCode})'">
                                            <i class="fa-solid fa-eye fa-fw fa-2x" style="--fa-secondary-color: crimson; --fa-secondary-opacity: 1.0;"></i>
                                        </a>
                                    </td>
                                }
                            }
                            <td class="FWB">@item.EntryID</td>
                            <td class="FWB">@item.AmmNo</td>
                            <td class="FWB">@item.PONo</td>
                            @if (item.PODate != null)
                            {
                                <td>@item.PODate.Split(" ")[0]</td>
                            }
                            else
                            {
                                <td>@item.PODate</td>
                            }
                            <td>@item.POType</td>
                            <td>@item.POFor</td>
                            @if (item.WEF != null)
                            {
                                <td>@item.WEF.Split(" ")[0]</td>
                            }
                            else
                            {
                                <td>@item.WEF</td>
                            }
                            <td>@item.FOC</td>
                            @if (item.POCloseDate != null)
                            {
                                <td>@item.POCloseDate.Split(" ")[0]</td>
                            }
                            else
                            {
                                <td>@item.POCloseDate</td>
                            }
                            <td>@item.PaymentTerms</td>
                            <td>@item.Currency</td>
                            <td>@item.VendorName</td>
                            <td>@item.VendorAddress</td>
                            <td>@item.OrderType</td>
                            <td>@item.POTypeServItem</td>
                            <td>@item.CreatedOn</td>
                            <td>@item.UpdatedOn</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

</div>
<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px; /* Adjust margin as needed */
        }

    #PODashboardGrid {
        width: 100%;
        border-collapse: collapse;
    }

    #dashPOThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tbody td {
        /* Table cell styles */
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }
</style>