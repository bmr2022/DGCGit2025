@model eTactWeb.DOM.Models.MIRQDashboard

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                MATERIAL INSPECTION REPORT - <strong>Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="PendingMRNtoQc" asp-controller="PendingMRNtoQc" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">From Date</label>
                                        <input asp-for="FromDate" maxlength="10" class="form-control" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label">To Date</label>
                                        <input asp-for="ToDate" maxlength="10" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="DashboardType" class="form-label">Dashboard Type</label>
                                <select asp-for="DashboardType" class="form-select" onchange="GetSearchData();">
                                    <option value="" disabled>-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="VendorName" class="form-label">Vendor Name</label>
                                <input asp-for="VendorName" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="MRNNo" class="form-label">MRN No</label>
                                <select class="form-select" asp-for="MRNNo" asp-items="@(new SelectList(Model.MRNList,"Value","Text"))">
                                    <option value=''>-Select-</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="GateNo" class="form-label">Gate No</label>
                                <select class="form-select" asp-for="GateNo" asp-items="@(new SelectList(Model.GateList,"Value","Text"))">
                                    <option value=''>-Select-</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="MIRNo" class="form-label">MIR No</label>
                                <select class="form-select" asp-for="MIRNo" asp-items="@(new SelectList(Model.MIRList,"Value","Text"))">
                                    <option value=''>-Select-</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="PartCode" class="form-label">PartCode</label>
                                <input asp-for="PartCode" class="form-control" />
                            </div>
                         
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label class="form-label">Global search</label>
                                <input type="text" class="form-control" asp-for="Searchbox" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 d-flex justify-content-end mt-3">
                                <button class="btn btn-sm btn-outline-info" type="button" onclick="GetSearchData();">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                </button>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="MIR" asp-action="MIRDashboard" style="padding:3px;height:30px;width:100px;margin-left:20px;">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                </a>
                            </div>


                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_MIRDashboardGrid" />
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
             
            var FromDateBack = sessionStorage.getItem('FromDateBack');
            var ToDateBack = sessionStorage.getItem('ToDateBack');
            var ItemNameBack = sessionStorage.getItem('ItemNameBack');
            var MRNNoBack = sessionStorage.getItem('MRNNoBack');
            var VendorNameBack = sessionStorage.getItem('VendorNameBack');
            if (DashboardTypeBack != null) {
                var DashboardTypeBack = sessionStorage.getItem('DashboardTypeBack');
                var Searchbox = sessionStorage.getItem('Searchbox');
            }
            var dashGrid = $('#MIRTbody tr').length;
            $('#totalRows').text(dashGrid);

            var currentDate = new Date();

            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);

            //$('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');


            AutoComplete('VMIRMainDetail', 'VendorName', 'Account_Name', null);
            AutoComplete('VMIRMainDetail', 'ItemName', 'item_name', null);
            AutoComplete('VMIRMainDetail', 'PartCode', 'partcode', null);
            $('#MIRNo').select2();
            $('#GateNo').select2();
            $('#MRNNo').select2();

            if (FromDateBack != null) {
                 
                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#VendorName').val(VendorNameBack);
                $('#ItemName').val(ItemNameBack);
                $('#MRNNo').val(MRNNoBack);
            }
            if (DashboardTypeBack != null) {
                $('#DashboardType').val(DashboardTypeBack);
                $('#Searchbox').val(Searchbox);

            }
            GetSearchData();
        });

        function formatDate(date) {
            var day = ("0" + date.getDate()).slice(-2);
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var year = date.getFullYear();
            var dateString = day + "/" + month + "/" + year;
            return dateString;
        }

        function BackButtonData(event, MRNNo, YearCode) {

            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&VendorName=" + $('#VendorName').val() + "&MRNNo=" + $('#MRNNo').val() + "&PartCode=" + "&ItemName=" + $('#ItemName').val();
            window.location.href = linkUrl;
        }

        function GetSearchData() {
             
            if ($('#DashboardType').val() == "Summary") {
                GetSummaryData();
            } else {
                GetDetailData();
            }
        }

        function GetSummaryData() {

            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                success: function (data) {

                    $('#divDashboardGrid').empty().append(data);
                    var dashGrid = $('#MIRTbody tr').length;
                    $('#totalRows').text(dashGrid);
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function GetDetailData() {
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetDetailData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                async: false,
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    var dashGrid = $('#MIRTbody tr').length;
                    $('#totalRows').text(dashGrid);
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }
        function confirmEdit(event, EntryId, YearCode) {

            event.preventDefault();
            CheckEditOrDelete(event, EntryId, YearCode);
        }

        function confirmDelete(event, EntryId, YearCode) {
             
            event.preventDefault();
            if (confirm("Are you sure you want to delete this entry?")) {
                CheckEditOrDelete(event, EntryId, YearCode);
            }
        }

        function CheckEditOrDelete(event, EntryId, YearCode) {
             
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("CheckEditOrDelete")',
                type: "POST",
                data: { "EntryId": EntryId, "YearCode": YearCode },
                async: false,
                success: function (data) {
                     
                    var obj = $.parseJSON(data);
                    if (obj.Result.Table > 0) {

                        if ((obj.Result.Table[0].TransactionType == '' || obj.Result.Table[0].TransactionType == null) && (obj.Result.Table[0].TransDate == '' || obj.Result.Table[0].TransDate == null) && (obj.Result.Table[0].TRansNo == '' || obj.Result.Table[0].TRansNo == null)) {
                            var linkUrl = $(event.currentTarget).attr("href");
                            window.location.href = linkUrl;
                        }
                        else {
                            var transType = obj.Result.Table[0].TransactionType;
                            var transDate = obj.Result.Table[0].TransDate;
                            var transNo = obj.Result.Table[0].TRansNo;
                            transDate = formattedDate(transDate);
                            $.notify("Transaction done!!!  Transaction Type = " + transType + " on " + transDate + " and Trans No = " + transNo + "", "error");
                            return false;
                        }
                    }
                    else {
                        var linkUrl = $(event.currentTarget).attr("href");
                        linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&VendorName=" + $('#VendorName').val() + "&ItemName=" + $('#ItemName').val() + "&MRNNo=" + $('#MRNNo').val() + "&DashboardType=" + $('#DashboardType').val() + "&Searchbox=" + $('#search-box').val();
                        window.location.href = linkUrl;
                    }

                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function formattedDate(dateString) {
            var dateObject = new Date(dateString);

            // Get the components of the date
            var day = dateObject.getDate();
            var month = dateObject.getMonth() + 1; // Months are zero-based
            var year = dateObject.getFullYear();

            // Pad the day and month with leading zeros if needed
            day = day < 10 ? '0' + day : day;
            month = month < 10 ? '0' + month : month;

            // Form the formatted date string
            var formattedDate = day + '/' + month + '/' + year;

            return formattedDate;
        }

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#MIRTbody tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup'); // Reset search box and trigger the search
        });


        $('#sendToExcel').click(function () {
            $("#MIRTable").table2excel({
                filename: "MIRData.xls"
            });
        });

        $(document).on("click", ".sortCol", function () {

            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');
            if (currentOrder === 'asc') {
                sortTable(colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow'); // Visual indication of descending order
                //$(this).css('font-size', 'larger'); // Visual indication of descending order
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable(colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger'); // Visual indication of ascending order
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });
        function sortTable(columnIndex, ascending) {

            var table = $('#MIRTable');
            var rows = table.find('#MIRTbody > tr').toArray();

            rows.sort(function (a, b) {
                var aValue = $(a).find('td').eq(columnIndex).text();
                var bValue = $(b).find('td').eq(columnIndex).text();

                var aIntValue = 0;
                var bIntValue = 0;
                if (/^\d*\.?\d+$/.test(aValue) && /^\d*\.?\d+$/.test(bValue)) {
                    aIntValue = parseInt(aValue, 10);
                    bIntValue = parseInt(bValue, 10);
                }

                if (aIntValue > 0) {
                    if (ascending) {
                        return aValue - bValue;
                    } else {
                        return bValue - aValue;
                    }
                } else {
                    if (ascending) {
                        return aValue.localeCompare(bValue);
                    } else {
                        return bValue.localeCompare(aValue);
                    }
                }
            });

            $.each(rows, function (index, row) {
                table.children('#MIRTbody').append(row);
            });
        }
        function selection(CurrentRow) {

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#MIRTbody tr").not(CurrentRow).css({ 'background-color': '' });
        }
         function GetFormRights() {
             console.log("call right");
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    console.log("data of right",data);
                    if (data != null) {

                        var obj = $.parseJSON(data);
                        if (obj.Result.Table.length == 0) {
                            //$("#submitBTN").prop("disabled", true);
