@model eTactWeb.DOM.Models.MirModel

@if (Model.ItemDetailGrid == null)
{
    <tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.ItemDetailGrid)
    {
        <input type="hidden" id="ItemCode-@item.SeqNo" data-ItemGrid="@item.ItemCode" />
        <tr class="small" style="white-space:nowrap" id="MIRRowGrid-@item.SeqNo">
            <td style="white-space:nowrap;">
                
                    <a class="table-link link-primary" id="BtnEdit-@item.SeqNo" onclick="EditItemRowFromGrid(@item.SeqNo)">
                        <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@item.PartCode</td>
            <td>@item.ItemName</td>
            <td>@item.BillQty</td>
            <td>@item.RecQty</td>
            <td>@item.AcceptedQty</td>
            <td>@item.AltAcceptedQty</td>
            <td>@item.OkRecStoreName</td>
            <td>@item.RejectedQty</td>
            <td>@item.AltRejectedQty</td>
            <td>@item.RejRecStoreName</td>
            <td>@item.HoldQty</td>
            <td>@item.HoldStoreName</td>
            <td>@item.ReworkQty</td>
            <td>@item.RewokStoreName</td>
            <td>@item.DeviationQty</td>
            <td>@item.ResponsibleEmpForDeviation</td>
            <td>@item.PONo</td>
            <td>@item.POYearCode</td>
            <td>@item.SchNo</td>
            <td>@item.SchYearCode</td>
            <td>@item.Unit</td>
            <td>@item.AltUnit</td>
            <td>@item.ALtRecQty</td>
            <td>@item.Remarks</td>
            <td>@item.DefaultType</td>
            <td>@item.ApprovedByEmp</td>
            <td>@item.ProcessId</td>
            <td>@item.Color</td>
            <td>@item.ItemSize</td>
            <td>@item.ResponsibleFactor</td>
            <td>@item.SupplierBatchNo</td>
            <td>@item.ShelfLife</td>
            <td>@item.BatchNo</td>
            <td>@item.UniqueBatchNo</td>
            <td>@item.AllowDebitNote</td>
            <td>@item.PathOfFileURL</td>

        </tr>
    }
}