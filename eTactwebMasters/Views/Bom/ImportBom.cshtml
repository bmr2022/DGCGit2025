        function ExportBom() {
            var table = document.getElementById('itemtable');
            var cloneTable = table.cloneNode(true);

            var headerRow = cloneTable.getElementsByTagName('thead')[0].getElementsByTagName('tr')[0];

            headerRow.deleteCell(0);

            cloneTable.getElementsByTagName('tbody')[0].remove();

            var wb = XLSX.utils.table_to_book(cloneTable, { sheet: "Sheet 1" });

            XLSX.writeFile(wb, "ImportBOMFormat.xlsx");
        }


