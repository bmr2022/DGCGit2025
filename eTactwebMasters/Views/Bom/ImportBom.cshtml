        function DeleteItemRow(seqNo) {
            //var Indx = parseInt(seqNo) - 1;
            //$('.' + seqNo).remove();
             
            var $row = $('.' + seqNo);
            if ($row.length) {
                // Delete the row
                $row.remove();

                // Reset IDs in sequence for remaining rows
                var $table = $('#divItemList'); // Replace with your table's ID
                var $rows = $table.find('tr');

                $rows.each(function (index) {
                    var $currentRow = $(this);
                    $currentRow.attr('class', (index + 1)); // Reset row class

                    // Reset IDs for elements inside the row
                    $currentRow.find('[id^="FGPartCode-"]').attr('id', 'FGPartCode-' + (index + 1));
                    $currentRow.find('[id^="FGItemCode-"]').attr('id', 'FGItemCode-' + (index + 1));
                    $currentRow.find('[id^="FGItemName-"]').attr('id', 'FGItemName-' + (index + 1));
                    $currentRow.find('[id^="RMPartCode-"]').attr('id', 'RMPartCode-' + (index + 1));
                    $currentRow.find('[id^="RMItemCode-"]').attr('id', 'RMItemCode-' + (index + 1));
                    $currentRow.find('[id^="RMItemName-"]').attr('id', 'RMItemName-' + (index + 1));
                    $currentRow.find('[id^="BomName-"]').attr('id', 'BomName-' + (index + 1));
                    $currentRow.find('[id^="BomNo-"]').attr('id', 'BomNo-' + (index + 1));
                    $currentRow.find('[id^="RMQty-"]').attr('id', 'RMQty-' + (index + 1));
                    $currentRow.find('[id^="RMUnit-"]').attr('id', 'RMUnit-' + (index + 1));
                    $currentRow.find('[id^="Location-"]').attr('id', 'Location-' + (index + 1));
                    $currentRow.find('[id^="Constraint-"]').attr('id', 'Constraint-' + (index + 1));
                });
            }
        }

        function SubmitData(e) {
              
            var RowCount = $('#divItemList tr').length;
            var errorCount = 0;
            for (let i = 1; i <= RowCount; i++) {
                if ($('#Constraint-' + i).val() == "true") {
                    errorCount++;
                }

                if (errorCount > 0) {
                    e.preventDefault();
                    $.notify("Error in data can't submit", "error");
                    return false;
                }
            }


            var ItemData = [];
            for (let i = 1; i <= RowCount; i++) {

                ItemData.push({
                    "FGPartCode": $('#FGPartCode-' + i).text(),
                    "FGItemName": $('#FGItemName-' + i).text(),
                    "RMPartCode": $('#RMPartCode-' + i).text(),
                    "RMItemName": $('#RMItemName-' + i).text(),
                    "BomName": $('#BomName-' + i).text(),
                    "RMQty": $('#RMQty-' + i).text(),
                    "RMUnit": $('#RMUnit-' + i).text(),
                    "Location": $('#Location-' + i).text(),
                    "MPNNumber": $('#MPNNumber-' + i).text(),
                    "FGItemCode": parseInt($('#FGItemCode-' + i).val()),
                    "RMItemCode": parseInt($('#RMItemCode-' + i).val()),
                    "AltItemCode1": parseInt($('#AltItemCode1-' + i).val()),
                    "AltItemCode2": parseInt($('#AltItemCode2-' + i).val()),
                    "AltQty1": parseInt($('#AltQty1-' + i).val()),
                    "AltQty2": parseInt($('#AltQty2-' + i).val()),
                    "Scrap": parseInt($('#Scrap-' + i).val()),
                    "GrossWeight": parseInt($('#GrossWeight-' + i).val()),
                    "NetWeight": parseInt($('#NetWeight-' + i).val()),
                    "Remark": $('#Remark-' + i).text(),
                    "BomNo": parseInt($('#BomNo-' + i).val())
                    // "SeqNo":i
                });
            }
              
            $.ajax({
                url: "@Url.Action("AddBomListData")",
                type: "POST",
                data: { model: ItemData },
                beforeSend: function (xhr) {

                },
                success: function (data, status, xhr) {
                    console.log("success");

                },
                error: function (result, status, xhr) {
                    $.notify(result.responseText, "error");
                }
            });
        }

