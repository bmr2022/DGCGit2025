@model eTactWeb.DOM.Models.BomModel

<div class="accordion-item">
	<h2 class="accordion-header" id="H_BasicParameter">
		<button class="accordion-button text-light pnl4BG bg-gradient" type="button" data-bs-toggle="collapse" data-bs-target="#B_BasicParameter" aria-expanded="true" aria-controls="B_BasicParameter">
			<strong style="text-transform:uppercase"><i class="fa fa-fw pr35 fa-book fa-lg" aria-hidden="true"></i>RM Detail</strong>
		</button>
	</h2>
	<div id="B_BasicParameter" class="accordion-collapse collapse show pnl4 bg-gradient" aria-labelledby="H_BasicParameter">
		<div class="accordion-body">
			<div class="row g-2 gx-3">
				<div class="col-lg-6 mt-2" id="DivFG2">
					<partial name="_FGItem2" />
				</div>
				<div class="col-lg-2">
					<div class="row g-2 gx-3">
						<div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
							<label asp-for="Qty" class="form-label"></label>
							<input asp-for="Qty" class="form-control" type="text" min="0" oninput="validity.valid||(value='');" />
						</div>
						<div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
							<label asp-for="Unit" class="form-label"></label>
							<input asp-for="Unit" class="form-control" />
						</div>


					</div>
				</div>
				<div class="col-auto" style="padding-left:10%;">
					<label class="form-label">Copy This BOM</label>
					<div class="form-check form-switch">
						<input asp-for="CopyBom" class="form-check-input" type="checkbox" role="switch" onchange="CopyBomFunc(this);" />
					</div>
					@* <label class="form-label">Hide/UnHide</label>
                    <div class="form-check form-switch">

                    </div> *@
					<label class="form-label">Hide/UnHide</label>
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" id="hideUnhideToggle" onchange="toggleSection()">

					</div>

				</div>
				<div class="col mt-3">
					<div class="row justify-content-end">
						<div class="col-auto">
							<button type="button" class="btn btn-sm btn-outline-success" onclick="BomValidation();" style="margin-bottom: 3px;">
								<i class="fa fa-angles-down fa-lg"></i> ADD TO GRID
							</button>
							<button type="button" class="RefreshBom btn btn-sm btn-outline-danger" id="ImportExcel">
								<i class="fa-solid fa-angles-down fa-fw fa-lg"></i> Refresh Bom
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

