        function GetFormRights() {
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                     
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.Result.Table.length == 0) {
                            $("button[type='submit']").prop("disabled", true);
                            $(".DashBoard")
                                .addClass("disabled-link")
                                .on("click", function (e) {
                                    e.preventDefault(); // Prevents clicking the link
                                });
                        } else {
                            console.log(obj);
                            var optAll = obj.Result.Table[0].OptAll;
                            var optSave = obj.Result.Table[0].OptSave;
                            var optUpdate = obj.Result.Table[0].OptUpdate;
                            var optDelete = obj.Result.Table[0].OptDelete;
                            var optView = obj.Result.Table[0].OptView;
                            if (!optAll) {
                                if (!optSave) {
                                    $("button[type='submit']").prop("disabled", true);
                                }
                                if (!(optUpdate || optDelete || optView)) {
                                    $(".DashBoard")
                                        .addClass("disabled-link")
                                        .on("click", function (e) {
                                            e.preventDefault(); // Prevents clicking the link
                                        });
                                }
                            }

                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }


        async function CheckDuplicate(n, v) {
            $.ajax({
                url: "@Url.Action("isDuplicate")",
                type: "POST",
                data: { "Colval": $('#' + v).val(), "ColName": n },
                success: await function (data) {
                    if (data.result !== "0" && data.statusText === "Error") {
                        var message = 'Duplicate Entry : ' + $('#' + v).val() + ' Found For Column : ' + n;
                        $('#' + v).val('');
                        $.notify(message, { position: "top center", className: "error" });
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }


        $("button[type='submit']").click(function () {
            $(".valid").each(function () {
                $(this).removeClass('is-invalid');
                IsErr = 0;
            });


            //if (!$('#Entry_Date').val()) {
            //    AddErrorCls('Entry_Date');
            //    IsErr = 1;
            //}

            console.log('IsErr : ' + IsErr);

            if (IsErr == 1) return false;
            if (IsErr == 0) return true;


        });
        function GetFeatureOption() {
            $.ajax({
                type: "POST",
                data: {},
                url: "@Url.Action("GetFeatureOption")",
                dataType: "json",
                success: function (result, status, error) {

                    if (result != null) {
                        var obj = $.parseJSON(result);
                        console.log("feature option", obj);
                        if (obj.Result != null) {
                            var autoGen = obj.Result[0].autogeneratedGroupcode;
                            var mandatory = obj.Result[0].GroupcodeMandatory;
                            var maxLen = parseInt(obj.Result[0].MaxLengthOfGroupcode);

                            if (autoGen === "Y") {
                                $("#GroupPrefix").prop("readonly", true);
                            } else {

                                // ⭐ Stop typing beyond max length
                                $("#GroupPrefix")
                                    .attr("maxlength", maxLen)
                                    .off("input")
                                    .on("input", function () {
                                        if (this.value.length > maxLen) {
                                            this.value = this.value.substring(0, maxLen);
                                        }
                                    });

                                // ⭐ Validate only if mandatory = "Y"
                                if (mandatory === "Y") {

                                    $("#GroupPrefix")
                                        .off("blur")
                                        .on("blur", function () {

                                            let value = $(this).val().trim();

                                            // If empty → show once
                                            if (value === "") {
                                                $.notify("Group Code is mandatory",
                                                    { position: "top center", className: "error" });
                                                return;
                                            }

                                            // If less than required → show once
                                            if (value.length !== maxLen) {
                                                $.notify("Group Code must be exactly " + maxLen + " characters",
                                                    { position: "top center", className: "error" });
                                            }
                                        });
                                }
                            }


                                $('form').off('submit').on('submit', function (e) {

                                    let value = $('#GroupPrefix').val().trim();

                                    // ⭐ Case 1: Mandatory = Y → must not be blank
                                    if (mandatory === "Y" && value === "") {
                                        e.preventDefault();
                                        $.notify("Group Code is mandatory",
                                            { position: "top center", className: "error" });
                                        return false;
                                    }

                                    // ⭐ Case 2: Not mandatory → allow blank safely
                                    if (mandatory === "N" && value === "") {
                                        return true; // allow submit
                                    }

                                    // ⭐ Case 3: If user typed something → must match exact length
                                    if (value.length !== maxLen) {
                                        e.preventDefault();
                                        $.notify("Group Code must be exactly " + maxLen + " characters",
                                            { position: "top center", className: "error" });
                                        return false;
                                    }

                                    return true;
                                });
                        }
                    }
                }
            });
        }
