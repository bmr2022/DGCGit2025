        $('button[type="submit"]').click(function (e) {
            e.preventDefault();
             
            var CurrenGroupName = $('#Group_name').val();
            var GroupItemsLen = GropItemNameArray.length;
            var CheckGroupName = false;
            for (var i = 0; i < GroupItemsLen; i++) {
                if (CurrenGroupName == GropItemNameArray[i].GroupName) {
                    CheckGroupName = true;
                    break;
                }
            }


           


            if ('@Model.Mode' == "U") {

                CheckBeforeUpdate();
            }
            else if (CheckGroupName) {
                $.notify("You cannot submit this Group as Item with this group already exists", "error");
            }
            else if ($('#UnderCategoryId').val() == '' || $('#UnderCategoryId').val() == '0') {

                $.notify("Please select Under Category", "error");
                return false;
            }

            else {
                $('form').submit();
            }
        });

        function CheckBeforeUpdate() {
            $.ajax({
                url: '@Url.Action("CheckBeforeUpdate")',
                type: "POST",
                data: { "GroupCode": $('#Group_Code').val() },
                success: function (data) {
                    console.log("success");
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.Result != null) {
                            if (obj.Result.Table[0].Column1 > 0) {
                               // $.notify("You cannot update this Group as Item with this group already exists", "error");
                                $('form').submit();
                            }
                            else {
                                $('form').submit();
                            }
                        }
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        var GropItemNameArray = [];
        function GetAllItemGroup() {
            $.ajax({
                url: '@Url.Action("GetAllItemGroup")',
                type: "GET",
                success: function (data) {
                     
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        var TotalLen = obj.Result.Table.length;
                        for (var i = 0; i < TotalLen; i++) {
                            GropItemNameArray.push({
                                GroupName: obj.Result.Table[i].Group_name
