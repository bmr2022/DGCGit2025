                                </div>

                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <label asp-for="GroupPrefix" class="form-label"> Group Code</label>
                                    <input asp-for="GroupPrefix" class="form-control" onblur="CheckDuplicate('Type_Item',this.id);" />
                                </div>
