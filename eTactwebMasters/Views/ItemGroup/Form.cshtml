                            <div class="row g-3">
                                <div class="col-xl-1 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <label id="Types" class="form-label">Type</label>
                                    <input type="hidden" asp-for="Mode" value="@Model.Mode" />
                                    <select asp-for="ItemServAssets" class="form-select">
