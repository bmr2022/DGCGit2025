@model eTactWeb.DOM.Models.UserRightDashboardModel

@{
    ViewData["Title"] = "User Right Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="shadow-lg">
    <form asp-action="XONUserRightDashboard" autocomplete="off" class="form-horizontal" asp-controller="XONUserRightDashboard">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                <strong>User Right Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="UserRightDashboard" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa-solid fa-grip fa-lg fa-fw fa-beat" style="--fa-animation-duration: 2s;"></i>
                        Dashboard
                    </a>
                </span>
            </h5>
        </div>

        @Html.AntiForgeryToken()

        <div class="card-body">
            <div class=card>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col col-md-2 col-sm-6 col-xs-6">
                            <label class="form-label">Select User</label>

                            <div class="form-check form-switch mx-3 w-auto position-absolute d-inline">
                                <input id="AC1" class="form-check-input" type="checkbox" role="switch" />Show All
                            </div>

                            <!-- Hidden field to store EmpId -->
                            <input type="hidden" asp-for="EmpId" />

                            <!-- User dropdown -->
                            <select class="form-select" id="UserId" name="UserId">
                                <option value="0">-Select-</option>
                                @foreach (var item in Model.UserList)
                                {
                                    <option value="@item.Value" data-empid="@item.EmpId">@item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col col-md-2 col-sm-6 col-xs-6">
                            <label class="form-label">Select Dashboard</label>
                            <select class="form-select fs"
                                    asp-for="DashboardName"
                                    asp-items="@(new SelectList(Model.DashboardNameList, "Value", "Text"))"
                                    onchange="GetDashboardSubScreen();">
                                <option value="">-Select-</option>
                            </select>
                        </div>
                        <div class="col col-md-2 col-sm-6 col-xs-6">
                            <label class="form-label">Select Dashboard SubScreen</label>
                            <select class="form-select fs" asp-for="DashboardSubScreen">
                                <option value=0>-Select-</option>
                            </select>
                        </div>
                        <div class="col col-md-2 col-sm-6 col-xs-6">
                            <label class="form-label d-block">Is View</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="IsView">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["Duplicate"] != null)
        {
            <div id="duplicateMessage" data-msg="@TempData["Duplicate"]"></div>
        }

        <div class="progress my-3" style="height: 4px;">
            <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="card-footer justify-content-around">
            <div class="row" style="text-align-last: start;">
                <div class="col-auto m-2">
                    <button type="button" class="btn btn-sm btn-secondary" onclick="back();"><i class="fa fa-chevron-circle-left fa-fw fa-lg" aria-hidden="true"></i>BACK</button>
                </div>
                <div class="col-auto mb-2">
                    <label class="form-label">Global search</label>
                    <input type="text" class="form-control" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                </div>
                <div class="col-xl-2 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <button type="button" class="btn btn-sm btn-outline-danger mt-3" style="margin-top:10px;" onclick="ClearUserRightDashboardGrid()">
                        <i class="fa-solid fa-hand-sparkles fa-fw fa-lg"></i>
                        CLEAR GRID
                    </button>
                </div>
                <div class="d-flex col justify-content-center buttonGrid">
                    @if (@Model.Mode != "V")
                    {
                        <div class="col-auto m-2">
                            <button type="button" data-abcd="24" class="ItemBtn btn btn-sm btn-outline-danger">
                                <i class="fa-solid fa-angles-down fa-fw fa-lg"></i> ADD TO GRID
                            </button>
                        </div>
                        @if (@Model.Mode == "U")
                        {
                            <div class="col-auto m-2">
                                <button type="submit" class="UpdateBtn btn btn-primary btn-sm bg-graident">
                                    <i class="fa fa-pencil fa-lg fa-fw" aria-hidden="true"></i>UPDATE
                                </button>
                            </div>
                            <div class="col-auto m-2">
                                <a class="Copy btn btn-sm btn-outline-primary bg-gradient" asp-action="UserRights" asp-route-Mode="C" asp-route-ID="@Model.EmpId" asp-route-userName="@Model.UserName" style="color:blue!important;margin-right:5px;">
                                    <i class="fa-solid fa-floppy-disk-pen fa-fw fa-lg" style="--fa-secondary-color: blue; --fa-secondary-opacity: 1.0;--fa-animation-duration: 2s;"></i>
                                    COPY
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="col-auto m-2">
                                <button type="reset" class="btn btn-sm btn-danger bg-graident" onclick="location.href=$('form')[0].action">
                                    <i class="fa fa-refresh fa-fw fa-lg" aria-hidden="true"></i>RESET
                                </button>
                            </div>

                            <div class="col-auto m-2">
                                <button type="submit" class="SubmitBtn btn btn-sm btn-success bg-graident">
                                    <i class="fa fa-hdd-o fa-lg fa-fw" aria-hidden="true"></i>SUBMIT
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="card-body overflow-auto pb-0 table-responsive" style="max-height:350px;">
                <table class="table table-hover table-bordered table-striped" id="UserRightDashboardTable">
                    <thead class="bg-gradient card-headerBG text-light small" style="white-space:nowrap;position:static;" id="UserRightDashboardHead">
                        <tr>
                            <th>Action</th>
                            <th>User Name</th>
                            <th>Dashboard Name</th>
                            <th>Dashboard SubScreen</th>
                            <th>IsView</th>
                        </tr>
                    </thead>
                    <tbody id="divUserRightDashboardGrid">
                        <partial name="_XONUserRightDashboardGrid" />
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#UserId').on('change', function () {
                var selectedEmpId = $(this).find(':selected').data('empid');
                $('#EmpId').val(selectedEmpId || '');
            });
        });

        function GetDashboardSubScreen() {

            $.ajax({
                url: "@Url.Action("GetDashboardSubScreen")",
                type: 'GET',
                async: false,
                data: { DashboardName: $('#DashboardName').val() },
                success: function (data) {
                    debugger
                    var obj = $.parseJSON(data);
                    $('#DashboardSubScreen').empty();
                    $('#DashboardSubScreen').append('<option value="0">-Select-</option>');
                    $.each(obj.Result,
                        function (key, val) {
                            $('#DashboardSubScreen').append('<option value="' + val.DashboardSubScreen + '">' + val.DashboardSubScreen + '</option>');
                        });
                }
            });
        }

        $('.ItemBtn').click(function (e) {
            e.preventDefault();
            if (!ValidateUserRightDashboard_Grid()) return;

            var UserRightDashboard = {
                "UserId": parseInt($('#UserId').val()),
                "UserName": $('#UserId').find(":selected").text(),
                "EmpId": parseInt($('#EmpId').val()),
                "DashboardName": $('#DashboardName').find(":selected").text(),
                "DashboardSubScreen": $('#DashboardSubScreen').find(":selected").text(),
                "IsView": $('#IsView').is(':checked')
            };

            $.ajax({
                url: "@Url.Action("AddUserRightsDashboardDetail")", // ✅ FIXED
                type: "POST",
                data: UserRightDashboard,
                beforeSend: function (xhr) {
                    // Optional loading UI
                },
                success: function (data, status, xhr) {
                    if (data === "Duplicate" && (xhr.status === 207 || xhr.responseText === "Duplicate")) {
                        $.notify('Duplicate Item Not Allowed.', "info");
                        $('.ItemBtn').html('<span role="status"><i class="fa-solid fa-angles-down fa-fw fa-lg"></i> ADD TO GRID</span>').prop("disabled", false);
                    }
                    else if (xhr.status === 205 && (xhr.responseText.indexOf('Reset') !== -1 || xhr.statusText.indexOf('Reset') !== -1)) {
                        $.notify('Adding Item Not Allowed, Please Clear Gate Detail...!!!', "info");
                    }
                    else {
                        $('#divUserRightDashboardGrid').html(data);
                        editingNow = false;
                        ClearGrid();
                        $.notify('Item Added To Grid.', "success");
                    }
                },
                error: function (xhr, status, error) {
                    $.notify(xhr.responseText || "An error occurred", "error");
                },
                complete: function () {
                    $('.Schedule').fadeIn();
                }
            }).done(function () {
                console.log(3);
            }).fail(function () {
                alert("error");
            }).always(function () {
                console.log(4);
            });
        });

        function ClearUserRightDashboardGrid() {
            $.ajax({
                type: "POST",
                url: "/XONUserRightDashboard/ClearUserRightDashboardGrid",
                dataType: "json",
                success: function (result, status, error) {

                    $('#divUserRightDashboardGrid').empty();
                    var NoData = '<tr class="text-center"><td colspan="32" class="text-black-50"><strong>NO DATA ADDED</strong></td></tr>';
                    $('#divUserRightDashboardGrid').html(NoData);
                },
                error: function (req, status, error) {
                    alert(error);
                }
            });
        }

        function ValidateUserRightDashboard_Grid() {

            var Err = 0;

            if ($('#UserId').prop('selectedIndex') <= 0) {
                AddErrorCls('UserId');
                $.notify("User Name is Required", "error");
                Err = 1;
            }

            if ($('#DashboardName').prop('selectedIndex') <= 0) {
                AddErrorCls('DashboardName');
                $.notify("Dashboard Name is Required", "error");
                Err = 1;
            }

            if ($('#DashboardSubScreen').prop('selectedIndex') <= 0) {
                AddErrorCls('DashboardSubScreen');
                $.notify("Dashboard SubScreen is Required", "error");
                Err = 1;
            }

            Err == 1 ? ShowErrorFld('H_SAGrid') : HideErrorFld('H_SAGrid');
            if (Err == 1) return false;

            return true;
        }

        var editingNow = false;
        function EditItemRow(SeqNo) {
            debugger
            if (editingNow == false) {

                return new Promise((resolve, reject) => {
                    $.ajax({
                        url: '@Url.Action("EditItemRow")',
                        type: "POST",
                        data: { SeqNo: SeqNo, Mode: $('#Mode').val() },
                    })
                        .done(function (data, status, xhr) {

                            if (data === "Duplicate" && (xhr.statusCode === 207 || xhr.responseText === "Duplicate")) {
                                $.notify("If Same Tax Exists, Item Cannot Be Edited...!", "warning");
                                reject("Duplicate");
                            } else {
                                editingNow = true;
                                var obj = $.parseJSON(data);
                                DeleteItemRow(SeqNo)
                                    .then(() => {
                                        if (isEditAllowed == "false") {
                                            reject("Edit not allowed");
                                        } else {
                                            $('#UserId').val(obj[0].UserId).trigger('change');
                                            $('#DashboardName').val(obj[0].DashboardName).trigger('change');
                                            $('#EmpId').val(obj[0].EmpId);
                                            $('#DashboardSubScreen').val(obj[0].DashboardSubScreen).trigger('change');
                                        }
                                    })
                                    .catch((error) => {
                                        reject(error);
                                    });
                            }
                        })
                        .fail(function (response) {
                            reject(response.responseText);
                        });
                });
            }
            else {
                $.notify("Cannot edit as one item is already on above edit grid", "error");
            }
        }

        function DeleteItemRow(SeqNo) {

            return new Promise((resolve, reject) => {
                $.ajax({
                    url: '@Url.Action("DeleteItemRow")',
                    type: "POST",
                    data: { "SeqNo": SeqNo, "Mode": $('#Mode').val() },
                    success: function (data) {
                        $('#divUserRightDashboardGrid').html(data);
                        $.notify("Item Deleted from Grid", "info");
                        isEditAllowed = "true";
                        resolve();
                    },
                    error: function (response) {
                        reject(response.responseText);
                    }
                });
            });
        }

        function ClearGrid(){
            $('#UserId,#DashboardName,#DashboardSubScreen').prop('selectedIndex', 0);
        }


    </script>
}