@model eTactWeb.DOM.Models.UserRightDashboardModel

@if (Model.UserRightsDashboard == null)
{
    <tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.UserRightsDashboard)
    {
        <tr class="small style="white-space:nowrap">
            <td style="white-space:nowrap;">
                <a class="table-link link-primary" onclick="EditItemRow(@item.SeqNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a class="table-link link-danger" onclick="DeleteItemRow(@item.SeqNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@item.UserName<input type="hidden" value="@item.UserId"/><input type="hidden" value="@item.EmpId"/></td>
            <td>@item.DashboardName</td>
            <td>@item.DashboardSubScreen</td>
            <td>
                <div class="form-check form-switch">
                    @if (item.IsView ==true)
                    {
                        <input class="form-check-input" disabled checked type="checkbox" role="switch">
                    }
                    else
                    {
                        <input class="form-check-input" disabled type="checkbox" role="switch">
                    }
                </div>
            </td>
        </tr>
    }
}