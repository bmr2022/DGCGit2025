@model eTactWeb.DOM.Models.AlternateItemMasterDashBoardModel;
<div class="table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="GateDataTable" style="width: 100%;">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashGateThead">
            <tr>
                <th>Sr#</th>
                <th style="width:50px !important">Action</th>
                <th>MainPartCode</th>
                <th>MainItemName</th>
                <th>AlternatePartCode</th>
                <th>AlternateItemCode</th>
                <th>ActualEntryByEmp</th>
                <th>UpdateByEmpName</th>
            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var Cntr = 0;
                if (Model.AlternateItemMasterDashBoardGrid == null || Model.AlternateItemMasterDashBoardGrid.Count == 0)
                {
                    <tr class="text-center"><td colspan="6" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.AlternateItemMasterDashBoardGrid)
                    {
                        Cntr = Cntr + 1;
                        <tr onclick="selection(this)">
                            <td>@Cntr</td>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">
                                    <div id="viewCursorDiv-@Cntr">
                                        <a class="table-link link-success" asp-route-ID="@Cntr" asp-action="AlternateItemMaster" asp-route-Mode="V" onclick="BackButtonData(event);">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div id="editCursorDiv-@Cntr">
                                        <a class="table-link link-primary"
                                           asp-route-ID="@Cntr"
                                           asp-action="AlternateItemMaster"
                                           asp-controller="AlternateItemMaster"
                                           asp-route-Mode="U"
                                           asp-route-MainItemCode="@item.MainItemCode"
                                           asp-route-MainItemName="@item.MainItemName"
                                           asp-route-AlternateItemCode="@item.AlternateItemCode"
                                           asp-route-AltItemName="@item.AltItemName"
                                           asp-route-MainPartCode="@item.MainPartCode"
                                           asp-route-AlternatePartCode="@item.AlternatePartCode"
                                           onclick="confirmEdit(event)">

                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div id="deleteCursorDiv-@Cntr">
                                        <a class="table-link link-danger" id="deleteCursor-@Cntr" onclick="confirmDelete(event)" asp-action="DeleteByID" asp-route-MainItemCode="@item.MainItemCode" asp-route-AlternateItemCode="@item.AlternateItemCode" asp-route-MachineName="@item.MachineName" asp-route-EntryByempId="@Cntr">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@item.MainPartCode<input type="hidden" asp-for="@item.MainItemCode" /></td>
                            <td>@item.MainItemName</td>
                            <td>@item.AlternatePartCode<input type="hidden" asp-for="@item.AlternateItemCode" /></td>
                            <td>@item.AltItemName</td>
                            <td>@item.ActualEntryBy</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.LastUpdatedBy))
                                {
                                    @item.LastUpdatedBy
                                }
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows">@Cntr</span></strong></center>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
