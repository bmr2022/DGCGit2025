@model eTactWeb.DOM.Models.ProcessMasterModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="shadow-lg">
    <form method="post" id="SParam">
        <div class="card rounded border-light bg-gradient">
            <div class="card-header card-headerBG text-light justify-content-center bg-gradient">
                <h5>
                    Process Master - <strong>Dashboard</strong>
                    <span class="d-flex float-end" style="margin-top: -2px;">
                        <a asp-action="Form" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient" id="savebtn">
                            <i class="fa fa-plus-circle fa-fw fa-lg" aria-hidden="true"></i>
                            Add New
                        </a>
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col col-auto col-md-2 col-sm-6 col-xs-6">
                                <label for="state" class="control-label">Process Code</label>
                                <input asp-for="StageCode" class="form-control form-control-sm" id="StageCode" data-val="false" />
                            </div>
                            <div class="col-auto">
                                <label class="form-label">Global Search</label>
                                <input type="text" class="form-control" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                            </div>

                            <div class=" d-flex justify-content-center mt-3" width="inherit">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="GetSearchData();" style="padding:3px;height:30px;width:100px;margin-left:20px;">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                </button>
                                <button type="reset" class="btn btn-sm btn-outline-danger" onclick="Reload();" style="padding:3px;height:30px;width:100px;margin-left:20px;">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="progress my-3 mb-3" style="height: 4px;">
                    <div class="progress-bar progress-bar-striped bg-secondary progress-bar-animated" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="card" id="divDashboardGrid">
                    <div class="card-body table-responsive" style="max-height:350px; overflow-y: auto;">
                        <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="ProcessMasterTable">
                            <thead class="bg-gradient card-headerBG text-light" style="position: static; top: 0;" id="ProcessHeadTable">
                                <tr>
                                    <th style="width: 100px; text-align: center;">Action</th>
                                    <th>Sr#</th>
                                    <th data-columnno="2" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Id</th>
                                    <th data-columnno="3" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Code</th>
                                    <th data-columnno="4" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Desc</th>
                                    <th data-columnno="5" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process ShortName </th>
                                    <th data-columnno="6" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Material Required For Rework</th>
                                    <th data-columnno="7" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> QC Required</th>
                                    <th data-columnno="8" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> MaxPendQtyReq</th>
                                </tr>
                            </thead>
                            <tbody id="ProcessMasterBody">
                                @if (Model.ProcessMasterList == null)
                                {
                                    <tr class="text-center">
                                        <td colspan="14" class="text-black-50"><strong>NO DATA FOUND</strong></td>
                                    </tr>
                                }
                                else
                                {
                                    var @Cntr = 0;
                                    foreach (var process in Model.ProcessMasterList)
                                    {
                                        Cntr = Cntr + 1;
                                        <tr>
                                            <td style="white-space: nowrap; text-align: center;">
                                                <div id="container">
                                                    <a class="table-link link-success" asp-controller="ProcessMaster" asp-action="Form"
                                                       asp-route-ID="@process.Process_Id" asp-route-Mode="V">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>
                                                    <a class="table-link link-primary" asp-controller="ProcessMaster" asp-action="Form"
                                                       asp-route-ID="@process.Process_Id" asp-route-Mode="U">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>
                                                    <a class="table-link link-danger" asp-controller="ProcessMaster" onclick="confirmDelete(event)" asp-action="DeleteByID"
                                                       asp-route-ID="@process.Process_Id">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-trash fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>
                                                </div>
                                            </td>
                                            <th>@Cntr</th>
                                            <td>@Html.DisplayFor(modelItem => process.Process_Id)</td>
                                            <td>@Html.DisplayFor(modelItem => process.StageCode)</td>
                                            <td>@Html.DisplayFor(modelItem => process.StageDescription)</td>
                                            <td>@Html.DisplayFor(modelItem => process.StageShortName)</td>
                                            <td>@(process.MaterialReqForRework == 1 ? "Yes" : "No")</td>
                                            <td>@(process.QCRequired == 1 ? "Yes" : "No")</td>
                                            <td>@Html.DisplayFor(modelItem => process.MaxPendQtyReq)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1; /* Adjust margin as needed */
            margin-right: 10px;
        }

    #ProcessMasterTable {
        width: 100%;
        border-collapse: collapse;
    }

    #ProcessMasterHead th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }

    #divDashboardGrid .table-responsive {
        overflow-x: auto;
        overflow-y: auto;
        max-height: 350px; /* Adjust height as needed */
        width: 100%; /* Ensure it takes up the full width */
    }

    table {
        width: 100%; /* Ensure the table width matches the container */
        border-collapse: collapse;
    }

    th, td {
        white-space: nowrap; /* Prevent text from wrapping */
    }


    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    #ProcessHeadTable th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            AutoComplete('Process_Master_Type', 'Process_Code', 'Process_Code', null);
            AutoComplete('Process_Master_Type', 'Process_Description', 'Process_Description', null);
            GetFormRights();
            var dashGrid = $('#ProcessMasterBody tr').length;
            $('#totalRows').text(dashGrid);
        });

        $(document).on("click", ".sortCol", function () {
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');
            if (currentOrder === 'asc') {
                sortTable('ProcessMasterTable', colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('ProcessMasterTable', colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        $("#sendToExcel").click(function () {
             
            $("#ProcessMasterTable").table2excel({
                filename: "ProcessMasterTable.xls"
            });
        });

        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#ProcessMasterBody tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });

        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup'); // Reset search box and trigger the search
        });

        function sortTable(columnIndex, ascending) {
            var table = $('#ProcessMasterTable');
            var rows = table.find('#ProcessMasterBody > tr').toArray();

            rows.sort(function (a, b) {
                var aValue = $(a).find('td').eq(columnIndex).text().trim();
                var bValue = $(b).find('td').eq(columnIndex).text().trim();

                var aIntValue = 0;
                var bIntValue = 0;
                if (/^\d+$/.test(aValue) && /^\d+$/.test(bValue)) {
                    aIntValue = parseInt(aValue, 10);
                    bIntValue = parseInt(bValue, 10);
                }

                if (aIntValue > 0) {
                    if (ascending) {
                        return aValue - bValue;
                    } else {
                        return bValue - aValue;
                    }
                }
                else {
                    if (ascending) {
                        return aValue.localeCompare(bValue);
                    } else {
                        return bValue.localeCompare(aValue);
                    }

                }

            });
            $.each(rows, function (index, row) {
                table.children('#ProcessMasterBody').append(row);
            });
        }

        function GetSearchData() {
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                data: { "StageCode": $('#StageCode').val(), "StageShortName": $('#StageShortName').val() },
                async: false,
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    var dashGrid = $('#ProcessMasterBody tr').length;
                    $('#totalRows').text(dashGrid);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function confirmDelete(event) {
            event.preventDefault();

            if (confirm("Are you sure you want to Delete this entry?")) {
                var linkUrl = $(event.currentTarget).attr("href");
                window.location.href = linkUrl;
            }
        }

        function GetFormRights() {

            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    if (data != null) {

                        var obj = $.parseJSON(data);
                        if (obj.Result.Table.length == 0) {
                            var rowCounter = $('#divDashboardGrid tr').length;
                            for (var i = 0; i < rowCounter; i++) {
                                $('#viewCursorDiv-' + i).empty();
                                $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#editCursorDiv-' + i).empty();
                                $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                                <span class="fa-stack">
                                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                                </span>
                                                                                                            </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#deleteCursorDiv-' + i).empty();
                                $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                            }

                        } else {
                             (obj);
                            if (obj.Result.Table[0] != undefined) {
                                var optAll = obj.Result.Table[0].OptAll;
                                var optSave = obj.Result.Table[0].OptSave;
                                var optUpdate = obj.Result.Table[0].OptUpdate;
                                var optDelete = obj.Result.Table[0].OptDelete;
                                var optView = obj.Result.Table[0].OptView;
                                var rowCounter = $('#divDashboardGrid tr').length;
                                if (!optAll) {
                                    if (!optSave) {
                                        $("#savebtn").css("pointer-events", "none");
                                    } else {
                                        $("#savebtn").css("pointer-events", "");
                                    }
                                    if (!optView) {

                                        for (var i = 0; i < rowCounter; i++) {
                                            $('#viewCursorDiv-' + i).empty();
                                            $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                                        }
                                    }
                                    if (!optUpdate) {
                                        for (var i = 0; i < rowCounter; i++) {
                                            $('#editCursorDiv-' + i).empty();
                                            $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                                        }
                                    }
                                    if (!optDelete) {
                                        for (var i = 0; i < rowCounter; i++) {
                                            $('#deleteCursorDiv-' + i).empty();
                                            $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                        <span class="fa-stack">
                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                        </span>
                                                                                                    </a>`);
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }
    </script>
    <script src="~/Scripts/table2excel.js"></script>
}