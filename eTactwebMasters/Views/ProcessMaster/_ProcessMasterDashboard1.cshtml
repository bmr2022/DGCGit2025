@model eTactWeb.DOM.Models.ProcessMasterModel
<div class="card-body table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss" id="ProcessMasterTable">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="ProcessHeadTable">
            <tr>
                <th style="display: none">
                    @Html.DisplayNameFor(model => model.Process_Id)
                </th>
                <th>Action</th>
                <th>Sr#</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Id</th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Code</th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process Desc</th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Process ShortName </th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> Material Required For Rework</th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> QC Required</th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span> MaxPendQtyReq</th>
            </tr>
        </thead>
        <tbody id="ProcessMasterBody">
            @if (Model.ProcessMasterList == null)
            {
                <tr class="text-center">
                    <td colspan="14" class="text-black-50"><strong>NO DATA FOUND</strong></td>
                </tr>
            }
            else
            {
                var @Cntr = 0;
                foreach (var process in Model.ProcessMasterList)
                {
                    Cntr = Cntr + 1;
                    <tr>
                        <td style="display: none">
                            @Html.DisplayFor(modelItem => process.Process_Id)
                        </td>
                        <td style="white-space: nowrap;display:flex;width:20px;">
                            <div id="container">
                                <div id="viewCursorDiv-@Cntr">
                                    <a class="table-link link-success" asp-controller="ProcessMaster" asp-action="Form"
                                       asp-route-ID="@process.Process_Id" asp-route-Mode="V">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="editCursorDiv-@Cntr">
                                    <a class="table-link link-primary" asp-controller="ProcessMaster" asp-action="Form"
                                       asp-route-ID="@process.Process_Id" asp-route-Mode="U">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="deleteCursorDiv-@Cntr">
                                    <a class="table-link link-danger" asp-controller="ProcessMaster" onclick="confirmDelete(event)" asp-action="DeleteByID"
                                       asp-route-ID="@process.Process_Id">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-trash fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </td>
                        <th>@Cntr</th>
                        <td>
                            @Html.DisplayFor(modelItem => process.Process_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => process.StageCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => process.StageDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => process.StageShortName)
                        </td>
                        <td>
                            @(process.MaterialReqForRework == 1 ? "Yes" : "No")
                        </td>
                        <td>
                            @(process.QCRequired == 1 ? "Yes" : "No")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => process.MaxPendQtyReq)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1; /* Adjust margin as needed */
            margin-right: 10px;
        }

    #ItemCatTable {
        width: 100%;
        border-collapse: collapse;
    }

    #ItemHeadTable th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }

    tbody td {
        /* Table cell styles */
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }
</style>

@section Scripts {
    <script>
        function confirmDelete(event) {
            event.preventDefault();

            if (confirm("Are you sure you want to Delete this entry?")) {
                var linkUrl = $(event.currentTarget).attr("href");
                window.location.href = linkUrl;
            }
        }
        $("#sendToExcel").click(function () {
            $("#ProcessMasterTable").table2excel({
                filename: "ProcessMasterTable.xls"
            });
        });
    </script>
}