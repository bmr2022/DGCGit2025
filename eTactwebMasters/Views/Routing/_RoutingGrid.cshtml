@model eTactWeb.DOM.Models.RoutingModel
@{
    var Cntr = 1;
}
@if (Model.RoutingDetailGrid == null)
{
    @*<tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>*@
}
else
{
    foreach (var item in Model.RoutingDetailGrid)
    {
        Cntr = Cntr + 1;
        <tr class="small" style="white-space:nowrap">
            <td style="white-space:nowrap;">
                <a class="table-link link-primary" style="border:none;" id="editButton-@item.SequenceNo" onclick="EditItemRows(@item.SequenceNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a class="table-link link-danger" onclick="DeleteItemRow(@item.SequenceNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>

            <td id="SeqNo-@Cntr">@item.SequenceNo</td>
            <td>@item.Stage</td>
            <td>@item.MachineGroup</td>
            <td>@item.WorkCenter</td>
            <td>@item.TransferToWC</td>
            <td>@item.StoreName<input type="hidden" asp-for="StoreID" /></td>
            <td>@item.IntialSetupTime.ToString("#.#0")</td>
            <td>@item.LeadTime</td>
            <td>
                @(item.LeadTimeType.Trim() == "M" ? "Minutes" :
                    item.LeadTimeType.Trim() == "H" ? "Hours" :
                    item.LeadTimeType.Trim() == "S" ? "Seconds" : string.Empty)
            </td>
            <td>@item.LeadTimeInMin</td>
            <td>@item.SubPartCode</td>
            <td>@item.SubItemName</td>
            <td>@item.Remark</td>
            <td>@(item.MandatoryOptionalProcess == "O" ? "Optional" : "Mandatory")</td>
            <td>@item.NoOfWorkers</td>
            <td>@item.LaboursCost</td>
            <td>@item.ProdCost</td>
            <td>@item.QCRequired</td>
            

        </tr>
    }
}