@model eTactWeb.DOM.Models.CostCenterMasterModel;
<div class="table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="GateDataTable" style="width: 100%;">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashGateThead">
            <tr>
                <th>Sr#</th>
                <th style="width:50px !important">Action</th>
                <th>Cost Center ID</th>
                <th>Entry Date</th>
                <th>Cost Center Code</th>
                <th>Cost Center Name</th>
                <th>Short Name</th>
                <th>Dept Name</th>
                <th> Group Name</th>
                <th>Remark</th>
                <th>CC</th>
                <th>Cost Center Group Name</th>
            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var Cntr = 0;
                if (Model.CostCenterMasterGrid == null || Model.CostCenterMasterGrid.Count == 0)
                {
                    <tr class="text-center"><td colspan="11" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.CostCenterMasterGrid)
                    {
                        Cntr = Cntr + 1;
                        <tr onclick="selection(this)">
                            <td>@Cntr</td>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">

                                    <div id="viewCursorDiv-@Cntr">
                                        <a class="table-link link-success" asp-route-ID="@item.CostcenterId" asp-action="CostCenterMaster" asp-route-Mode="V" asp-route-EntryDate="@item.EntryDate"
                                           asp-route-CostCenterCode="@item.CostCenterCode"
                                           asp-route-CostCenterName="@item.CostCenterName"
                                           asp-route-ShortName="@item.ShortName"
                                           asp-route-DepartmentName="@item.DepartmentName"
                                           asp-route-DeptId="@item.DepartmentID"
                                           asp-route-UnderGroupId="@item.UnderGroupId"
                                           asp-route-UnderGroupName="@item.UnderGroupName"
                                           asp-route-Remarks="@item.Remarks"
                                           asp-route-CC="@item.CC"
                                           asp-route-CostCenterGroupID="@item.CostcentergroupID"
                                           asp-route-CostcenetrGroupName="@item.CostcenetrGroupName">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div id="editCursorDiv-@Cntr">
                                        @* <a class="table-link link-primary" id="editCursor-@Cntr" asp-action="LedgerOpeningEntry" onclick="confirmEdit(event)" asp-controller="LedgerOpeningEntry" asp-route-Mode="U" asp-route-ID="@item.EntryByEmpId" asp-route-YC="@item.ClosingYearCode" asp-route-EntryByMachine="@item.EntryByMachine" asp-route-AccountCode="@item.AccountCode">*@
                                        <a class="table-link link-primary"
                                           asp-action="CostCenterMaster"
                                           asp-controller="CostCenterMaster"
                                           asp-route-Mode="U"
                                           asp-route-ID="@item.CostcenterId"
                                           asp-route-EntryDate="@item.EntryDate"
                                           asp-route-CostCenterCode="@item.CostCenterCode"
                                           asp-route-CostCenterName="@item.CostCenterName"
                                           asp-route-ShortName="@item.ShortName"
                                           asp-route-DepartmentName="@item.DepartmentName"
                                           asp-route-DeptId="@item.DepartmentID"
                                           asp-route-UnderGroupId="@item.UnderGroupId"
                                           asp-route-UnderGroupName="@item.UnderGroupName"
                                           asp-route-Remarks="@item.Remarks"
                                           asp-route-CC="@item.CC"
                                           asp-route-CostCenterGroupID="@item.CostcentergroupID"
                                           asp-route-CostcenetrGroupName="@item.CostcenetrGroupName"
                                           onclick="confirmEdit(event)">

                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>

                                    </div>
                                    <div id="deleteCursorDiv-@Cntr">
                                        <a class="table-link link-danger" id="deleteCursor-@Cntr" onclick="confirmDelete(event)" asp-action="DeleteByID" asp-route-ID="@item.CostcenterId">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@item.CostcenterId</td>
                            <td>@item.EntryDate</td>
                            <td>@item.CostCenterCode</td>
                            <td>@item.CostCenterName</td>
                            <td>@item.ShortName</td>
                            <td>@item.DepartmentName<input type="hidden" asp-for="@item.DepartmentID" /></td>
                            <td>@item.UnderGroupName<input type="hidden" asp-for="@item.UnderGroupId" /></td>
                            <td>@item.Remarks</td>
                            <td>@item.CC</td>
                            <td>@item.CostcenetrGroupName<input type="hidden" asp-for="@item.CostcentergroupID" /></td>

                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows">@Cntr</span></strong></center>



<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%; /* Ensure table fills the container width */
    }

    th, td {
        white-space: nowrap; /* Prevent content from wrapping */
    }
</style>
