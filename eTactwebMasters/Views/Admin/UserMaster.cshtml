@model eTactWeb.DOM.Models.UserMasterModel

@{
    ViewData["Title"] = "User Master";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<form asp-action="UserMaster" asp-antiforgery="true">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="EmpCode" />
    <div class="card bg-gradient mb-3 border-light shadow-lg">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                <strong>@ViewData["Title"]</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="UserDashboard" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa-solid fa-grip fa-lg fa-fw fa-beat" style="--fa-animation-duration: 2s;"></i>
                        Dashboard
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body bg-light pt-0">
            <div asp-validation-summary="All" class="text-danger pt-1"></div>
            <div class="accordion shadow-lg">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="H_Panel1">
                        <button class="accordion-button text-light pnl1BG bg-gradient" type="button" data-bs-toggle="collapse" data-bs-target="#B_Panel1" aria-expanded="true" aria-controls="B_Panel1">
                            <i class="fa-solid fa-users fa-lg fa-fw pr35"></i>User Detail
                            <small class="p-3"></small>
                        </button>
                    </h2>
                    <div id="B_Panel1" class="accordion-collapse collapse show pnl1 bg-gradient" aria-labelledby="H_Panel1">
                        <div class="accordion-body">
                            <div class="row g-2 gx-3">
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="UserType" class="form-label">User Type</label>
                                    <select class="form-select" asp-for="UserType" asp-items="@(new SelectList(Model.UserTypeList,"Value","Text"))">
                                        <option value=0>-Select-</option>
                                    </select>
                                    <span asp-validation-for="UserType" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="EmpID" class="form-label">Emp Name</label>
                                    <select class="form-select" asp-for="EmpID" asp-items="@(new SelectList(Model.EmpNameList,"Value","Text"))" onchange="SetName(this.id);">
                                        <option value=0>-Select-</option>
                                    </select>
                                    <span asp-validation-for="EmpID" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="UserName" class="form-label">User Name</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="EmailID" class="form-label">Email ID</label>
                                    <input asp-for="EmailID" class="form-control" />
                                    <span asp-validation-for="EmailID" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="hidden" id="hiddenPassword" value="@Model.Password"  />
                                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="CnfPass" class="form-label">Confirm Password</label>
                                    <input asp-for="CnfPass" type="password" class="form-control" />
                                    <span asp-validation-for="CnfPass" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <label asp-for="MobileNo" class="form-label">Mobile No</label>
                                    <input asp-for="MobileNo" type="number" class="form-control" maxlength="10" />
                                    <input type="hidden" asp-for="Mode" id="Mode" />
                                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch col-md-4 col-sm-12 col-xs-12" style="margin-top: 31px;margin-left: 10px;">
                                    <input id="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                                    <input asp-for="Active" class="form-check-input" type="hidden" />
                                    <label class="form-label">Is Active</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="HPanel2">
                            <button class="accordion-button collapsed text-light pnl1BG bg-gradient" type="button" data-bs-toggle="collapse" data-bs-target="#ODGrid" aria-expanded="false" aria-controls="ODGrid">
                                <strong style="text-transform:uppercase"><i class="fa-solid fa-table-list fa-lg fa-fw pr35 fa-fade" style="--fa-animation-duration: 2s; --fa-fade-opacity: 0.6;"></i>Other Detail</strong>
                            </button>
                        </h2>
                        <div id="ODGrid" class="accordion-collapse collapse pnl4 bg-gradient" aria-labelledby="H_SAGrid">
                            <div class="accordion-body">
                                <div class="row g-2 gx-3" id="_OtherUserGrid">
                                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <label asp-for="CreatedBy" class="form-label">Created By</label>
                                        <input type="hidden" asp-for="CreatedBy" class="form-control" readonly />
                                        <input asp-for="CreatedByName" class="form-control" readonly />
                                    </div>
                                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <label asp-for="CreatedOn" class="form-label">Created Date</label>
                                        <input asp-for="CreatedOn" class="form-control" readonly />
                                    </div>
                                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <label asp-for="UpdatedBy" class="form-label">Updated By</label>
                                        <input type="hidden" asp-for="UpdatedBy" class="form-control" readonly />
                                        <input asp-for="UpdatedByName" class="form-control" readonly />
                                    </div>
                                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <label asp-for="UpdatedOn" class="form-label">Updated Date</label>
                                        <input asp-for="UpdatedOn" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-footer justify-content-around">
            <div class="row">
                <div class="col-auto my-2">
                    <button type="button" class="btn btn-link bg-graident" onclick="back();">
                        <i class="fa fa-chevron-circle-left fa-fw fa-lg" aria-hidden="true"></i>BACK
                    </button>
                </div>
                <div class="d-flex col justify-content-center">
                    @if (@Model.Mode != "V")
                    {
                        if (@Model.Mode == "U")
                        {
                            <div class="col-auto m-2">
                                <button type="submit" class="btn btn-warning bg-graident" id="Update">
                                    <i class="fa fa-save fa-fw fa-lg" aria-hidden="true"></i>UPDATE
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="col-auto m-2">
                                <button type="submit" class="btn btn-primary bg-graident" id="Save">
                                    <i class="fa fa-save fa-fw fa-lg" aria-hidden="true"></i>SAVE
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    <script>
        function SetName(e) {
            if ($('#' + e).val() != "0") {
                var Name = $('#' + e + ' option:selected').text().split(' ---> ');
                $('#UserName').val(Name[0]);
                $('#EmpCode').val(Name[1]);
                alert("EmpCode: " + Name[0]);
            }
            else {
                $('#UserName').val('');
                $('#EmpCode').val('');
            }
        }
        function GetUserType() {
            $.ajax({
                url: '@Url.Action("GetUserType")',
                type: "POST",
                async: false,
                success: function (data) {
                     
                    if (data == "Admin") {
                        // do nothing
                    }
                    else {
                        $('#Password').prop("disabled", true);
                        $('#CnfPass').prop("disabled", true);
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }


        $(document).ready(function () {
            if ($('#Active').val() == 'Y') {
                $('#IsActive').prop('checked', true);
            } else {
                $('#IsActive').prop('checked', false);
            }

            if ('@Model.Mode' == "U") {
                 
                var actualPassword = $('#hiddenPassword').val();
                $('#Password').val(actualPassword);
                $('#CnfPass').val(actualPassword);
                GetUserType();
            }else{
                $('#IsActive').prop('checked', true);
            }
        });


        var checkAdmin = '';

        $('#Save').click(function (event) {
            event.preventDefault();
            checkAdmin = '';
            if ($('#UserType').val() == 'Admin')
                CheckAdminExists();
            if (checkAdmin == 'Exists') {
                return false;
            }
            else {
                if ($('#Mode').val() == '') {
                    if ($('#Password').val() == "") {
                        $.notify('Password is required', "error");
                        return false;
                    }
                    else if ($('#CnfPass').val() == "") {
                        $.notify('Confirm password is required', "error");
                        return false;
                    }
                    else if ($('#Password').val() != $('#CnfPass').val()) {
                        $.notify('Passwords do not match', "error");
                        return false;
                    }
                    else {
                         
                        var isActiveValue = $('#IsActive').is(':checked') ? 'Y' : 'N';
                        $('#Active').val(isActiveValue);

                        $('form').submit();
                    }
                }
            }
        });

        $('#Update').click(function (event) {
            event.preventDefault();
            checkAdmin = '';
            if ($('#UserType').val() == 'Admin')
                CheckAdminExists();
            if (checkAdmin == 'Exists') {
                return false;
            }
            else {
                 
                if ($('#Password').val() != $('#CnfPass').val()) {
                    $.notify('Passwords do not match', "error");
                    return false;
                }
                else {
                    var isActiveValue = $('#IsActive').is(':checked') ? 'Y' : 'N';
                    $('#Active').val(isActiveValue);
                    $('form').submit();
                }
            }
        });

        function CheckAdminExists() {
            $.ajax({
                url: '@Url.Action("CheckAdminExists")',
                type: "POST",
                async: false,
                success: function (data) {
                     
                    var obj = $.parseJSON(data);
                    if (obj.Result[0].AdminExists > 0) {
                        $.notify("Admin limit exceeds, already one admin role is assigned", "error");
                        checkAdmin = 'Exists';
                        return false;
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }