@model eTactWeb.DOM.Models.StockRegisterModel
<div class="table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Action</th>
                <th>Sr#</th>
               
                <th data-columnno="2" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Item Name
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Part Code
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Stock
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Store Name
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Unique Batch No
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Batch No
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Item Code
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>
                <th data-columnno="8" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">
                        Store ID
                        <i class="fa" aria-hidden="true"></i>
                    </span>
                </th>

            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;
                if (Model.StockRegisterDetail == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.StockRegisterDetail)
                    {
                        Cntr = Cntr + 1;

                        <tr id="SAGridRow-@Cntr">
                            <td>
                                <a class="table-link link-danger" onclick="DeleteRow(this.id)" id="@Cntr">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <th>@srNo</th>
                            <td>@item.ItemName</td>
                            <td>@item.PartCode</td>
                            <td>@item.TotStk</td>
                            <td>@item.StoreName</td>
                            <td>@item.UniquebatchNo</td>
                            <td>@item.BatchNo</td>
                            <td>@item.ItemCode</td>
                            <td>@item.StoreId</td>

                        </tr>
                        srNo++;
                    }
                }
            }

        </tbody>
    </table>
</div>
@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
}
<center><strong>TOTAL ROWS: <span>@displayedRows</span></strong></center>


<style>

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }
</style>