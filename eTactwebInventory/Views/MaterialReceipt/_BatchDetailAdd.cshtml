@model eTactWeb.DOM.Models.MaterialReceiptModel
@{
    int Cntr = 0;
}
@if (Model.BatchDetailGrid == null)
{
    <tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.BatchDetailGrid)
    {
        Cntr = Cntr + 1;
        <tr id="itemGrid" class="small" style="white-space:nowrap">
            <td style="white-space:nowrap;">
                <a class="table-link link-danger" onclick="DeleteBatchItemRow(@item.SeqNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@item.SeqNo</td>
            <td>@item.ItemName<input type="hidden" id="ItemCodeBatch-@Cntr" value="@item.ItemCode" /></td>
            <td id="BatchPartCode-@Cntr">@item.PartCode</td>
            <td>@item.Qty</td>
            <td>@item.RecQty</td>
            <td id="VendorBatchQty-@Cntr">@item.VendorBatchQty</td>
            <td>@item.VendorBatchNo</td>
            <td>@item.UniqueBatchNO</td>
            <td>@item.ManufactureDate</td>
            <td>@item.ExpiryDate</td>
            <td id="PONOBatchAdd-@Cntr">@item.PONO</td>
            <td>@item.POYearCode</td>
            <td id="SchNoBatchAdd-@Cntr">@item.SchNO</td>
            <td>@item.SchYearCode</td>
        </tr>
    }
}