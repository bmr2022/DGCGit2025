            var ToDateBack = sessionStorage.getItem('ToDateBack');
            var PartCodeBack = sessionStorage.getItem('PartCodeBack');
            var ItemNameBack = sessionStorage.getItem('ItemNameBack');
            var StoreWorkcenterBack = sessionStorage.getItem('StoreWorkcenter');
            var StoreNameBack = sessionStorage.getItem('StoreNameBack');
            var WorkCenterBack = sessionStorage.getItem('WorkCenterBack');
            var SummaryDetailBack = sessionStorage.getItem('SummaryDetailBack');
            var GlobalSearchBack = sessionStorage.getItem('GlobalSearchBack');

            var date = new Date();
            date.setMonth(date.getMonth());
            date.setDate(1);

            var currentDate = new Date();
            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                var dateString = day + "/" + month + "/" + year;
                return dateString;

                GetSearchData();
            }
            GetDashItemName();
            GetDashPartCode();
            GetDashStoreName();
            GetDashWorkCenter();

            // $("#StoreWorkcenter").change(function () {
            //     if ($("#StoreWorkcenter").val()=='S')
            //     {
            //         GetDashStoreName();
            //     }
            //     else if ($("#StoreWorkcenter").val() == 'W') {
            //         GetDashWorkCenter();
            //     }
            // })
            //$('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');



            AutoComplete('VStockAdjustment', 'PartCode', 'PartCode', null);
            AutoComplete('VStockAdjustment', 'ItemName', 'ItemName', null);
            AutoComplete('VStockAdjustment', 'StoreWorkcenter', 'StoreWorkcenter', null);
            AutoComplete('VStockAdjustment', 'StoreName', 'Store_Name', null);
            AutoComplete('VStockAdjustment', 'WCName', 'WorkCenter', null);

            if ($('#FromDate1').val() != "" && $('#ToDate1').val() != "") {
                var inputFromDateString = $('#FromDate1').val().split(" ")[0];
                var inputToDateString = $('#ToDate1').val().split(" ")[0];


                var originalFromDate = new Date(inputFromDateString);



                var day = originalFromDate.getDate();
                var month = originalFromDate.getMonth() + 1; // Months are zero-based
                var year = originalFromDate.getFullYear();
                var formattedDate1 = (day < 10 ? '0' : '') + day + '/' + (month < 10 ? '0' : '') + month + '/' + year;


                var originalToDate = new Date(inputToDateString);



                var day = originalToDate.getDate();
                var month = originalToDate.getMonth() + 1; // Months are zero-based
                var year = originalToDate.getFullYear();
                var formattedDate2 = (day < 10 ? '0' : '') + day + '/' + (month < 10 ? '0' : '') + month + '/' + year;



                //var monthMapping = {
                //    "Jan": "01",
                //    "Feb": "02",
                //    "Mar": "03",
                //    "Apr": "04",
                //    "May": "05",
                //    "Jun": "06",
                //    "Jul": "07",
                //    "Aug": "08",
                //    "Sep": "09",
                //    "Oct": "10",
                //    "Nov": "11",
                //    "Dec": "12"
                //};
                //
                //// Parse and format the date
                //var parsedDate1 = inputFromDateString.split('/');
                //var monthAbbreviation1 = parsedDate1[1];
                //var formattedDate1 = parsedDate1[0] + '/' + monthMapping[monthAbbreviation1] + '/' + parsedDate1[2];

                //var parsedDate2 = inputToDateString.split('/');
                //var monthAbbreviation2 = parsedDate2[1];
                //var formattedDate2 = parsedDate2[0] + '/' + monthMapping[monthAbbreviation2] + '/' + parsedDate2[2];

                // Set the formatted date in the datetimepicker
                $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formattedDate1);
                $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formattedDate2);

            }

            RowCount();

            if (FromDateBack != null && FromDateBack != '') {

                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#PartCode').val(PartCodeBack);
                $('#ItemName').val(ItemNameBack);
                $('#StoreWorkcenter').val(StoreWorkcenterBack);
                $('#StoreName').val(StoreNameBack);
                $('#WCName').val(WorkCenterBack);
                $('#SummaryDetail').val(SummaryDetailBack);
                $('#search-box').val(GlobalSearchBack);

            }

            GetSummaryDetail();
            $("#search-box").val($('#search-box').val()).trigger('keyup');

            sessionStorage.removeItem('FromDateBack');
            sessionStorage.removeItem('ToDateBack');
            sessionStorage.removeItem('PartCodeBack');
            sessionStorage.removeItem('ItemNameBack');
            sessionStorage.removeItem('StoreWorkcenterBack');
            sessionStorage.removeItem('StoreNameBack');
            sessionStorage.removeItem('WorkCenterBack');
            sessionStorage.removeItem('SummaryDetailBack');
            sessionStorage.removeItem('GlobalSearchBack');

        });

        function selection(CurrentRow) {

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#divSAGrid tr").not(CurrentRow).css({ 'background-color': '' });
        }

        function GetSummaryDetail() {

            if ($('#SummaryDetail').val() == 'Detail') {
                GetDetailDashboardData();
            } else {
                GetSearchData();
            }
        }

        function GetDetailDashboardData() {
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("DetailDashboard")',
                type: "POST",
                async: false,
                data: $('#SParam').serializeArray(),
                success: function (data) {
                    $('#divStockDashboardGrid').empty().append(data);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function GetSearchData() {

            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                async: false,
                data: $('#SParam').serializeArray(),
                success: function (data) {

                    $('#divStockDashboardGrid').empty().append(data);
                    RowCount();

                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        var currentSearchColumn = null;
        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#divSAGrid tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup');
        });

        $(document).on("click", ".sortCol", function () {
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable('SAGrid', colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('SAGrid', colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function confirmdelete(event) {
            event.preventDefault();
            if (confirm("are you sure you want to delete this entry?")) {
                var linkurl = $(event.currentTarget).attr("href");
                linkurl = linkurl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&PartCode=" + $('#PartCode').val() + "&ItemName=" + $('#ItemName').val() + "&StoreWorkcenter=" + $('#StoreWorkcenter').val() + "&StoreName=" + $('#StoreName').val() + "&WCName=" + $('#WCName').val() + "&SummaryDetail=" + $('#SummaryDetail').val() + "&Searchbox=" + $('#search-box').val();
                window.location.href = linkurl;
            }
        }

        function back(event) {

            event.preventDefault();
            var linkurl = $(event.currentTarget).attr("href");
            linkurl = linkurl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&PartCode=" + $('#PartCode').val() + "&ItemName=" + $('#ItemName').val() + "&StoreWorkcenter=" + $('#StoreWorkcenter').val() + "&StoreName=" + $('#StoreName').val() + "&WCName=" + $('#WCName').val() + "&SummaryDetail=" + $('#SummaryDetail').val() + "&Searchbox=" + $('#search-box').val();
            window.location.href = linkurl;

        }


        function RowCount() {
            var StockRowCount = $('#divStockDashboardGrid tbody tr').length;
            var StockColumnCount = $('#divStockDashboardGrid tbody tr td').length;
            if (StockColumnCount > 1) {
                $('#lblStockTotalNoOfDashRows').text(StockRowCount);
            } else {
                $('#lblStockTotalNoOfDashRows').text(0);
            }
        }

        $("#btnSAExcel").click(function () {

            var table = $(".SAGrid");
            if (table.length === 0) {
                console.error("Table element with ID 'SAGrid' not found.");
                return;
            }

            try {
                table.table2excel({
                    filename: "StockAdjustTable.xls"
                });
            } catch (error) {
                console.error("An error occurred while exporting to Excel:", error);
            }
        });

        function GetDashItemName() {
             ;

            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();

           

            $.ajax({
                url: '@Url.Action("GetDashItemName", "StockAdjustment")',
                type: 'POST',
                async: false,
                data: {

                    FromDate: FromDate,
                    ToDate: ToDate

                },
                success: function (response, status, error) {

                    var ItemNameDropdown = $('#ItemName');
                    var obj = $.parseJSON(response);
                    ItemNameDropdown.empty();
                    ItemNameDropdown.append('<option value="">--Select--</option>');
                    $.each(obj.Result, function (index, ITEMNAME) {
                        ItemNameDropdown.append('<option value="' + ITEMNAME.item_name + '">' + ITEMNAME.item_name + '</option>');
                    });

                    if ($('#Mode').val() == "U" || $('#Mode').val() == "V") {

                        var ItemName = '@Model.ItemName';
                        $('#ItemName').val(ItemName).trigger("change");
                        $('#ItemName').val(ItemName);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Failed to load ledger names.');
                }
            });
        }

