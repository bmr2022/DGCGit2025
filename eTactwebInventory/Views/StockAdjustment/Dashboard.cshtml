@model eTactWeb.DOM.Models.SADashborad

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                Stock Adjustment - <strong>Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="StockAdjustment" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">From Date</label>
                                        <input asp-for="FromDate" maxlength="10" class="form-control" />
                                        <input type="hidden" asp-for="FromDate1" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label">To Date</label>
                                        <input asp-for="ToDate" maxlength="10" class="form-control" />
                                        <input type="hidden" asp-for="ToDate1" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xxl-1 col-xl-1 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="SummaryDetail" class="form-label">Summary/Detail</label>
                                <select asp-for="SummaryDetail" class="form-select" onchange="GetSummaryDetail();">
                                    <option value="">-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                            </div>
                            <div class="col-xxl-2 col-xl-2 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <label asp-for="PartCode" class="form-label"> Part Code</label>

                                <select class="form-control" asp-for="PartCode">
                                    <option value="">-Select-</option>

                                    @* <option value="@Model.ItemName" selected>@Model.ItemName</option> *@

                                </select>
                            </div>
                            <div class="col-xxl-2 col-xl-2 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                
                                <select class="form-control" asp-for="ItemName" >
                                    <option value="">-Select-</option>
                                   
                                        @* <option value="@Model.ItemName" selected>@Model.ItemName</option> *@
                                   
                                </select>
                            </div>
                            <div class="col-xxl-1 col-xl-2 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="StoreWorkcenter" class="form-label">Store/WorkCenter</label>

                                <select class="form-control" asp-for="StoreWorkcenter">
                                    <option value="">-Select-</option>
                                     <option value="S">Store</option>
                                    <option value="W">WorkCenter</option>

                                    @* <option value="@Model.ItemName" selected>@Model.ItemName</option> *@

                                </select>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="StoreName" class="form-label">Store Name</label>

                                <select class="form-control" asp-for="StoreName">
                                    <option value="">-Select-</option>

                                    @* <option value="@Model.ItemName" selected>@Model.ItemName</option> *@

                                </select>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="WCName" class="form-label">Workcenter Name</label>

                                <select class="form-control" asp-for="WCName">
                                    <option value="">-Select-</option>

                                    @* <option value="@Model.ItemName" selected>@Model.ItemName</option> *@

                                </select>
                            </div>
                         
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 d-flex justify-content-end mt-3">
                                <button class="btn btn-sm btn-outline-info me-3" type="button" onclick="GetSummaryDetail();">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success me-3" style="padding:3px;height:30px;width:100px;" type="button" id="btnSAExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                </button>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="StockAdjustment" asp-action="Dashboard">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                </a>
                                <div class="ms-auto d-flex align-items-center">
                                    <div class="col-auto">
                                        <label class="form-label me-2">Global search</label>
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" asp-for="Searchbox" id="search-box" style="background-color:#FFFACD" placeholder="Search..." fdprocessedid="pr7n9">
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-xxl-2 col-xl-6 col-lg-3 col-md-6 col-sm-12 col-xs-12" style="margin-left:50px;margin-top:10px;">
                            <label class="color-box" style="background-color: #FF0000;"></label><label style="margin-left:5px;margin-top:-5px;">UNAPPROVED</label>
                            <label class="color-box" style="background-color: green;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">APPROVED</label>
                            <label class="color-box" style="background-color: blue;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Amendment Approved</label>
                            </div>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divStockDashboardGrid">
                    <partial name="_SADashboardGrid" />
                </div>

            </div>
            <div class="row g-2 gx-3">
                <div class="col-12 text-center mb-1">
                    <strong>Total No Of Rows : <span id="lblStockTotalNoOfDashRows"></span></strong>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-box {
        width: 10px;
        height: 10px;
    }
</style>

@section Scripts
{
    <script>
        $(function () {

