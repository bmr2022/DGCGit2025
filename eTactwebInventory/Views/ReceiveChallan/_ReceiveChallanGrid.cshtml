@model eTactWeb.DOM.Models.ReceiveChallanModel

@if (Model.ReceiveChallanList == null)
{
    <tr class="text-center">
        <td colspan="29" class="text-black-50"><strong class="text-danger">NO DATA ADDED</strong></td>
    </tr>
}
else
{
    var Cntr = 0;
    foreach (var item in Model.ReceiveChallanList)
    {
        Cntr = Cntr + 1;
        <tr class="small @item.SeqNo" style="white-space:nowrap">
            <td style="width:4%">
                @if (Model.Mode == "V" && Model.ID > 0)
                {
                    <a class="table-link link-danger noCursor" disabled>
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                }
                else
                {
                    <a class="table-link link-primary" style="border:none;" id="editButton-@Cntr" onclick="EditItemRows(@item.SeqNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                   @* <a class="table-link link-danger" onclick="DeleteItemRow(@item.SeqNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>*@
                }
            </td>
            <th data-seqno="@item.SeqNo">@item.SeqNo <input type="hidden" id="SeqNo-@Cntr" value="@item.SeqNo" /></th>
            <td>@item.PartCode <input type="hidden" id="ItemCode-@Cntr" value="@item.ItemCode" data-partCode="@item.PartCode" data-itemName="@item.ItemName" /></td>
            <td>@item.ItemName</td>
            <td>@item.IssueChallanEntryId</td>
            <td>@item.IssueChallanYearCode</td>
            <td>@item.IssueChallanNo</td>
            <td>@item.RecQty</td>
            <td>@item.Unit</td>
            <td>@item.Rate.ToString("#.#0")</td>
            <td id="GridAmount-@Cntr">@item.Amount</td>
            <td>@item.IssuedQty</td>
            <td>@item.PendQty</td>
            <td>@item.Produced</td>
            <td>@item.RemarkDetail</td>
            <td>@item.GateQty</td>
            <td>@item.StoreName</td>
            <td>@item.pendtoissue</td>
            <td>@item.BatchNo</td>
            <td>@item.UniqueBatchno</td>
            <td>@item.ItemSize</td>
            <td>@item.AltUnit</td>
            <td>@item.AltQty</td>
            <td>@item.PONO</td>
            <td>@item.POYearCode</td>
            <td>@(item.PODate == null || item.PODate == default ? string.Empty : item.PODate.Split(" ")[0])</td>
            <td>@item.SchNo</td>
            <td>@(item.SchDate == null || item.SchDate == default ? string.Empty : item.SchDate.Split(" ")[0])</td>
            <td>@item.SchYearCode</td>
        </tr>

    }
}
