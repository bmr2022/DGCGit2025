@section Scripts
    {
    <script>
        $(document).ready(function () {
            GetFormRights();
            var FromDateBack = sessionStorage.getItem('FromDateBack');
            var ToDateBack = sessionStorage.getItem('ToDateBack');
            var AccountNameBack = sessionStorage.getItem('AccountNameBack');
            var PartCodeBack = sessionStorage.getItem('PartCodeBack');
            var ItemNameBack = sessionStorage.getItem('ItemNameBack');
            var GateNoBack = sessionStorage.getItem('GateNoBack');
            var ChallanNoBack = sessionStorage.getItem('ChallanNoBack');
            var SummaryDetailBack = sessionStorage.getItem('SummaryDetailBack');
            var GlobalSearchBack = sessionStorage.getItem('GlobalSearchBack');
           
            var CurrentDate = new Date();

            CurrentDate.setDate(1);
            var formattedDate = new Intl.DateTimeFormat('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            }).format(CurrentDate);

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formattedDate);
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#PartCode').rules('remove', 'required');
            
             
            AutoComplete('VReceiveChallanmainDetail', 'Account_Name', 'Account_Name', null);
            AutoComplete('VReceiveChallanmainDetail', 'PartCode', 'PartCode', null);
            AutoComplete('VReceiveChallanmainDetail', 'ItemName', 'ItemName', null);
            AutoComplete('VReceiveChallanmainDetail', 'gateno', 'gateno', null);
            AutoComplete('VReceiveChallanmainDetail', 'ChallanNo', 'ChallaNo', null);

            if (FromDateBack != null && FromDateBack != '') {
                 
                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#Account_Name').val(AccountNameBack);
                $('#PartCode').val(PartCodeBack);
                $('#ItemName').val(ItemNameBack);
                $('#gateno').val(GateNoBack);
                $('#ChallanNo').val(ChallanNoBack);
                $('#SummaryDetail').val(SummaryDetailBack);
                $('#search-box').val(GlobalSearchBack);
            }

            GetSearchData();
            
            $("#search-box").val($('#search-box').val()).trigger('keyup');


        });
    function loadPage(pageNumber) {
                var data = $('#SParam').serialize(); // serialize filters
            data += '&pageNumber=' + pageNumber + '&pageSize=15'; // match controller default

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetSearchData", "ReceiveChallan")',
                data: data,
                success: function (result) {
                        $('#divDashboardGrid').html(result);
                    $('#currentPage').val(pageNumber);

                    // Optional functions
                    GetFeatureOption();
                    GetFormRights();
                    // GetTotalAmounts();
                }
            });
        }

        // Handle pagination button click
        $(document).on('click', '.page-btn', function (e) {
            e.preventDefault();
            var page = $(this).data('page');
            loadPage(page);
        });
        function GetFeatureOption() {

            $.ajax({
                type: "POST",
                data: {},
                url: "@Url.Action("GetFeatureOption")",
                dataType: "json",
                success: function (result, status, error) {

                    if (result != null) {
                        var obj = $.parseJSON(result);
                        if (obj.Result != null) {
                            if (obj.Result[0].ShowOtherReqFields === "N") {
                                $('.ShowOtherReqFields').hide();
                            } else {
                                $('.ShowOtherReqFields').show();
                            }
                            if (obj.Result[0].ShowDetailtableFields === "N") {
                                $('.ShowDetailtableFields').hide();
                            } else {
                                $('.ShowDetailtableFields').show();
                            }
                            if (obj.Result[0].ShowOtherFields === "N") {
                                $('.ShowOtherFields').hide();
                            } else {
                                $('.ShowOtherFields').show();
                            }




                        }
                    }
                }
            });
        }

        function GetFormRights() {

            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                async: false,
                success: function (data) {

                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.Result.Table.length == 0) {
                            var rowCounter = $('#gateDashboardtable tr').length;
                            for (var i = 0; i < rowCounter; i++) {
                                $('#viewCursorDiv-' + i).empty();
                                $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                                <span class="fa-stack">
                                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                                </span>
                                                                                                            </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#editCursorDiv-' + i).empty();
                                $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                                        <span class="fa-stack">
                                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                                        </span>
                                                                                                                    </a>`);
                            }
                            for (var i = 0; i < rowCounter; i++) {
                                $('#deleteCursorDiv-' + i).empty();
                                $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                                        <span class="fa-stack">
                                                                                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                                        </span>
                                                                                                                    </a>`);
                            }
                            $("#divDashboardGrid").css("display", "none");
                            $(".totalrows").css("display", "none");
                            $("#SParam").hide();
                        } else {

                            var optAll = obj.Result.Table[0].OptAll;
                            var optSave = obj.Result.Table[0].OptSave;
                            var optUpdate = obj.Result.Table[0].OptUpdate;
                            var optDelete = obj.Result.Table[0].OptDelete;
                            var optView = obj.Result.Table[0].OptView;
                            var rowCounter = $('#divDashboardGrid tr').length;
                            if (!optAll) {
                                if (!optSave) {

                                    $("#savebtn").css("pointer-events", "none");
                                } else {
                                    $("#savebtn").css("pointer-events", "");
                                }
                                if (!optView) {

                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#viewCursorDiv-' + i).empty();
                                        $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                    }
                                }
                                if (!optUpdate) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#editCursorDiv-' + i).empty();
                                        $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                    }
                                }
                                if (!optDelete) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#deleteCursorDiv-' + i).empty();
                                        $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                    }
                                }
                                if (!(optUpdate || optDelete || optView)) {
                                    $("#divDashboardGrid").css("display", "none");
                                    $(".totalrows").css("display", "none");
                                    $("#SParam").hide();
                                }
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }


        function GetSearchData() {
             
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                async:false,
                data: $('#SParam').serializeArray(),
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    GetFormRights();
                    GetFeatureOption();
                    // RowCount();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function selection(CurrentRow) {

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#RCDashboardGrid tr").not(CurrentRow).css({ 'background-color': '' });
        }

        function BackButtonData(event) {
              
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&Account_Name=" + $('#Account_Name').val() + "&GateNo=" + $('#gateno').val() + "&PartCode=" + $('#PartCode').val() + "&ItemName=" + $('#ItemName').val() + "&ChallanNo=" + $('#ChallanNo').val() + "&SummaryDetail=" + $('#SummaryDetail').val() + "&Searchbox=" + $('#search-box').val();
            window.location.href = linkUrl;
        }

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#RCDashboardGrid tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup');
        });

        $(document).on("click", ".sortCol", function () {
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable(colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable(colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function sortTable(columnIndex, ascending) {

            var table = $('.RCDashboard');
            var rows = table.find('#RCDashboardGrid > tr').toArray();

            rows.sort(function (a, b) {
                var aValue = $(a).find('td').eq(columnIndex).text().trim();
                var bValue = $(b).find('td').eq(columnIndex).text().trim();

                var aIntValue = 0;
                var bIntValue = 0;
                if (/^\d+$/.test(aValue) && /^\d+$/.test(bValue)) {
                    aIntValue = parseInt(aValue, 10);
                    bIntValue = parseInt(bValue, 10);
                }

                if (aIntValue > 0) {
                    if (ascending) {
                        return aValue - bValue;
                    } else {
                        return bValue - aValue;
                    }
                } else {
                    if (ascending) {
                        return aValue.localeCompare(bValue);
                    } else {
                        return bValue.localeCompare(aValue);
                    }
                }
            });

            $.each(rows, function (index, row) {
                table.children('#RCDashboardGrid').append(row);
            });
        }


        function confirmdelete(event) {
            event.preventDefault();
            if (confirm("are you sure you want to delete this entry?")) {
                var linkurl = $(event.currentTarget).attr("href");
                linkurl = linkurl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&AccountName=" + $('#Account_Name').val() + "&PartCode=" + $('#PartCode').val() + "&ItemName=" + $('#ItemName').val() + "&GateNo=" + $('#gateno').val() + "&ChallanNo=" + $('#ChallanNo').val() + "&SummaryDetail=" + $('#SummaryDetail').val();
                window.location.href = linkurl;
            }
        }

