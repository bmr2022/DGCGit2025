        function CheckEditOrDelete(urlHref, GateNo, YearCode) {

            event.preventDefault();
            $.ajax({
                url: '@Url.Action("CheckEditOrDelete")',
                type: "POST",
                data: { "GateNo": GateNo, "YearCode": YearCode },
                async: false,
                success: function (data) {

                    var obj = $.parseJSON(data);
                    if (obj.Result[0].MRNNO === '' && obj.Result[0].MRNTYPE === '') {
                        var linkUrl = urlHref;
                        linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&VendorName=" + $('#VendorName').val() + "&GateNo=" + $('#Gateno').val() + "&PartCode=" + $('#PartCode').val() + "&ItemName=" + $('#ItemName').val() + "&DocName=" + $('#DocName').val() + "&PONO=" + $('#PONO').val() + "&ScheduleNo=" + $('#ScheduleNo').val() + "&Searchbox=" + $('#search-box').val() + "&DashboardType=" + $('#DashboardType').val();
                        window.location.href = linkUrl;
                    }
                    else {

                        var MrnNo = obj.Result[0].MRNNO;
                        if (obj.Result[0].MRNTYPE === 'MRN') {
                            $.notify("Cannot edit/delete this item as MRN: " + MrnNo + " already exists", "error");
                            return false;
                        } else if (obj.Result[0].MRNTYPE === 'CUSTOMER JobWork') {
                            $.notify("Cannot edit/delete this item as Customer JobWork:" + MrnNo + " already exists", "error");
                            return false;
                        } else if (obj.Result[0].MRNTYPE === 'JobWork') {
                            $.notify("Cannot edit/delete this item as JobWork:" + MrnNo + " already exists", "error");
                            return false;
                        }
                        else if (obj.Result[0].MRNTYPE === 'CHALLAN') {

                            $.notify("Cannot edit/delete this item as Challan:" + MrnNo + " already exists", "error");
                            return false;
                        }
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }


