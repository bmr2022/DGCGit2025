                            <td>@item.FromStoreName</td>
                            <td>@item.Remark</td>
                            <td>@item.TotalStockQty</td>
                            <td>@item.LotStockQty</td>
                            <td>@item.Qty</td>
                            <td>@item.Unit</td>
                            <td>@item.AltQty</td>
                            <td>@item.AltUnit</td>
                            <td>@item.Rate</td>
                            <td>@item.Batchno</td>
                            <td>@item.UniqueBatchNo</td>
                            <td>@item.PartCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.ToStorename</td>
                            <td>@item.ToWCName</td>
                            <td>@item.ReasonOfTransfer</td>
                            <td>@item.RecStoreStock</td>
                            <td>@item.EntryId</td>
                            <td>@item.YearCode</td>
                            <td>@(item.EntryDate == null ? string.Empty : item.EntryDate.Split(" ")[0])</td>
                            <td>@item.ActualEntryByName</td>
                            <td>@(item.ActualEntryDate == null ? string.Empty : item.ActualEntryDate.Split(" ")[0])</td>
                            <td>@item.LastUpdatedByName</td>
                            <td>@(item.LastUpdatetionDate == null ? string.Empty : item.LastUpdatetionDate.Split(" ")[0])</td>
                            <td>@item.CC</td>
                            <td>@item.MachineName</td>

                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}
