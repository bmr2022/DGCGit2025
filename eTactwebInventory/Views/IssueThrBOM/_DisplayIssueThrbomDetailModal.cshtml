@model eTactWeb.DOM.Models.IssueThrBom

<div class="modal fade" id="DisplayIssueThrbomDetailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"> Bom Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-2 gx-3">
                            <div class="card-body text-center overflow-auto pb-0">
                                <div class="table-responsive" style="max-height:350px;">
                                    <table class="table table-hover table-bordered table-striped mb-0 BomDetailtable">
                                        <thead class="bg-gradient card-headerBG text-light small" style="white-space:nowrap">
                                            <tr>
                                                <th>Sr#</th>
                                                <th>FG PartCode</th>
                                                <th>FG ItemName</th>
                                                <th>PartCode</th>
                                                <th>RM ItemName</th>
                                                <th>RM PartCode</th>
                                                <th>BOM Qty</th>
                                                <th>Req Qty</th>
                                            </tr>
                                        </thead>
                                        <tbody id="divDisplayReqThrBomDetail">
                                            <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="progress my-2" style="height: 4px;">
                        <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="row g-2 gx-3">
                        <div class="col-12 text-center">
                            <strong>Total No Of Items : <span id="lblTotalNoOfItems"></span></strong>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-sm-3 col-md-6 col-lg-2 col-xl-3 justify-content-center" style="margin-left:50px;margin-top:10px;">
                        <label class="color-box" style="background-color: #94d6df;"></label><label style="margin-left:5px;margin-top:-5px;">SubBom Exist</label>
                        <label class="color-box" style="background-color: #ffddbf;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Child Part</label>
                    </div>
                    <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 justify-content-center mt-4" style="margin-left:50px;margin-top:10px;">
                        <button class="btn btn-sm btn-outline-success me-3" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="btnBomExcel" onclick="ExportBomDetailList()">
                            <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
