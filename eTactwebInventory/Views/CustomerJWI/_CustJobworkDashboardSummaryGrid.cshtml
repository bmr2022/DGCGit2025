 @model eTactWeb.DOM.Models.CustJWIssQDashboard;
<div class="table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss text-nowrap mb-0" id="GateDataTable" style="width: 100%;">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashGateThead">
            <tr>
                <th>Sr#</th>
                <th style="width:50px !important">Action</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="1"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Entry Date</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="2"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Challan No</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="3"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Challan Date</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="4"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer Name</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="5"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer Address</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="6"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer State</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="7"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer State Code</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="8"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>GST Type</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="9"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Job Work Type</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="10"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Total Amount</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="11"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Net Amount</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="12"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>E-Way Bill</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="13"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Entry Machine Name</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="14"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issued By Employee Name</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="15"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Vehicle No</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="16"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Time Of Removal</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="17"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Dispatch Through</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="18"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Dispatch To</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="19"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Entry By Employee</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="20"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Actual Entry Date</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="21"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Updated By Employee</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="22"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Updated On</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="23"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Remark</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="24"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>CC</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="25"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>UID</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="26"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Bill No</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="27"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Bill Year Code</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="28"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer Job Work Issue Entry ID</th>
                <th class="sortCol" data-sortorder="asc" data-columnno="29"><span style="padding:5px; margin:5px;" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Customer Job Work Issue Year Code</th>
            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var Cntr = 0;
                if (Model.CustJWIssQDashboardGrid == null || Model.CustJWIssQDashboardGrid.Count == 0)
                {
                    <tr class="text-center"><td colspan="6" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.CustJWIssQDashboardGrid)
                    {
                        Cntr = Cntr + 1;
                        <tr onclick="selection(this)">
                            <td>@Cntr</td>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">
                                    <div id="viewCursorDiv-@Cntr">
                                        <a class="table-link link-success" asp-action="CustomerJWI" asp-route-Mode="V" asp-route-EntryId="@Cntr" onclick="BackButtonData(event,'@item.EntryId');">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div id="editCursorDiv-@Cntr">
                                        <a class="table-link link-primary"
                                           asp-route-ID="@Cntr"
                                           asp-action="CustomerJWI"
                                           asp-controller="CustomerJWI"
                                           asp-route-Mode="U"
                                           asp-route-CustomerName="@item.CustomerName"
                                           asp-route-Account_Code="@item.Account_Code"
                                           asp-route-CustomerAddress="@item.CustomerAddress"
                                           asp-route-GSTNO="@item.GSTNO"
                                           asp-route-State="@item.State"
                                           asp-route-StateCode="@item.StateCode"
                                           asp-route-JWType="@item.JWType"
                                           asp-route-DistKm="@item.DistKm"
                                           asp-route-VehicleNo="@item.VehicleNo"
                                           asp-route-TransporterName="@item.TransporterName"
                                           asp-route-DispatchThrough="@item.DispatchThrough"
                                           asp-route-DispatchTo="@item.DispatchTo"
                                           asp-route-Types="@item.Types"
                                           asp-route-YearCode="@item.CustJwIssYearCode"
                                           asp-route-ChallanNo="@item.ChallanNo"
                                           asp-route-ChallanDate="@item.ChallanDate"
                                           asp-route-CustJwIssEntryId="@item.CustJwIssEntryId"
                                           asp-route-GSTType="@item.GSTType"
                                           asp-route-EntryDate="@item.ActualEntryDate"
                                           asp-route-Remark="@item.Remark"
                                           asp-route-TimeOfRemovel="@item.TimeOfRemovel"
                                          
                                           onclick="confirmEdit(event)">

                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div id="deleteCursorDiv-@Cntr">
                                        <a class="table-link link-danger" id="deleteCursor-@Cntr" onclick="confirmDelete(event)" asp-action="DeleteByID" 
                                        asp-route-CustJwIssEntryId="@item.CustJwIssEntryId"
                                        asp-route-CustJwIssYearCode="@item.CustJwIssYearCode"
                                        asp-route-EntryMachineName="@item.EntryMachineName"
                                        asp-route-ActualEntryDate="@item.ActualEntryDate"
                                        asp-route-EntryById="@Cntr"
                                         asp-route-Account_Code="@item.Account_Code"
                                        >
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@item.EntryDate</td>
                            <td>@item.ChallanNo</td>
                            <td>@item.ChallanDate</td>
                            <td>@item.CustomerName<input type="hidden" asp-for="@item.Account_Code" /></td>
                            <td>@item.CustomerAddress</td>
                            <td>@item.State</td>
                            <td>@item.StateCode</td>
                            <td>@item.GSTType</td>
                            <td>@item.JWType</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.NetAmount</td>
                            <td>@item.EWayBill</td>
                            <td>@item.EntryMachineName</td>
                            <td>@item.IssuedByEmpName</td>
                            <td>@item.VehicleNo</td>
                            <td>@item.TimeOfRemovel</td>
                            <td>@item.DispatchThrough</td>
                            <td>@item.DispatchTo</td>
                            <td>@item.EntryByEmp</td>
                            <td>@item.ActualEntryDate</td>
                            <td>@item.UpdatedByEmp</td>
                            <td>@item.UpdatedOn</td>
                            <td>@item.Remark</td>
                            <td>@item.CC</td>
                            <td>@item.UID</td>
                            <td>@item.BillNo</td>
                            <td>@item.BillYearCode</td>
                            <td>@item.CustJwIssEntryId</td>
                            <td>@item.CustJwIssYearCode</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows">@Cntr</span></strong></center>

<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
