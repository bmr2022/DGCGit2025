
@model List<eTactWeb.DOM.Models.CustomerJobWorkIssueModel>

@{
    @if (Model == null)
    {
        <tr class="text-center">
            <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
        </tr>
    }
    else
    {
        var @Cntr = 0;
        foreach (var item in Model)
        {
            Cntr = Cntr + 1;
            <tr id="@Cntr" class="small" id="divUnMain" style="white-space:nowrap">
                <td style="white-space:nowrap;">

                    <a class="table-link link-primary" style="border:none;" id="editButton-@Cntr" onclick="EditItemRow(@item.SEQNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>

                    <a class="table-link link-danger" onclick="DeleteItemRow(@item.SEQNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>

                </td>
                
                <td>@item.CustJwRecEntryId</td>
                <td>@item.CustJWRecChallanNo</td>
                <td>@item.CustJWRecYearCode</td>
                <td>@item.ChallanDate</td>
                <td>@item.RecPartCode</td>
                <td>@item.RecItemName</td>
                <td>@item.RecItemcode</td>
                <td>@item.BOMNO</td>
                <td>@item.Bomdate</td>
                <td>@item.BOMInd</td>
                <td>@item.PendQty</td>
                <td>@item.IssPartCode</td>
                <td>@item.IssItemName</td>
                <td>@item.BOMQty</td>
                <td>@item.Through</td>
                <td>@item.QtyToBeRec</td>
                <td>@item.TotalAdjQty</td>
                <td>@item.Recbatchno</td>
                <td>@item.Recuniquebatchno</td>
                <td>@item.SEQNo</td>
                <td>@item.TotalRecQty</td>
                <td>@item.Rate</td>
                <td>@item.QriginalRecQty</td>
                <td>@item.IdealScrapQty</td>
                <td>@item.IssuedScrapQty</td>

            </tr>
        }
    }
}
<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
