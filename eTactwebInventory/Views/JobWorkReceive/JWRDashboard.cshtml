@model eTactWeb.DOM.Models.JWRecQDashboard
@using Microsoft.AspNetCore.Http
@using System.Reflection.PortableExecutable
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Dashboard";
    string yearCode = HttpContextAccessor.HttpContext.Session.GetString("YearCode");
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                JOBWORK RECEIVE CHALLAN - <strong>Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="JobWorkReceive" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient" id="savebtn">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">From Date</label>
                                        <input id="FromDate" maxlength="10" class="form-control" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label">To Date</label>
                                        <input id="ToDate" maxlength="10" class="form-control" />
                                    </div>
                                    <input asp-for="FromDate1" type="hidden" />
                                    <input asp-for="ToDate1" type="hidden" />
                                </div>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label class="form-label">Dashboard type</label>
                                <select asp-for="DashboardType" class="form-select">
                                    <option disabled>-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="VendorName" class="form-label">Vendor Name</label>
                                <input asp-for="VendorName" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="PartCode" class="form-label">Part Code</label>
                                <input asp-for="PartCode" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="InvNo" class="form-label">Invoice No</label>
                                <input asp-for="InvNo" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="MRNNo" class="form-label">MRN No</label>
                                <input asp-for="MRNNo" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="GateNo" class="form-label">Gate No</label>
                                <input asp-for="GateNo" class="form-control" />
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label asp-for="CC" class="form-label">Branch</label>
                                <input asp-for="CC" class="form-control" />
                            </div>
                          
                            <div class="col-sm-2 col-md-6 col-lg-4 col-xl-2">
                                <label class="form-label">Global search</label>
                                <input type="text" class="form-control" asp-for="SearchBox" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                            </div>
                            <div class=" d-flex justify-content-center mt-3" width="inherit">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="GetSearchData();" style="padding:3px;height:30px;width:100px;margin-left:20px;">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                </button>
                                <a class="btn btn-sm btn-outline-danger" style="padding:3px;height:30px;width:100px;margin-left:20px;" asp-controller="JobWorkReceive" asp-action="JWRDashboard" asp-route-FromDate="@DateTime.Today" asp-route-Todate="@DateTime.Today" asp-route-Flag="True">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_JobWorkRecDashboardGrid" />
                </div>
            </div>
            <center><strong class="totalrows">TOTAL ROWS : <span id="totalRows"></span></strong></center>

        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(function () {

            var VendorNameBack = sessionStorage.getItem('VendorNameBack');
            var ItemNameBack = sessionStorage.getItem('ItemNameBack');
            var PartCodeBack = sessionStorage.getItem('PartCodeBack');
            var InvoiceNoBack = sessionStorage.getItem('InvoiceNoBack');
            var MRNNoBack = sessionStorage.getItem('MRNNoBack');
            var GateNoBack = sessionStorage.getItem('GateNoBack');
            var BranchBack = sessionStorage.getItem('BranchBack');
            var FromDateBack = sessionStorage.getItem('FromDateBack');
            var ToDateBack = sessionStorage.getItem('ToDateBack');
            var DashboardTypeBack = sessionStorage.getItem('DashboardTypeBack');
            var GlobalSearchBack = sessionStorage.getItem('GlobalSearchBack');
             
            //$("#FromDate").datepicker({ changeMonth: true, changeYear: true, dateFormat: 'dd/mm/yy' });
            //$("#FromDate").on('keydown', function (e) { e.preventDefault(); return false; });
            //$("#ToDate").datepicker({ changeMonth: true, changeYear: true, dateFormat: 'dd/mm/yy' });
            //$("#ToDate").on('keydown', function (e) { e.preventDefault(); return false; });
            GetFormRights();

            var fromDate;
            var toDate;


            $('#FromDate,#ToDate').datepicker({ dateFormat: 'dd/mm/yy' });
            $('#FromDate').change(function () {
                fromDate = $(this).datepicker('getDate');
                $('#ToDate').datepicker("option", "minDate", fromDate);
            });
            $('#ToDate').change(function () {
                toDate = $(this).datepicker('getDate');
                $('#FromDate').datepicker("option", "maxDate", toDate);
            });
            var today = new Date();
            var threeMonthsAgo = new Date(today.getTime() - (3 * 30 * 24 * 60 * 60 * 1000));
            var currentDate = new Date();

            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#ToDate').change(function () {
                $.ajax({
                    url: '@Url.Action("JWRDashboard","JobWorkReceive")',
                    type: "POST",
                    data: { FromDate: $('#FromDate').val(), Todate: $('#ToDate').val(), Flag: "False" },
                    success: function (data) {
                        $('#divDashboardGrid').empty().append(data);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            });


            AutoComplete('VJobworkReceivemaindetail', 'VendorName', 'VendorName', null);
            AutoComplete('VJobworkReceivemaindetail', 'ItemName', 'ItemName', null);
            AutoComplete('VJobworkReceivemaindetail', 'PartCode', 'PartCode', null);
            AutoComplete('VJobworkReceivemaindetail', 'InvNo', 'InvNo', null);
            AutoComplete('VJobworkReceivemaindetail', 'MRNNo', 'MRNNo', null);
            AutoComplete('VJobworkReceivemaindetail', 'GateNo', 'GateNo', null);
            AutoComplete('VJobworkReceivemaindetail', 'CC', 'BranchName', null);


            if ($('#FromDate1').val() != "" && $('#ToDate1').val() != "") {
                 
                var inputFromDateString = $('#FromDate1').val().split(" ")[0];
                var inputToDateString = $('#ToDate1').val().split(" ")[0];

                var originalFromDate = new Date(inputFromDateString);
                var originalToDate = new Date(inputToDateString);


                //fromdate
                var day = originalFromDate.getDate();
                var month = originalFromDate.getMonth() + 1; // Months are zero-based
                var year = originalFromDate.getFullYear();

                var convertedFromDateText = day.toString().padStart(2, '0') + '/' + month.toString().padStart(2, '0') + '/' + year;

                //todate
                var day = originalToDate.getDate();
                var month = originalToDate.getMonth() + 1; // Months are zero-based
                var year = originalToDate.getFullYear();

                var convertedToDateText = day.toString().padStart(2, '0') + '/' + month.toString().padStart(2, '0') + '/' + year;


                $('#FromDate').val(convertedFromDateText);
                $('#ToDate').val(convertedToDateText);

            }

            if (FromDateBack != null  &&  FromDateBack != '') {
                 
                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#Gateno').val(GateNoBack);
                $('#VendorName').val(VendorNameBack);
                $('#PartCode').val(PartCodeBack);
                $('#ItemName').val(ItemNameBack);
                $('#InvoiceNo').val(InvoiceNoBack);
                $('#search-box').val(GlobalSearchBack);
                $('#DashboardType').val(DashboardTypeBack);
                $('#MRNNo').val(MRNNoBack);
                $('#Branch').val(BranchBack);
            }
            GetSearchData();

            $("#search-box").val($('#search-box').val()).trigger('keyup');
            
            sessionStorage.removeItem('FromDateBack');
            sessionStorage.removeItem('ToDateBack');
            sessionStorage.removeItem('GateNoBack');
            sessionStorage.removeItem('VendorNameBack');
            sessionStorage.removeItem('PartCodeBack');
            sessionStorage.removeItem('ItemNameBack');
            sessionStorage.removeItem('MRNNoBack');
            sessionStorage.removeItem('GlobalSearchBack');
            sessionStorage.removeItem('DashboardTypeBack');
            sessionStorage.removeItem('BranchBack');
            sessionStorage.removeItem('InvoiceNoBack');
        });

        function formatDate(date) {
            var day = ("0" + date.getDate()).slice(-2);
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var year = date.getFullYear();
            var dateString = day + "/" + month + "/" + year;
            return dateString;
        }
        function GetSearchData() {
            if($('#DashboardType').val()=="Summary"){
                GetSummaryData();
            }
            else{
                GetDetailData();
            }
        }

        function GetSummaryData(){
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                async: false,
                data: { VendorName: $('#VendorName').val(), MRNNo: $('#MRNNo').val(), GateNo: $('#GateNo').val(), PartCode: $('#PartCode').val(), ItemName: $('#ItemName').val(), BranchName: $('#CC').val(), InvNo: $('#InvNo').val(), Fromdate: $('#FromDate').val(), Todate: $('#ToDate').val() },
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    var RowCount = $('#JWRTbody tr').length;
                    $('#totalRows').text(RowCount);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function GetDetailData(){
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetDetailData")',
                type: "POST",
                async: false,
                data: { VendorName: $('#VendorName').val(), MRNNo: $('#MRNNo').val(), GateNo: $('#GateNo').val(), PartCode: $('#PartCode').val(), ItemName: $('#ItemName').val(), BranchName: $('#CC').val(), InvNo: $('#InvNo').val(), Fromdate: $('#FromDate').val(), Todate: $('#ToDate').val() },
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    var RowCount = $('#JWRTbody tr').length;
                    $('#totalRows').text(RowCount);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        $('#sendToExcel').click(function () {
            let table = $("#JWRTable");
             (table);
             ;
            TableToExcel.convert(table[0], {
                name: `JobWorkReceiveDashboard.xlsx`,
                sheet: {
                    name: 'JobWorkReceiveDashboard'
                }
            });
        });

        function GetFormRights() {
             
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    if (data != null) {
                         
                        var obj = $.parseJSON(data);
                         (obj);
                        var optAll = obj.Result.Table[0].OptAll;
                        var optSave = obj.Result.Table[0].OptSave;
                        var optUpdate = obj.Result.Table[0].OptUpdate;
                        var optDelete = obj.Result.Table[0].OptDelete;
                        var optView = obj.Result.Table[0].OptView;
                        var rowCounter = $('#divDashboardGrid tr').length;
                        if (!optAll) {
                            if(!optSave){
                                $("#savebtn").css("pointer-events", "none");
                            }else{
                                $("#savebtn").css("pointer-events", "");
                            }
                            if (!optView) {

                                for (var i = 0; i < rowCounter; i++) {
                                    $('#viewCursorDiv-' + i).empty();
                                    $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>`);
                                }
                            }
                            if (!optUpdate) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#editCursorDiv-' + i).empty();
                                    $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>`);
                                }
                            }
                            if (!optDelete) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#deleteCursorDiv-' + i).empty();
                                    $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>`);
                                }
                            }
                            if (!(optUpdate || optDelete || optView)) {
                                $("#divDashboardGrid").css("display", "none");
                                $(".totalrows").css("display", "none");
                                $("#SParam").hide();
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }

        function confirmDelete(event, MrnNo, YearCode) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            if (confirm("Are you sure you want to delete this entry?")) {
                CheckEditOrDelete(urlHref, MrnNo, YearCode);
            }
        }
        
        function confirmEdit(event, MrnNo, YearCode) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            CheckEditOrDelete(urlHref, MrnNo, YearCode);
        }

        function CheckEditOrDelete(urlHref, MrnNo, YearCode) {
             
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("CheckEditOrDelete")',
                type: "POST",
                data: { "MRNNo": MrnNo, "YearCode": YearCode },
                async: false,
                success: function (data) {
                     
                    var obj = $.parseJSON(data);
                    if (obj.Result.length > 0) {
                        if (obj.Result[0].MIRNO == '') {
                            var linkUrl = urlHref;
                            linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&VendorName=" + $('#VendorName').val() + "&ItemName=" + $('#ItemName').val() + "&PartCode=" + $('#PartCode').val() + "&InvNo=" + $('#InvNo').val() + "&MRNNo=" + $('#MRNNo').val() + "&GateNo=" + $('#GateNo').val() + "&CC=" + $('#CC').val() + "&DashboardType=" + $('#DashboardType').val();
                            window.location.href = linkUrl;
                        }
                        else {
                            var MirNo = obj.Result[0].MIRNO;
                            $.notify("Cannot edit/delete this item as QC with MirNo : " + MirNo + " already exists", "error");
                            return false;
                        }
                    }
                    else {
                        var linkUrl = urlHref;
                        linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&VendorName=" + $('#VendorName').val() + "&MrnNo=" + $('#MrnNo').val() + "&GateNo=" + $('#GateNo').val() + "&PoNo=" + $('#PONo').val() + "&ItemName=" + $('#ItemName').val() + "&PartCode=" + $('#PartCode').val() + "&Type=" + $('#DashboardType').val();
                        window.location.href = linkUrl;
                    }

                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function BackButtonData(event) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&VendorName=" + $('#VendorName').val() + "&ItemName=" + $('#ItemName').val() + "&Partcode=" + $('#PartCode').val() + "&InvoiceNo=" + $('#InvNo').val() + "&MRNNo=" + $('#MRNNo').val() + "&GateNo=" + $('#GateNo').val() + "&Branch=" + $('#CC').val() + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&DashboardType=" + $('#DashboardType').val() + "&SearchBox=" + $('#search-box').val();
            window.location.href = linkUrl;
        }

        var currentSearchColumn = null;
        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#JWRTbody tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup'); // Reset search box and trigger the search
        });

        $(document).on("click", ".sortCol", function () {
             
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');
            if (currentOrder === 'asc') {
                sortTable('JWRTable', colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow'); // Visual indication of descending order
                //$(this).css('font-size', 'larger'); // Visual indication of descending order
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('JWRTable', colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger'); // Visual indication of ascending order
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function selection(CurrentRow) {

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#JWRTbody tr").not(CurrentRow).css({ 'background-color': '' });
        }

    </script>
    <script src="https://cdn.jsdelivr.net/gh/linways/table-to-excel@v1.0.4/dist/tableToExcel.js"></script>



}