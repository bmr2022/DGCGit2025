                                <select class="form-select" asp-for="ChallanType">
                                    <option value="">-Select-</option>
                                </select>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">From Date</label>
                                        <input asp-for="FromDate" maxlength="10" class="form-control" />
                                        <input type="hidden" asp-for="FromDate1" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label">To Date</label>
                                        <input asp-for="ToDate" maxlength="10" class="form-control" />
                                        <input type="hidden" asp-for="ToDate1" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xxl-1 col-xl-2 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="SummaryDetail" class="form-label">Summary/Detail</label>
                                <select class="form-select" asp-for="SummaryDetail" onchange="GetSearchData();">
                                    <option value="">-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                            </div>
                            <div class="d-flex">
                                <div class="col-sm-3 col-md-6 col-lg-2 col-xl-4 justify-content-center mt-3">
                                    <button class="btn btn-sm btn-outline-info me-3" type="button" onclick="GetSearchData();">
                                        <i class="fa-solid fa-magnifying-glass"></i>SEARCH
                                    </button>
                                    <button class="btn btn-sm btn-outline-success me-3" style="padding:3px;height:30px;width:100px;" type="button" id="btnINExcel">
                                        <i class="fa-solid fa-upload"></i>EXCEL
                                    </button>
                                    <a class="btn btn-sm btn-outline-danger" asp-controller="NRGP" asp-action="Dashboard">
                                        <i class="fa-solid fa-rotate"></i>RESET
                                    </a>
                                </div>
