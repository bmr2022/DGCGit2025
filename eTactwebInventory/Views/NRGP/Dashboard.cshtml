        function CheckGateEntryExists(event, ID, YC) {
            event.preventDefault();

            $.ajax({
                url: "@Url.Action("CheckGateEntry")",
                method: 'POST',
                data: { "ID": ID, "Mode": "U", "YC": YC },
                dataType: 'json',
                success: function (data) {

                    var obj = $.parseJSON(data);
                    if (obj.Result[0].Result == "GateEntryNo") {
                        $.notify(obj.Result[0].StatusText, "error");
                    } else {

                        var url = '/NRGP/Index?ID=' + encodeURIComponent(ID) + '&Mode=' + encodeURIComponent("U") + '&YC=' + encodeURIComponent(YC) + "&ItemCode=" + encodeURIComponent($('#ItemCode').val()) + "&PartCode=" + encodeURIComponent($('#PartCode').val()) + "&ItemName=" + encodeURIComponent($('#ItemName').val()) + "&VendorName=" + encodeURIComponent($('#VendorName').val()) + "&RGPNRGP=" + encodeURIComponent($('#RGPNRGP').val()) + "&ChallanNo=" + encodeURIComponent($('#ChallanNo').val()) + "&ChallanType=" + encodeURIComponent($('#ChallanType').val()) + "&FromDate=" + encodeURIComponent($('#FromDate').val()) + "&ToDate=" + encodeURIComponent($('#ToDate').val());

