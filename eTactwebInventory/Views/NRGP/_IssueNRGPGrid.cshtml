@model eTactWeb.DOM.Models.IssueNRGPModel

@*<input type="hidden" asp-for="NetAmount" class="form-control" />*@
<input type="hidden" asp-for="ItemNetAmount" class="form-control" />
@{
    @if (Model.IssueNRGPDetailGrid == null)
    {
        <tr class="text-center">
            <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
        </tr>
    }
    else
    {

        var @Cntr = 0;
        foreach (var item in Model.IssueNRGPDetailGrid)
        {
            Cntr = Cntr + 1;
            <tr id="@Cntr" class="small" style="white-space:nowrap">
                <td style="white-space:nowrap;">

                    <a class="table-link link-primary" style="border:none;" id="editButton-@Cntr" onclick="EditItemRow(@item.SEQNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>

                    <a class="table-link link-danger" onclick="DeleteItemRow(@item.SEQNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>

                </td>
                <th data-seqno="@item.SEQNo">@item.SEQNo <input type="hidden" id="SeqNo-@Cntr" value="@item.SEQNo" /></th>
                <td class="divNRGPItemListPC">@item.PartCode <input type="hidden" value="@item.ItemCode" id="GridIC-@item.SEQNo" /></td>
                <td>@item.ItemName</td>
                <td>@item.HSNNo</td>
                <td class="AllowToChangeStore">@item.StoreName</td>
                <td class="AllowToChangeStore" id="GridBatchNo-@item.SEQNo">@item.BatchNo</td>
                <td class="AllowToChangeStore" id="GridUniqueBatchNo-@item.SEQNo">@item.uniquebatchno</td>
                <td>@item.TotalStock</td>
                <td class="AllowToChangeStore" id="ItemBatchNo-@item.SEQNo">@item.BatchStock</td>
                <td class="ShowHideOtherDetailTableData">@item.ProcessName</td>
                <td>@item.Qty.ToString("#.#0")</td>
                <td>@item.unit</td>
                <td>@item.Rate.ToString("#.#0")</td>
                <td id="GridAmount-@Cntr">@item.Amount.ToString("#.#0")</td>
                <td>@item.ItemLocation</td>
                <td>@item.GroupName</td>
                <td>@item.PurchasePrice</td>
                <td class="ShowHideOtherDetailTableData">@item.AltQty</td>
                <td class="ShowHideOtherDetailTableData">@item.AltUnit</td>
                <td>@item.RemarkDetail</td>
                <td class="ShowHideOtherDetailTableData">@item.Purpose</td>
                <td class="ShowHideOtherDetailTableData">@item.PONO</td>
                <td class="ShowHideOtherDetailTableData">@item.POYearCode</td>
                <td class="ShowHideOtherDetailTableData">@item.PODate</td>
                <td class="ShowHideOtherDetailTableData">@item.POAmendementNo</td>
                <td class="ShowHideOtherDetailTableData">@item.discper</td>
                <td class="ShowHideOtherDetailTableData">@item.disamt</td>
                <td class="ShowHideOtherDetailTableData">@item.Amount</td>
                <td class="ShowHideOtherDetailTableData">@item.AgainstChallanEntryId</td>
                <td class="ShowHideOtherDetailTableData">@item.AgainstChallanNo</td>
                <td class="ShowHideOtherDetailTableData">@item.AgainstChallanYearCode</td>
                <td class="ShowHideOtherDetailTableData">@item.AgainstChallanType</td>
                <td class="ShowHideOtherDetailTableData">@item.Closed</td>
                <td class="ShowHideOtherDetailTableData">@item.ItemColor</td>
                <td class="ShowHideOtherDetailTableData">@item.ItemSize</td>
                <td class="ShowHideOtherDetailTableData">@item.ItemModel</td>
                <td class="ShowHideOtherDetailTableData">@item.PendQty</td>
                <td class="ShowHideOtherDetailTableData">@item.PendAltQty</td>
            </tr>
        }
    }
}
