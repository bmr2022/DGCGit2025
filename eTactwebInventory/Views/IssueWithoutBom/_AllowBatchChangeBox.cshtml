@model eTactWeb.DOM.Models.IssueWithoutBom

<div class="modal fade" id="AllowBatchChangeBox" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-2 gx-3">
                            <div class="card">
                                <div class="card-body overflow-auto pb-0">
                                    <center>
                                        <h6>Please enter Batch change passcode: <input type="password" id="batchPassCode" /></h6>
                                        <button type="button" class="btn btn-sm btn-primary" id="confirmCheck">Check</button>
                                        <p><span id="errormessage" style="color:red;">Wrong Password, Try again!!!</span></p>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="progress my-2" style="height: 4px;">
                        <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal" onclick="RefreshSchedule('');">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>