@model eTactWeb.DOM.Models.CustomerJobWorkReceiveModel
@{
    int Cntr = 0;
}
@if (Model.CustomerJWRGrid == null)
{
    <tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.CustomerJWRGrid)
    {
        Cntr = Cntr + 1;
        <tr id="itemGrid" class="small @Cntr" style="white-space:nowrap">
            <td style="white-space:nowrap;">

                @if (Model.Mode == "V" && Model.ID > 0)
                {
                    <a class="table-link link-primary noCursor" disabled>
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    @*<a class="table-link link-danger noCursor" disabled>
        <span class="fa-stack">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
        </span>
        </a>*@
                }
                else
                {
                    <a class="table-link link-primary" onclick="EditItemRow(@item.SeqNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    @*<a class="table-link link-danger" onclick="DeleteItemRow(@item.SeqNo);">
        <span class="fa-stack">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
        </span>
        </a>*@
                }

            </td>
           
            <td>@item.RecItemName</td>
            <td>@item.RecPartCode</td>
            <td>@item.SoNo</td>
            <td>@item.SoYearCode</td>
            <td>@item.BillQty</td>
            <td>@item.RecQty</td>
            <td>@item.Unit</td>
            <td>@item.RecAltQty</td>
            <td>@item.AltUnit</td>
            <td>@item.Rate</td>
            <td>@item.Amount</td>
            <td>@item.ShortExcessQty</td>
            <td>@item.INDBOM</td>
            <td>@item.SoDate</td>
            <td>@item.SOSchNo</td>
            <td>@item.SOSchYearCode</td>
            <td>@item.Schdate</td>
            <td>@item.BatchNo</td>
            <td>@item.UniqueBatchNo</td>
            <td>@item.Remark</td>
            <td>@item.FinishItemName</td>
            <td>@item.FinishPartCode</td>
            <td>@item.Color</td>
            <td>@item.QcCompleted</td>
            <td>@item.PendQty</td>
            <td>@item.Purpose</td>
            <td>@item.FinsihedQty</td>
            <td>@item.RecScrap</td>
            <td>@item.AllowedRejPer</td>
            <td>@item.ProcessName</td>
            <td>@item.CustbatchNo</td>
            <td>@item.CustOrderno</td>
            <td>@item.BomNo</td>
            <td>@item.BomName</td>
            <td>@item.BomDate</td>
            

        </tr>
    }
}