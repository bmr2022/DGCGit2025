                    <th class="sortCol" data-sortorder="asc" data-columnno="39"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ItemCode</th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="40"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>entryid</th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="41"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>YearCode</th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="42"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>PoYear</th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="43"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>SchYear </th>
                    <th class="sortCol" data-sortorder="asc" data-columnno="44"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ToStore</th>

                </tr>
            </thead>
            <tbody id="divStockRegisterBody">
                @{
                    var @Cntr = 0;
                    int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                    int srNo = srNoStart + 1;
                    if (Model.VendJWRegisterDetails == null)
                    {
                        <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.VendJWRegisterDetails)
                        {
                            Cntr = Cntr + 1;

                            <tr id="SAGridRow-@Cntr" onclick="FreezeSelection(this)">
                               
                                <th>@srNo</th>
                                <td style="background-color: #e09ef0;">@item.Account_Name</td>
                                <td>@item.JInvNo</td>
                                <td>@(item.InvDate == null ? string.Empty : item.InvDate.Split(" ")[0])</td>
                                <td>@item.MrnNo</td>
                                <td>@item.Gateno</td>
                                <td>@item.Gateyearcode</td>
                                <td>@item.GateDate</td>
                                <td>@item.partcode</td>
                                <td>@item.Itemname</td>
                                <td id="GridBillQty">@item.BillQty</td>
                                <td id="GridRecQty">@item.RecQty</td>
                                <td>@item.JwRate</td>
                                <td>@item.JwRateUnit</td>
                                <td>@item.unit</td>
                                <td>@item.Processsname</td>
                                <td id="GridTotalAmount">@item.ItemAmount</td>
                                <td>@item.ProdUnprod</td>
                                <td>@item.BOMIND</td>
                                <td>@item.BomNo</td>
                                <td>@item.BomDate</td>
                                <td>@item.batchno</td>
                                <td>@item.uniquebatchno</td>
                                <td>@item.NoOfCase</td>
                                <td>@item.QCCompleted</td>
                                <td>@item.PONo</td>
                                <td>@item.PODate</td>
                                <td>@item.SchNo</td>
                                <td>@item.SchDate</td>
                                <td>@item.ItemRemark</td>
                                <td>@item.Processsname</td>
                                <td>@item.Totalamt</td>
                                <td>@item.EneterdByEmpName</td>
                                <td>@item.UpdatedByEmpName</td>
                                <td>@item.NetAmt</td>
                                <td>@item.Remark</td>
                                <td>@item.EntryByMachineName</td>
                                <td>@item.ActualEnteredBy</td>
                                <td>@item.UpdatedBy</td>
                                <td>@item.ItemCode</td>
                                <td>@item.entryid</td>
                                <td>@item.YearCode</td>
                                <td>@item.PoYear</td>
                                <td>@item.SchYear</td>
                                <td>@item.ToStore</td>
                            </tr>
                            srNo++;
                        }
                    }
                }

            </tbody>
        </table>
    </div>
  
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
    <center><strong>TOTAL ROWS  : <span>@displayedRows</span></strong></center>
   
    int totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);

@if (Model.TotalRecords > 0)
{
    <ul class="pagination d-flex align-items-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber - 1)); return false;">Previous</a>
            </li>
        }

        @if (Model.PageNumber > 3)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(1); return false;">1</a>
            </li>
            <li class="page-item disabled"><a class="page-link">...</a></li>
        }

        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageNumber + 2, totalPages); i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="#" onclick="loadPage(@i); return false;">@i</a>
            </li>
        }

        @if (Model.PageNumber < totalPages - 2)
        {
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@totalPages); return false;">@totalPages</a>
            </li>
        }

        @if (Model.PageNumber < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="loadPage(@(Model.PageNumber + 1)); return false;">Next</a>
            </li>
        }
    </ul>
}
}



