@section Scripts
{

    <script>

        $(function () {
            $('#ItemName').select2();
            $('#PartCode').select2();
            $('#PendingProdPlan').select2();
            $('#ProdScheduleNo').select2();
            $('#PendingProdPlanYearCode').select2();
            FillStoreName();
            FillWorkCenter();
            FillItemName();
            FillPartCode();
            FillPendingProdPlanNo();
            var fromDate;
            var toDate;
            var today = new Date();
            var threeMonthsAgo = new Date(today.getTime() - (3 * 30 * 24 * 60 * 60 * 1000));
            var finFromDate = $('#finFromDate').val();
            var finToDate = $('#finToDate').val();
            var dateParts1 = finFromDate.split("/");
            var monthNames = {
                "Jan": "01",
                "Feb": "02",
                "Mar": "03",
                "Apr": "04",
                "May": "05",
                "Jun": "06",
                "Jul": "07",
                "Aug": "08",
                "Sep": "09",
                "Oct": "10",
                "Nov": "11",
                "Dec": "12"
            };

            var formattedDate1 = dateParts1[0] + "/" + monthNames[dateParts1[1]] + "/" + dateParts1[2];
            var dateParts2 = finToDate.split("/");
            var formattedDate2 = dateParts2[0] + "/" + monthNames[dateParts2[1]] + "/" + dateParts2[2];

            var day = String(today.getDate()).padStart(2, '0'); // Ensure two digits
            var month = String(today.getMonth() + 1).padStart(2, '0'); // Months are 0-based
            var year = today.getFullYear();
            var formattedDate = day + '/' + month + '/' + year;

            $("#FromDate").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formattedDate1);
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formattedDate2);
            $('#IssueDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');
            $('#IssueDate').datepicker("option", "minDate", formattedDate1);
            $('#IssueDate').datepicker("option", "maxDate", formattedDate);
            showDetail();
            /* showDetail(); */
        })

        $('#ToWorkCenter').change(function () {
            showDetail();
        })

        $('#StoreName').change(function () {
            showDetail();
        })

        function FillStoreName() {
             
            $.ajax({
                url: "@Url.Action("FillStore")",
                type: "POST",
                async: false,
                success: function (data) {
                    if (data != null) {
                         
                        var obj = $.parseJSON(data);
                        if (obj.StatusCode == 200 && obj.StatusText == 'Success') {
                            $('#StoreName').empty();
                            $('#StoreName').append('<option value=0 selected disabled>-Select-</option>');
                            $.each(obj.Result, function (index, val) {
                                $('#StoreName').append('<option selected value=' + val.StoreId + '>' + val.StoreName + '</option>');
                            });
                            $('#StoreName option').filter(function () {
                                return $(this).val() === "1";
                            }).prop('selected', true);
                        }
                    }
                },
                error: function (errMsg) {
                    console.log(errMsg);
                }
            });
        }

        function FillWorkCenter() {
            $.ajax({
                url: "@Url.Action("FillWorkCenter")",
                type: "POST",
                async: false,
                success: function (data) {
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.StatusCode == 200 && obj.StatusText == 'Success') {
                            $('#ToWorkCenter').empty();
                            $('#ToWorkCenter').append('<option >-Select-</option>');
                            $.each(obj.Result, function (index, val) {
                                $('#ToWorkCenter').append('<option  value=' + val.WCID + '>' + val.WorkCenterDescription + '</option>');
                            });
                        }
                    }
                },
                error: function (errMsg) {
                    console.log(errMsg);
                }
            });
        }

        function FillPendingProdPlanNo() {
            $.ajax({
                url: "@Url.Action("FillPendingProdPlanNo")",
                type: "POST",
                async: false,
                success: function (data) {
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.StatusCode == 200 && obj.StatusText == 'Success') {
                            $('#PendingProdPlan').empty();
                            $('#PendingProdPlan').append('<option value=0 selected disabled>-Select-</option>');
                            $.each(obj.Result, function (index, val) {
                                $('#PendingProdPlan').append('<option value=' + val.PlanNo + '>' + val.PlanNo + '</option>');
                            });
                        }
                    }
                },
                error: function (errMsg) {
                    console.log(errMsg);
                }
            });
        }

        $('#PendingProdPlan').change(function () {
            FillPendingProdPlanYearCode();
        })

        function FillPendingProdPlanYearCode() {
            $.ajax({
                url: "@Url.Action("FillPendingProdPlanYearCode")",
                type: "POST",
                async: false,
                data: { "ProdPlanNo": $('#PendingProdPlan').val() },
                success: function (data) {
                    if (data != null) {
                        var obj = $.parseJSON(data);
                        if (obj.StatusCode == 200 && obj.StatusText == 'Success') {
                            $('#PendingProdPlanYearCode').empty();
                            $('#PendingProdPlanYearCode').append('<option value=0 selected disabled>-Select-</option>');
                            $.each(obj.Result, function (index, val) {
                                $('#PendingProdPlanYearCode').append('<option value=' + val.PlanNoYearCode + '>' + val.PlanNoYearCode + '</option>');
                            });
                        }
                    }
                },
                error: function (errMsg) {
                    console.log(errMsg);
                }
            });
        }

        $('#PendingProdPlanYearCode').change(function () {
            FillProdScheduleNo();
        })

        $(document).on('select2:select', '#ItemName,#PartCode', function (e) {

            var cntId = e.target.id;
            if (cntId == 'ItemName') {
                ItemNameChange(cntId);
            }
            else {
                PartCodeChange(cntId);
            }
        });

        function ItemNameChange(ID) {
            SetPartCodeItemName(ID);
        }

        function PartCodeChange(ID) {

            $.when(SetPartCodeItemName(ID)).done(function () {
            });
        }

        function SetPartCodeItemName(ID) {
            if (!ID) return;
            else {
                var v = $('#' + ID).select2('val');
                if (ID == "PartCode") {
                    $("#ItemName").val(v).trigger("change");
                }

                if (ID == "ItemName") {
                    $("#PartCode").val(v).trigger("change");
                }
            }
        }

        function FillProdScheduleNo() {
            $.ajax({
                url: "@Url.Action("FillProdScheduleNo")",
