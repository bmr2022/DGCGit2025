                url: '@Url.Action("GetDataForPendingProductionSchedule")',
                type: "POST",
                data: { FromDate: fromDate, ToDate: toDate, StoreId: StoreId, YearCode: YearCode, GlobalSearch: GlobalSearch, ProdPlanNo: ProdPlanNo,WcId:WcId },
