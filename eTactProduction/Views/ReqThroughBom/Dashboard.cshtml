@model eTactWeb.DOM.Models.ReqThruMainDashboard

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style>
    #search-box {
        max-width: 200px; /* Adjust the width as needed */
    }

    .styled-cell {
        width: fit-content !important;
        padding: 5px; /* Optional: Add padding for spacing */
        border: 1px solid #ccc; /* Optional: Add borders for clarity */
    }

    .styled-input {
        border: none;
        outline: none;
        background-color: transparent;
        width: fit-content !important;
    }

    .color-box {
        width: 10px;
        height: 10px;
    }

    .styled-qty {
        width: 50px !important;
    }

    #pendingIssueMRN {
        width: 100%;
        border-collapse: collapse;
    }

    #IssueWOBomThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }
</style>

<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                Requisition Through BOM - <strong>Dashboard</strong>
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="ReqThroughBom" asp-route-ID="0" class="btn btn-sm btn-outline-light bg-gradient">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                @*<div class="d-flex align-items-center">*@
                                <label class="form-label me-3">Type</label>
                                <select asp-for="DashboardType" class="form-select">
                                    <option value="" disabled>-Select-</option>
                                    <option value="Summary" selected>Summary</option>
                                    <option value="Detail">Detail</option>
                                </select>
                                @*</div>*@
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label class="form-label">From Date</label>
                                <input id="FromDate" maxlength="10" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label class="form-label">To Date</label>
                                <input id="ToDate" maxlength="10" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="REQNo" class="form-label">REQ No</label>
                                <input asp-for="REQNo" class="form-control" />
                                <input asp-for="FromDate1" type="hidden" class="form-control" />
                                <input asp-for="ToDate1" type="hidden" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="PartCode" class="form-label">Part Code</label>
                                <input asp-for="PartCode" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="WorkCenter" class="form-label">Work Center</label>
                                <input asp-for="WorkCenter" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="WONo" class="form-label">Work Order No</label>
                                <input asp-for="WONo" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label class="form-label">Dept Name</label>
                                <input asp-for="DeptName" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <label asp-for="CC" class="form-label">Branch</label>
                                <input asp-for="CC" class="form-control" readonly />
                            </div>
                            @* nusrat *@
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                                <div class="row">
                                
                                  
                                </div>
                            </div>
                         
                            <div class="row align-items-end">
                                
                                <div class="col-xxl-7 col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    @*<div class="d-flex align-items-center">*@
                                        <label class="form-label me-3">Global search</label>
                                        <input type="text" class="form-control" asp-for="GlobalSearch" id="search-box" style="background-color:#FFFACD" placeholder="Search..." fdprocessedid="pr7n9">
                                    @*</div>*@
                                    <div class="d-flex" style="margin-left:215px;margin-top:-19px;">
                                        <label class="color-box" style="background-color: #FF0000;"></label><label style="margin-left:5px;margin-top:-5px;">Pend Qty > 0</label>
                                        <label class="color-box" style="background-color: blue;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Pend Qty = 0</label>
                                    </div>
                                </div>
                                <div class="col-xxl-1 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                    <div class="d-flex">
                                        <button class="btn btn-sm btn-outline-info" type="button" style="padding:0px;height:30px;width:100px;" onclick="GetSearchData();">
                                            <i class="fa-solid fa-magnifying-glass fa-fw fa-lg"></i>SEARCH
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
                                            <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                        </button>
                                        <a class="btn btn-sm btn-outline-danger" style="padding:3px;height:30px;width:100px;margin-left:20px;" asp-controller="ReqThroughBom" asp-action="Dashboard"
                                           asp-route-FromDate="@DateTime.Now.AddDays(1 - DateTime.Now.Day)" asp-route-Todate="@DateTime.Today" asp-route-Flag="True">
                                            <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_ReqThruBomDashboardGrid" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(function () {
             
            var dashGrid = $('#ReqThrBody tr').length;
            $('#totalRows').text(dashGrid);

            GetFormRights();
            var REQNoBack = localStorage.getItem('REQNoBack');
            var ItemNameBack = localStorage.getItem('ItemNameBack');
            var PartCodeBack = localStorage.getItem('PartCodeBack');
            var WorkCenterIdBack = localStorage.getItem('WorkCenterIdBack');
            var WONoBack = localStorage.getItem('WONoBack');
            var DeptNameBack = localStorage.getItem('DeptNameBack');
            var FromDateBack = localStorage.getItem('FromDateBack');
            var ToDateBack = localStorage.getItem('ToDateBack');
            var TypeBack = localStorage.getItem('TypeBack');
            var GlobalSearchBack = localStorage.getItem('GlobalSearchBack');

            var currentDate = new Date();

            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                var dateString = day + "/" + month + "/" + year;
                return dateString;
            }

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#ToDate').change(function () {
                $.ajax({
                    url: '@Url.Action("Dashboard","ReqThroughBom")',
                    type: "POST",
                    data: { FromDate: $('#FromDate').val(), Todate: $('#ToDate').val(), Flag: "False" },
                    success: function (data) {
                        $('#divDashboardGrid').empty().append(data);
                        GetFormRights();
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            });

            AutoComplete('VRequisitionThrBOMMainDetail', 'REQNo', 'REQNo', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'ItemName', 'Item_Name', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'PartCode', 'PartCode', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'WorkCenter', 'WorkCenter', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'WONo', 'WONo', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'DeptName', 'DeptName', null);
            AutoComplete('VRequisitionThrBOMMainDetail', 'CC', 'BranchName', null);

            if ($('#FromDate1').val() != "" && $('#ToDate1').val() != "") {

                var inputFromDateString = $('#FromDate1').val().split(" ")[0];
                var inputToDateString = $('#ToDate1').val().split(" ")[0];
                var originalFromDate = new Date(inputFromDateString);
                var originalToDate = new Date(inputToDateString);


                //fromdate
                var day = originalFromDate.getDate();
                var month = originalFromDate.getMonth() + 1; // Months are zero-based
                var year = originalFromDate.getFullYear();

                var convertedFromDateText = day.toString().padStart(2, '0') + '/' + month.toString().padStart(2, '0') + '/' + year;

                //todate
                var day = originalToDate.getDate();
                var month = originalToDate.getMonth() + 1; // Months are zero-based
                var year = originalToDate.getFullYear();

                var convertedToDateText = day.toString().padStart(2, '0') + '/' + month.toString().padStart(2, '0') + '/' + year;


                $('#FromDate').val(convertedFromDateText);
                $('#ToDate').val(convertedToDateText);

            }
             
            if (FromDateBack != null) {
                 
                $('#REQNo').val(REQNoBack);
                $('#ItemName').val(ItemNameBack);
                $('#PartCode').val(PartCodeBack);
                $('#WorkCenter').val(WorkCenterIdBack);
                $('#WONo').val(WONoBack);
                $('#DeptName').val(DeptNameBack);
                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#DashboardType').val(TypeBack);
                $('#search-box').val(GlobalSearchBack);
            }
            GetSearchData();
            $("#search-box").val($('#search-box').val()).trigger('keyup');

            localStorage.removeItem('REQNoBack');
            localStorage.removeItem('ItemNameBack');
            localStorage.removeItem('PartCodeBack');
            localStorage.removeItem('WorkCenterIdBack');
            localStorage.removeItem('WONoBack');
            localStorage.removeItem('DeptNameBack');
            localStorage.removeItem('FromDateBack');
            localStorage.removeItem('ToDateBack');
            localStorage.removeItem('TypeBack');
            localStorage.removeItem('GlobalSearchBack');
        });

        function formatDate(d) {

            var newDate = new Date(d);
            var day = newDate.getDate();
            var month = newDate.getUTCMonth();
            var year = newDate.getFullYear();
            finaldate = new Date(year, month, day);
            return finaldate;
        }

        $('#sendToExcel').click(function () {
            $("#ReqThrTable").table2excel({
                filename: "ReqThrBOMData.xls"
            });
        });

        function selection(CurrentRow) {
             
            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#ReqThrBody tr").not(CurrentRow).css({ 'background-color': '' });
        }

        function ColorCodingStockandIssue(){
             
            var rowCount = $('#ReqThrBody tr').length;
            for (var i = 0; i <= rowCount; i++) 
            {
                if (parseInt($('#PendQty-' + i).text()) <= 0) {
                    $('#ReqData-' + i + ' th').css("color", "blue");
                    $('#ReqData-' + i + ' td').css("color", "blue");
                }
                if (parseInt($('#PendQty-' + i).text()) > 0) {
                    $('#ReqData-' + i + ' th').css("color", "red");
                    $('#ReqData-' + i + ' td').css("color", "red");
                }
            }
        }

        function confirmDelete(event) {
             
            event.preventDefault();
            if (confirm("Are you sure you want to delete this entry?")) {
                var linkUrl = $(event.currentTarget).attr("href");
                linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&REQNo=" + $('#REQNo').val() + "&ItemName=" + $('#ItemName').val() + "&PartCode=" + $('#PartCode').val() + "&WCName=" + $('#WorkCenter').val() + "&WONo=" + $('#WONo').val() + "&DepName=" + $('#DeptName').val() + "&DBType=" + $('#DashboardType').val() + "&searchbox=" + $('#search-box').val();
                window.location.href = linkUrl;
            }
        }

        $('#DashboardType').change(function () {
            if ($(this).val() == "Summary") {
                SummaryData();
            } else {
                DetailData();
            }
        });

        function SummaryData() {

            $.ajax({
                url: '@Url.Action("GetSearchData","ReqThroughBom")',
                type: "POST",
                data: { REQNo: $('#REQNo').val(), WCName: $('#WorkCenter').val(), WONo: $('#WONo').val(), DepName: $('#DeptName').val(), PartCode: $('#PartCode').val(), ItemName: $('#ItemName').val(), BranchName: $('#CC').val(), FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val() },
                success: function (data) {

                    $('#divDashboardGrid').empty().append(data);
                    GetFormRights();
                    ColorCodingStockandIssue();
                    var dashGrid = $('#ReqBomTbody tr').length;
                    $('#totalRows').text(dashGrid);

                    var rowwCount = $('#ReqBomTbody tr').length;
                    for (var i = 1; i <= rowwCount; i++) {
                        var pendQty = $('#PendQty-' + i).val();
                        var Cancel = $('#Cancel-' + i).val();
                        if (pendQty > 0) {
                            $('#' + i).css("color", "red");
                        }
                        if (pendQty == 0) {
                            $('#' + i).css("color", "green");

                        }
                        if (Cancel == "Y") {
                            $('#' + i).css("color", "blue");

                        }
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function DetailData() {
            $.ajax({
                url: '@Url.Action("GetDetailData","ReqThroughBom")',
                type: "POST",
                data: { REQNo: $('#REQNo').val(), WCName: $('#WorkCenter').val(), WONo: $('#WONo').val(), DepName: $('#DeptName').val(), PartCode: $('#PartCode').val(), ItemName: $('#ItemName').val(), BranchName: $('#CC').val(), FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val() },
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    GetFormRights();
                    ColorCodingStockandIssue();
                    var dashGrid = $('#ReqThrBody tr').length;
                    $('#totalRows').text(dashGrid);

                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }


        function GetSearchData() {

            $.ajax({
                url: '@Url.Action("GetSearchData","ReqThroughBom")',
                type: "POST",
                data: { REQNo: $('#REQNo').val(), WCName: $('#WorkCenter').val(), WONo: $('#WONo').val(), DepName: $('#DeptName').val(), PartCode: $('#PartCode').val(), ItemName: $('#ItemName').val(), BranchName: $('#CC').val(), FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val() },
                async: false,
                success: function (data) {
                     
                    $('#divDashboardGrid').empty().append(data);
                    GetFormRights();
                    ColorCodingStockandIssue();
                    var dashGrid = $('#ReqThrBody tr').length;
                    $('#totalRows').text(dashGrid);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function GetFormRights() {

            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                    if (data != null) {

                        var obj = $.parseJSON(data);
                         (obj);
                        var optAll = obj.Result.Table[0].OptAll;
                        var optSave = obj.Result.Table[0].OptSave;
                        var optUpdate = obj.Result.Table[0].OptUpdate;
                        var optDelete = obj.Result.Table[0].OptDelete;
                        var optView = obj.Result.Table[0].OptView;
                        var rowCounter = $('#divDashboardGrid tr').length;
                        if (!optAll) {
                            if (!optView) {

                                for (var i = 0; i < rowCounter; i++) {
                                    $('#viewCursorDiv-' + i).empty();
                                    $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                }
                            }
                            if (!optUpdate) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#editCursorDiv-' + i).empty();
                                    $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                }
                            }
                            if (!optDelete) {
                                for (var i = 0; i < rowCounter; i++) {
                                    $('#deleteCursorDiv-' + i).empty();
                                    $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                <span class="fa-stack">
                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                </span>
                                                                            </a>`);
                                }
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }

        function BackButtonData(event) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&ReqNo=" + $('#REQNo').val() + "&ItemName=" + $('#ItemName').val() + "&Partcode=" + $('#PartCode').val() + "&WorkCenter=" + $('#WorkCenter').val() + "&WONO=" + $('#WONo').val() + "&DeptName=" + $('#DeptName').val() + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&Type=" + $('#DashboardType').val() + "&GlobalSearch=" + $('#search-box').val();
            window.location.href = linkUrl;
        }

        //function BackButtonData() {
        //
        //}

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {
              
            var value = $(this).val().toLowerCase();
            $("#ReqThrBody tr").filter(function () {
                if (currentSearchColumn !== null) {
                     
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
             
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup'); // Reset search box and trigger the search
        });

        $(document).on("click", ".sortCol", function () {

            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable('ReqThrTable', colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('ReqThrTable', colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });


    </script>
    <script src="~/Scripts/table2excel.js"></script>

}
