                <th data-columnno="37" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>CC</th>
                <th data-columnno="38" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>EntryBy MachineNo</th>
                <th data-columnno="39" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Actual EntryDate</th>
                <th data-columnno="40" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>UpdatedBy EmpName</th>
                <th data-columnno="41" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Last UpdationDate</th>
                <th data-columnno="42" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>TransferMat EntryId</th>
                <th data-columnno="43" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>TransferMat YearCode</th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Issue ToStoreWC</th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Pending ToRecByStore</th>
            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var @Cntr = 0;
                if (Model.TransferFromWorkCenterDashboard == null || Model.TransferFromWorkCenterDashboard.Count == 0)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.TransferFromWorkCenterDashboard)
                    {

                        Cntr = Cntr + 1;
                        <tr onclick="selection(this)" id="TransferData-@Cntr">
                            <th>@Cntr</th>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">
                                    <div id="printData-@Cntr">
                                        <a class="table-link link-dark" target="_blank" asp-action="PrintReport" asp-route-EntryId="@item.TransferMatEntryId" asp-route-YearCode="@item.TransferMatYearCode">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-print fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                    <div id="viewCursorDiv-@Cntr">
                                        <a class="table-link link-success" id="viewCursor-@Cntr" asp-action="TransferFromWorkCenter" asp-route-Mode="V" asp-route-ID="@item.TransferMatEntryId" asp-route-YC="@item.TransferMatYearCode">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                    @if (item.TransferMatYearCode == yearCode)
                                    {
                                        <div id="editCursorDiv-@Cntr">
                                            <a class="table-link link-primary" id="editCursor-@Cntr" onclick="CheckEditOrDelete(event,'@item.TransferMatEntryId','@item.TransferMatYearCode','edit')" asp-action="TransferFromWorkCenter" asp-route-Mode="U" asp-route-ID="@item.TransferMatEntryId" asp-route-YC="@item.TransferMatYearCode">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        <div id="deleteCursorDiv-@Cntr">
                                            <a class="table-link link-danger" onclick="CheckEditOrDelete(event,'@item.TransferMatEntryId','@item.TransferMatYearCode','delete')" id="deleteCursor-@Cntr" asp-action="DeleteByID" asp-route-ID="@item.TransferMatEntryId" asp-route-YC="@item.TransferMatYearCode" asp-route-CC="@item.CC" asp-route-EntryByMachineName="@item.EntryByMachineNo" asp-route-EntryDate="@item.TransferMatEntrydate">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <a class="table-link link-primary noCursor">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            <a class="table-link link-danger noCursor">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>@item.TransferMatSlipNo</td>
                            <td>@item.TransferMatEntrydate</td>
                            <td>@item.TransferMatSlipDate</td>
                            <td>@item.IssueToStoreWC</td>
                            <td>@item.TransferFromWC</td>
                            <td>@item.TransferToWC</td>
                            <td>@item.TransferToStore</td>
                            <td>@item.PartCode</td>
                            <td>@item.ItemName</td>
                            <td>@item.TransferQty</td>
                            <td>@item.QCOkQty</td>
                            <td>@item.ProdQty</td>
                            <td>@item.Unit</td>
                            <td>@item.AltTransferQty</td>
                            <td>@item.AltUnit</td>
                            <td>@item.TotalStock</td>
                            <td>@item.BatchNo</td>
                            <td>@item.uniquebatchno</td>
                            <td>@item.BatchStock</td>
                            <td>@item.Rate</td>
                            <td>@item.ItemWeight</td>
                            <td>@item.ItemSize</td>
                            <td>@item.ItemColor</td>
                            <td>@item.ItemRecCompleted</td>
                            <td>@item.PendingQtyToAcknowledge</td>
                            <td>@item.ItemRemark</td>
                            <td>@item.ProdEntryId</td>
                            <td>@item.ProdSlipNo</td>
                            <td>@item.ProdYearCode</td>
                            <td>@item.ProdEntryDate</td>
                            <td>@item.ProdPlanNo</td>
                            <td>@item.ProdPlanYearCode</td>
                            <td>@item.ProdSchNo</td>
                            <td>@item.ProdSchYearCode</td>
                            <td>@item.IssuedByEmpName</td>
                            <td>@item.ActualEntryByEmpName</td>
                            <td>@item.CC</td>
                            <td>@item.EntryByMachineNo</td>
                            <td>@item.ActualEntryDate</td>
                            <td>@item.UpdatedByEmpName </td>
                            <td>@item.LastUpdationDate</td>
                            <td>@item.TransferMatEntryId</td>
                            <td>@item.TransferMatYearCode</td>
                            <td id="PendToRec-@Cntr">@item.PendingToRecByStore</td>
                            <td id="IssueToStoreWc-@Cntr">@item.IssueToStoreWC</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

