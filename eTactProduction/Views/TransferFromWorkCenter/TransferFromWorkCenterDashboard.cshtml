@model eTactWeb.DOM.Models.TransferFromWorkCenterDashboard
@using Microsoft.AspNetCore.Http
@using System.Reflection.PortableExecutable
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "TransferFromWorkCenterDashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    string yearCode = HttpContextAccessor.HttpContext.Session.GetString("YearCode");
}
<style>
    .color-box {
        width: 10px;
        height: 10px;
    }
</style>
<div class="shadow-lg">
    <div class="card rounded border-light bg-gradient">
        <div class="card-header card-headerBG text-light bg-gradient">
            <h5>
                Transfer From WC Dashboard
                <span class="d-flex float-end" style="margin-top:-2px;">
                    <a asp-action="TransferFromWorkCenter" asp-route-ID="0" asp-controller="TransferFromWorkCenter" class="btn btn-sm btn-outline-light bg-gradient" id="savebtn">
                        <i class="fa fa-plus-circle fafw fa-lg" aria-hidden="true"></i>
                        Add New
                    </a>
                </span>
            </h5>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body">
                    <form id="SParam">
                        <div class="row">
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">From Date</label>
                                        <input asp-for="FromDate" class="form-control" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label">To Date</label>
                                        <input asp-for="ToDate" class="form-control" />
                                    </div>
                                    <input asp-for="FromDate1" type="hidden" />
                                    <input asp-for="ToDate1" type="hidden" />
                                </div>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="TransferMatSlipNo" class="form-label">Transfer Slip No</label>
                                <input asp-for="TransferMatSlipNo" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="ItemName" class="form-label">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="PartCode" class="form-label">Part Code</label>
                                <input asp-for="PartCode" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="TransferFromWC" class="form-label">From Workcenter</label>
                                <input asp-for="TransferFromWC" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="TransferToWC" class="form-label">To WorkCenter </label>
                                <input asp-for="TransferToWC" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="TransferToStore" class="form-label">Process Name</label>
                                <input asp-for="TransferToStore" class="form-control" />
                            </div>
                            <div class="col-xxl-1 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
                                <label asp-for="ProdSlipNo" class="form-label">Prod Slip No</label>
                                <input asp-for="ProdSlipNo" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="ProdSchNo" class="form-label">Prod Sch No</label>
                                <input asp-for="ProdSchNo" class="form-control" />
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12" style="width:200px">
                                <label asp-for="DashboardType" class="form-label">Dashboard Type</label>
                                <select asp-for="DashboardType" class="form-select" onchange="GetSearchData();">
                                    <option value="" disabled>-Select-</option>
                                    <option value="SUMMARY" selected>Summary</option>
                                    <option value="DETAIL">Detail</option>
                                </select>
                            </div>
                            <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
                                <label class="form-label">Global search</label>
                                <input type="text" class="form-control" asp-for="Searchbox" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
                            </div>
                            <div class=" d-flex justify-content-center mt-3 col-sm-5 col-md-8 col-lg-6 col-xl-4" width="inherit">
                                <button class="btn btn-sm btn-outline-info" type="button" style="padding:0px;height:30px;width:100px;" onclick="GetSearchData();">
                                    <i class="fa-solid fa-magnifying-glass fa-fw fa-lg"></i>SEARCH
                                </button>
                                <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
                                    <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
                                </button>
                                <a class="btn btn-sm btn-outline-danger" style="padding:3px;height:30px;width:100px;margin-left:20px;" asp-controller="GateInward" asp-action="Dashboard">
                                    <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
                                </a>
                            </div>
                            <div class="mt-4 col-sm-5 col-md-8 col-lg-6 col-xl-5">
                                <label class="color-box" style="background-color: #FF0000;"></label><label style="margin-left:5px;margin-top:-5px;">Pend To Rec</label>
                                <label class="color-box" style="background-color: darkblue;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Rec In Store</label>
                                <label class="color-box" style="background-color: brown;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">WC to WC</label>
                                <label class="color-box" style="background-color: darkolivegreen;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">WC to Store</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body pb-0 pt-0">
            <div class="progress" style="height: 4px;">
                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_TransferFromWorkCenterDashboard" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            GetFormRights();
            var FromDateBack = sessionStorage.getItem('FromDateBack');
            var ToDateBack = sessionStorage.getItem('ToDateBack');
            var TransferSlipNoBack = sessionStorage.getItem('TransferSlipNoBack');
            var ItemNameBack = sessionStorage.getItem('ItemNameBack');
            var PartCodeBack = sessionStorage.getItem('PartCodeBack');
            var FromWorkCenterBack = sessionStorage.getItem('FromWorkCenterBack');
            var ToWorkCenterBack = sessionStorage.getItem('ToWorkCenterBack');
            var StoreNameBack = sessionStorage.getItem('StoreNameBack');
            var ProdSlipNoBack = sessionStorage.getItem('ProdSlipNoBack');
            var ProdSchNoBack = sessionStorage.getItem('ProdSchNoBack');
            var DashboardTypeBack = sessionStorage.getItem('DashboardTypeBack');
            var GlobalSearchBack = sessionStorage.getItem('GlobalSearchBack');

            var currentDate = new Date();

            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                var dateString = day + "/" + month + "/" + year;
                return dateString;
            }
            if (FromDateBack != null && FromDateBack != '') {

                $('#FromDate').val(FromDateBack);
                $('#ToDate').val(ToDateBack);
                $('#TransferMatSlipNo').val(TransferSlipNoBack);
                $('#ItemName').val(PartCodeBack);
                $('#PartCode').val(ItemNameBack);
                $('#TransferFromWC').val(FromWorkCenterBack);
                $('#TransferToWC').val(ToWorkCenterBack);
                $('#TransferToStore').val(StoreNameBack);
                $('#ProdSlipNo').val(ProdSlipNoBack);
                $('#ProdSchNo').val(ProdSchNoBack);
                $('#search-box').val(GlobalSearchBack);
                $('#DashboardType').val(DashboardTypeBack);
            }
            GetSearchData();
            $("#search-box").val($('#search-box').val()).trigger('keyup');

            sessionStorage.removeItem('FromDateBack');
            sessionStorage.removeItem('ToDateBack');
            sessionStorage.removeItem('TransferSlipNoBack');
            sessionStorage.removeItem('PartCodeBack');
            sessionStorage.removeItem('ItemNameBack');
            sessionStorage.removeItem('FromWorkCenterBack');
            sessionStorage.removeItem('ToWorkCenterBack');
            sessionStorage.removeItem('StoreNameBack');
            sessionStorage.removeItem('ProdSlipNoBack');
            sessionStorage.removeItem('ProdSchNoBack');
            sessionStorage.removeItem('GlobalSearchBack');
            sessionStorage.removeItem('DashboardTypeBack');
            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');
            var rowcount = $('#gateDashboardtable tr').length;
            $('#totalRows').text(rowcount);

            AutoComplete('VTransferMaterialFromWcMainDetail', 'TransferSlipNo', 'TransferMatSlipNo', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'ItemName', 'ItemName', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'PartCode', 'PartCode', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'TransferFromWC', 'TransferFromWC', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'TransferToWC', 'TransferToWC', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'TransferToStore', 'TransferToStore', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'ProdSlipNo', 'ProdSlipNo', null);
            AutoComplete('VTransferMaterialFromWcMainDetail', 'ProdSchNo', 'ProdSchNo', null);
        });

        $('#FromDate').change(function(){
            GetSearchData();
        })

        $('#ToDate').change(function () {
            GetSearchData();
        })

        $('#TransferMatSlipNo').keyup(function () {
            GetSearchData();
        })

        $('#ItemName').keyup(function () {
            GetSearchData();
        })

        $('#PartCode').keyup(function () {
            GetSearchData();
        })

        $('#TransferFromWC').keyup(function () {
            GetSearchData();
        })

        $('#TransferToWC').keyup(function () {
            GetSearchData();
        })

        $('#TransferToStore').keyup(function () {
            GetSearchData();
        })

        $('#ProdSlipNo').keyup(function () {
            GetSearchData();
        })

        $('#ProdSchNo').keyup(function () {
            GetSearchData();
        })
        function GetFormRights() {
             
            $.ajax({
                url: "@Url.Action("GetFormRights")",
                type: "POST",
                success: function (data) {
                     
                    if (data != null) {

                        var obj = $.parseJSON(data);
                        if (obj.Result.Table.length == 0) {
                            //$("#submitBTN").prop("disabled", true);
                        } else {
                            console.log(obj);
                            var optAll = obj.Result.Table[0].OptAll;
                            var optSave = obj.Result.Table[0].OptSave;
                            var optUpdate = obj.Result.Table[0].OptUpdate;
                            var optDelete = obj.Result.Table[0].OptDelete;
                            var optView = obj.Result.Table[0].OptView;
                            var rowCounter = $('#divDashboardGrid tr').length;
                            if (!optAll) {
                                if (!optSave) {
                                    $("#savebtn").css("pointer-events", "none");
                                } else {
                                    $("#savebtn").css("pointer-events", "");
                                }
                                if (!optView) {

                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#viewCursorDiv-' + i).empty();
                                        $('#viewCursorDiv-' + i).append(`<a class="table-link link-success noCursor" id="viewNoCursor"">
                                                                                                                                                <span class="fa-stack">
                                                                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                                                                                                                </span>
                                                                                                                                            </a>`);
                                    }
                                }
                                if (!optUpdate) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#editCursorDiv-' + i).empty();
                                        $('#editCursorDiv-' + i).append(`<a class="table-link link-primary noCursor">
                                                                                                                                                <span class="fa-stack">
                                                                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                                                                                                </span>
                                                                                                                                            </a>`);
                                    }
                                }
                                if (!optDelete) {
                                    for (var i = 0; i < rowCounter; i++) {
                                        $('#deleteCursorDiv-' + i).empty();
                                        $('#deleteCursorDiv-' + i).append(`<a class="table-link link-danger noCursor">
                                                                                                                                                <span class="fa-stack">
                                                                                                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                                                                                                    <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                                                                                                                </span>
                                                                                                                                            </a>`);
                                    }
                                }
                                if (!(optUpdate || optDelete || optView)) {
                                    $("#divDashboardGrid").css("display", "none");
                                    $(".totalrows").css("display", "none");
                                    $("#SParam").hide();
                                }
                            }
                        }
                    }
                },
                error: function (errMsg) {
                    $.notify(errMsg, { position: "top center", className: "error" });
                }
            });
        }


        function GetSearchData() {

            if ($('#DashboardType').val() == "SUMMARY") {
                GetSummaryData();
                GetFormRights();
            }
            else {
                GetDetailData();
                GetFormRights();
            }
        }

        function GetSummaryData() {
             
            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                async: false,
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    ColorCombination();
                    var dashGrid = $('#gateDashboardtable tr').length;
                    $('#totalRows').text(dashGrid);
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function GetDetailData() {

            var data = $('#SParam').serialize();
            $.ajax({
                url: '@Url.Action("GetDetailData")',
                type: "POST",
                data: $('#SParam').serializeArray(),
                async: false,
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    ColorCombination();
                    var dashGrid = $('#gateDashboardtable tr').length;
                    $('#totalRows').text(dashGrid);
                    GetFormRights();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#gateDashboardtable tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });

        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup'); // Reset search box and trigger the search
        });

        $('#sendToExcel').click(function () {
            $("#GateDataTable").table2excel({
                filename: "TransferFromWorkCenter.xls"
            });
        });

        $(document).on("click", ".sortCol", function () {
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');
            if (currentOrder === 'asc') {
                sortTable('GateDataTable', colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable('GateDataTable', colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function CheckEditOrDelete(event, TransferEntryId, TransferYearCode, action) {
             
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("CheckEditOrDelete")',
                type: "POST",
                data: { "TransferEntryId": TransferEntryId, "TransferYearCode": TransferYearCode },
                async: false,
                success: function (data) {
                      
                    var obj = $.parseJSON(data);
                    if (obj.Result[0] != undefined) {
                        if (obj.Result[0].PendingToRecByStore == 'N') {
                            $.notify("Cannot edit/delete this item as Receive In Store for TransferMatSlipNo : " + obj.Result[0].TransferMatSlipNo + "", "error");
                            return false;
                        }
                        else {
                            if (action == "edit") {
                                confirmEdit(event);
                            }
                            else {
                                confirmDelete(event);
                            }
                        }
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }

        function confirmDelete(event) {

            event.preventDefault();
            if (confirm("Are you sure you want to delete this entry?")) {
                var urlHref = $(event.currentTarget).attr("href");
                var linkUrl = urlHref;
                linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&TransferSlipNo=" + $('#TransferMatSlipNo').val() + "&ItemName=" + $('#ItemName').val() + "&PartCode=" + $('#PartCode').val() + "&FromWorkCenter=" + $('#TransferFromWC').val() + "&ToWorkCenter=" + $('#TransferToWC').val() + "&StoreName=" + $('#TransferToStore').val() + "&ProdSlipNo=" + $('#ProdSlipNo').val() + "&ProdSchNo=" + $('#ProdSchNo').val() + "&Searchbox=" + $('#search-box').val() + "&DashboardType=" + $('#DashboardType').val();
                window.location.href = linkUrl;
            }
        }

        function confirmEdit(event) {
             
            event.preventDefault();
            var urlHref = $(event.currentTarget).attr("href");
            var linkUrl = urlHref;
            linkUrl = linkUrl + "&FromDate=" + $('#FromDate').val() + "&ToDate=" + $('#ToDate').val() + "&TransferSlipNo=" + $('#TransferMatSlipNo').val() + "&ItemName=" + $('#ItemName').val() + "&PartCode=" + $('#PartCode').val() + "&FromWorkCenter=" + $('#TransferFromWC').val() + "&ToWorkCenter=" + $('#TransferToWC').val() + "&StoreName=" + $('#TransferToStore').val() + "&ProdSlipNo=" + $('#ProdSlipNo').val() + "&ProdSchNo=" + $('#ProdSchNo').val() + "&Searchbox=" + $('#search-box').val() + "&DashboardType=" + $('#DashboardType').val();
            window.location.href = linkUrl;
        }

        function ColorCombination() {
            var rowCount = $('#gateDashboardtable tr').length;
            for (var i = 0; i <= rowCount; i++) {
                if ($('#PendToRec-' + i).text() == 'Y') {
                    $('#TransferData-' + i + ' th').css("color", "red");
                    $('#TransferData-' + i + ' td').css("color", "red");
                }
                if ($('#PendToRec-' + i).text() == 'N') {
                    $('#TransferData-' + i + ' th').css("color", "green");
                    $('#TransferData-' + i + ' td').css("color", "green");
                }
                if ($('#IssueToStoreWc-' + i).text() == 'W') {
                    $('#TransferData-' + i + ' th').css("color", "brown");
                    $('#TransferData-' + i + ' td').css("color", "brown");
                }
                if ($('#IssueToStoreWc-' + i).text() == 'S') {
                    $('#TransferData-' + i + ' th').css("color", "darkolivegreen");
                    $('#TransferData-' + i + ' td').css("color", "darkolivegreen");
                }
            }
        }

    </script>
    <script src="~/Scripts/table2excel.js"></script>
}