            AutoComplete('VRequisitionMainDetail', 'WorkCenter', 'WorkCenter', null);
            AutoComplete('VRequisitionMainDetail', 'WONo', 'WONo', null);
            AutoComplete('VRequisitionMainDetail', 'DeptName', 'DeptName', null);
