                <th data-columnno="6" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FGItemName</th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Workcenter</th>
                <th data-columnno="8" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ProdQty</th>
                <th data-columnno="9" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>FGUnit</th>
                <th data-columnno="10" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RMPartCode</th>
                <th data-columnno="11" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RMItemName</th>
                <th data-columnno="12" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ConsumedRMQTY</th>
                <th data-columnno="13" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RMunit</th>
                <th data-columnno="14" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>MainRMQTY</th>
                <th data-columnno="15" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>MainRMUnit</th> 
                <th data-columnno="17" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>TotalReqRMQty</th>
                <th data-columnno="18" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Total RM Stock</th>
                <th data-columnno="19" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>AltRMQty</th>
                <th data-columnno="20" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>AltRMUnit</th>
                <th data-columnno="21" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>RMNetWt</th>
                <th data-columnno="22" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>GrossWt</th>
                <th data-columnno="23" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>BOMRevNO</th>
                <th data-columnno="24" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>BOMRevDate</th>
                <th data-columnno="25" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>ManualAutoEntry</th>
                <th data-columnno="26" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>EntryId</th>
                <th data-columnno="27" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Yearcode</th>
                <th data-columnno="28" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Qc Mandatory</th>
                <th data-columnno="29" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Pend Qty for Qc</th>
            </tr>
        </thead>
        <tbody id="gateDashboardtable">
            @{
                var @Cntr = 0;
                int srNoStart = (Model.PageNumber - 1) * Model.PageSize;
                int srNo = srNoStart + 1;
                if (Model.ProductionDashboard == null || Model.ProductionDashboard.Count == 0)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.ProductionDashboard)
                    {

                        Cntr = Cntr + 1;
                       
                        <tr onclick="selection(this)" id="itemDetail-@Cntr">
                            <th>@srNo</th>
                            <td style="text-align:center;white-space: nowrap;">
                                <div id="container">
                                    <div id="printData-@Cntr">
                                        <a class="table-link link-dark" target="_blank" asp-action="PrintReport" asp-route-EntryId="@item.EntryId" asp-route-YearCode="@item.Yearcode">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-print fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                    <div id="viewCursorDiv-@Cntr">
                                        <a class="table-link link-success" id="viewCursor-@Cntr" asp-action="ProductionEntry" asp-route-Mode="V" asp-route-ID="@item.PRODEntryId" asp-route-YC="@item.PRODYearcode" onclick="BackButtonData(event);">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </div>
                                    @if (item.Yearcode == yearCode)
                                    {
                                        <div id="editCursorDiv-@Cntr">
                                            <a class="table-link link-primary"
                                               id="editCursor-@Cntr"
                                               asp-action="ProductionEntry"
                                               asp-route-Mode="U"
                                               asp-route-ID="@item.PRODEntryId"
                                               asp-route-YC="@item.PRODYearcode"
                                               onclick="confirmEdit(event, '@item.PRODEntryId', '@item.PRODYearcode', '@item.ProdDate')">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        // <a href="@Url.Action("DeleteById", "ProductionEntry", new { ID = item.PRODEntryId, YC = item.PRODYearcode,Entrydate = item.Entrydate  })"
                                        //    class="table-link link-danger"
                                        //    onclick="confirmDelete(event, '@item.ProdSlipNo', '@item.PRODYearcode', '@item.ProdDate')"
                                        //    title="Delete">
                                        //     <span class="fa-stack">
                                        //         <i class="fa fa-square fa-stack-2x"></i>
                                        //         <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                        //     </span>
                                        // </a>
                                    }
                                    else{
                                        <div>
                                            <a class="table-link link-primary noCursor">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        // <div>
                                        //     <a class="table-link link-danger noCursor">
                                        //         <span class="fa-stack">
                                        //             <i class="fa fa-square fa-stack-2x"></i>
                                        //             <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                        //         </span>
                                        //     </a>
                                        // </div>
                                    }
                                </div>
                            </td>
                            <td class="newprodrework-@Cntr">@item.NewProdRework</td>
                            <td class="prodslipno-@Cntr">@item.ProdSlipNo</td>
                            <td class="proddate-@Cntr">@item.ProdDate</td>
                            <td class="fgpartcode-@Cntr">@item.FGPartCode</td>
                            <td class="fgitemname-@Cntr">@item.FGItemName</td>
                            <td class="workcenter-@Cntr">@item.WorkCenter</td>
                            <td class="prodqty-@Cntr">@item.ProdQty</td>
                            <td class="unit-@Cntr">@item.Unit</td>
                            <td class="rmpartcode-@Cntr">@item.RMPartCode</td>
                            <td class="rmitemname-@Cntr">@item.RMItemName</td>
                            <td class="consumedrmqty-@Cntr">@item.ConsumedRMQTY</td>
                            <td class="consumedrmunit-@Cntr">@item.ConsumedRMUnit</td>
                            <td class="mainrmqty-@Cntr">@item.MainRMQTY</td>
                            <td class="mainrmunit-@Cntr">@item.MainRMUnit</td> 
                            <td class="totalreqrmqty-@Cntr">@item.TotalReqRMQty</td>
                            <td class="totalstock-@Cntr">@item.TotalStock</td>
                            <td class="altrmqty-@Cntr">@item.AltRMQty</td>
                            <td class="altrmunit-@Cntr">@item.AltRMUnit</td>
                            <td class="rmnetwt-@Cntr">@item.RMNetWt</td>
                            <td class="grosswt-@Cntr">@item.GrossWt</td>
                            <td class="bomno-@Cntr">@item.BOMNO</td>
                            <td class="bomrevdate-@Cntr">@item.BOMRevDate</td>
                            <td class="manualautoentry-@Cntr">@item.ManualAutoEntry</td>
                            <td class="entryid-@Cntr">@item.EntryId</td>
                            <td class="yearcode-@Cntr">@item.Yearcode</td>
                            <td class="qcmandatory-@Cntr" id="QcMandatory-@Cntr">@item.QCMandatory</td>
                            <td class="pendqtyforqc-@Cntr" id="PendQtyForQc-@Cntr">@item.PendQtyForQC</td>
                        </tr>
                        srNo++;
                    }
                }
            }
        </tbody>
    </table>
</div>
@{
    int displayedRows = Model.PageNumber * Model.PageSize;
    if (displayedRows > Model.TotalRecords)
    {
        displayedRows = Model.TotalRecords;
    }
}
<center><strong>TOTAL ROWS: <span>@displayedRows</span></strong></center>
