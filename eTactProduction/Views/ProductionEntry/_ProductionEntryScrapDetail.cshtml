@model eTactWeb.DOM.Models.ProductionEntryModel

@if (Model.ScrapDetailGrid == null)
{
  @*   <tr class="text-center">
        <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr> *@
}
else
{
    var @Cntr = 0;
    foreach (var item in Model.ScrapDetailGrid)
    {
        Cntr = Cntr + 1;
        <tr id="itemGrid" class="small" style="white-space:nowrap">
            <td style="white-space:nowrap;">
                <a class="table-link link-primary" onclick="EditScrapItemRow(@item.SeqNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a class="table-link link-danger" onclick="DeleteScrapItemRow(@item.SeqNo);">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@item.SeqNo</td>
            <td>@item.ScrapItemName</td>
            <td>@item.ScrapPartCode</td>
            <td>@item.ScrapType</td>
            <td>@item.ScrapQty.ToString("0.00")</td>
            <td>@item.Scrapunit</td>
            <td>@item.StoreTransferScrap</td>
            <td>@item.TransferToWCStore</td>
        </tr>
    }
}