@model eTactWeb.DOM.Models.ProductionEntryReportModel

<div class="table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:static;" id="dashRThead">
            <tr>
                <th>Sr#</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">Prod Date <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">FG Part Code <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">FG Item Name <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">FG Prod Qty <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="5" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">FG OK Qty <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="6" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">FG Rej Qty <i class="fa" aria-hidden="true"></i></span>
                </th>
                <th data-columnno="7" data-sortorder="asc" class="sortCol">
                    <span style="padding:5px;margin:5px" class="sort-icon">Rej Qty Due to Trial <i class="fa" aria-hidden="true"></i></span>
                </th>

            </tr>
        </thead>
        <tbody id="divStockRegisterBody">
            @{
                var @Cntr = 0;
                if (Model.ProductionEntryReportDetail == null)
                {
                    <tr class="text-center"><td colspan="26" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                }
                else
                {
                    foreach (var item in Model.ProductionEntryReportDetail)
                    {
                        Cntr = Cntr + 1;

                        <tr id="SAGridRow-@Cntr">
                            
                            <th>@Cntr</th>
                            @if (item.ProdDate != null)
                            {
                                <td>@item.ProdDate.Split(" ")[0]</td>
                            }
                            else
                            {
                                <td>@item.ProdDate</td>
                            }
                            <td style="background-color: #e09ef0;">@item.FGPartCode</td>
                            <td>@item.FGItemName</td>
                            <td id="ProdQty-@Cntr">@item.FGProdQty</td>
                            <td id="OkQty-@Cntr">@item.FGOKQty</td>
                            <td id="RejQty-@Cntr">@item.FGRejQty</td>
                            <td>@item.RejQtyDuetoTrail</td>

                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>

<style>

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }
</style>

