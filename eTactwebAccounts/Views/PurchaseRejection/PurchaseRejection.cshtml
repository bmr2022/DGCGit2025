        function validateDate(e) {
            const today = new Date();
            const day = today.getDate().toString().padStart(2, '0');
            const month = (today.getMonth() + 1).toString().padStart(2, '0');
            const year = today.getFullYear();
            const formattedCurrentDate = `${day}/${month}/${year}`;
            const formattedCurrentDateObject = new Date(`${month}/${day}/${year}`); // MM/DD/YYYY for JS compatibility

            const selectedDateValue = $(e).val();
            if (!selectedDateValue) return;

            const [dd, mm, yyyy] = selectedDateValue.split("/");
            const selectedDate = new Date(yyyy, mm - 1, dd);

            const fyStartYear = (today.getMonth() + 1) < 4 ? year - 1 : year;
            const fyStartDate = new Date(fyStartYear, 3, 1);     // April 1 of FY
            const fyEndDate = new Date(fyStartYear + 1, 2, 31);  // March 31 of next year

            if (selectedDate > formattedCurrentDateObject) {
                $.notify(`The selected date must be within the financial year: ${fyStartDate.toLocaleDateString()} to ${fyEndDate.toLocaleDateString()}`, "error");
                $(e).val(formattedCurrentDate);
            } else if (selectedDate < fyStartDate || selectedDate > fyEndDate) {
                $.notify(`The selected date must be within the financial year: ${fyStartDate.toLocaleDateString()} to ${fyEndDate.toLocaleDateString()}`, "error");
                $(e).val(formattedCurrentDate);
            }
        }

