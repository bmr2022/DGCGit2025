@model eTactWeb.DOM.Models.AgainstAdjustVoucherModel

@{
    var Cntr = 0;
}
@if (Model.Mode == "Adjust")
{
    @foreach (var item in Model.AgainstAdjustVoucherList)
{
    Cntr++;
    <tr class="small" style="white-space:nowrap" data-srno="@Cntr">
            <td>
                <select class="form-control  type-select" asp-for="@item.Type" style="width:50px;">
                    <option value="DR">DR</option>
                    <option value="CR">CR</option>
                </select>
            </td>
        <td>
            <input asp-for="@item.AccountCode" type="hidden" />
            <input asp-for="@item.BankType" type="hidden" />
            <select class="form-control ledger-select" asp-for="@item.AccountCode" style="width:250px;">
                <option value="@item.AccountCode" selected>@item.AccountName</option>
            </select>
        </td>
        <td>
            <div class="d-flex align-items-center">
                <input asp-for="@item.Balance" class="form-control me-2" style="width:70px;" readonly />
                <input asp-for="@item.DRCR" class="form-control" style="width:50px;" readonly />
            </div>
        </td>
        <td>
            <select class="form-control mode-select" asp-for="@item.ModeOfAdjustment" style="width:100px;">
                @if (item.Mode == "U" || item.Mode == "V" || item.Mode == "Adjust")
                {
                    <option value="@item.ModeOfAdjustment" selected>@item.ModeOfAdjustment</option>
                }
            </select>
        </td>
        <td>
            <input asp-for="@item.AdjustmentAmt" class="form-control adjamt-input" type="number" min="0" style="width:70px;" />
        </td>
        <td>
            <input asp-for="@item.AdjustmentAmtOthCur" class="form-control" readonly />
        </td>
        <td>
            <input asp-for="@item.CostCenterId" type="hidden" />
            <select class="form-control costcenter-select" asp-for="@item.CostCenterName" style="width:140px;">
                @if (item.Mode == "U" || item.Mode == "V")
                {
                    <option value="@item.CostCenterId" selected>@item.CostCenterName</option>
                }
            </select>
        </td>
        <td><input asp-for="@item.PartyWiseNaration" class="form-control" /></td>
        <td><input asp-for="@item.AgainstVoucherNo" class="form-control" readonly /></td>
        <td><input asp-for="@item.AgainstVoucheryearCode" class="form-control" readonly /></td>
        <td><input asp-for="@item.AgainstVoucherDate" class="form-control" readonly /></td>
        <td><input asp-for="@item.AgainstVoucherType" class="form-control" readonly /></td>
        <td><input asp-for="@item.AgainstVoucherEntryId" class="form-control" readonly /></td>
        <td><input asp-for="@item.VoucherBillAmt" class="form-control" readonly /></td>
        <td><input asp-for="@item.PendBillAmt" class="form-control" readonly /></td>
    </tr>
}

    
}
else
{
    <tr class="small" style="white-space:nowrap">
        <td>
            <select class="form-control" asp-for="Type" style="width:50px;">
                <option value="DR">DR</option>
                <option value="CR">CR</option>
            </select>
        </td>
        <td>
            <input asp-for="AccountCode" class="form-control" type="hidden" />
            <input type="hidden" asp-for="BankType" />
            <select class="form-control" asp-for="LedgerName" style="width:250px;">
                <option value="@Model.LedgerName">-Select-</option>
                @if (Model.Mode == "U" || Model.Mode == "V")
                {
                    <option value="@Model.LedgerName" selected>@Model.LedgerName</option>
                }
            </select>
        </td>
        <td>
            <div class="d-flex align-items-center">
                <input asp-for="Balance" class="form-control me-2" style="width: 70px;" readonly />
                <input asp-for="DRCR" class="form-control" style="width: 50px;" readonly />
            </div>
        </td>
        <td>
            <select class="form-control" asp-for="ModeOfAdjustment" style="width:100px;">
                @if (Model.Mode == "U" || Model.Mode == "V")
                {
                    <option value="@Model.ModeOfAdjustment" selected>@Model.ModeOfAdjustment</option>
                }
            </select>
        </td>
        <td><input asp-for="AdjustmentAmt" class="form-control" type="number" min="0" style="width:70px;" /></td>
        <td>
            <input asp-for="AdjustmentAmtOthCur" class="form-control" readonly />
        </td>
        <td>
            <input type="hidden" asp-for="CostCenterId" value="@Model.CostCenterId" />
            <select class="form-control" asp-for="CostCenterName" style="width:140px;">


                @if (Model.Mode == "U" || Model.Mode == "V")
                {
                    <option value="@Model.CostCenterId">@Model.CostCenterName</option>
                }
            </select>
        </td>
        <td><input asp-for="PartyWiseNaration" class="form-control" /></td>
        <td><input asp-for="AgainstVoucherNo" class="form-control" readonly /></td>
        <td><input asp-for="AgainstVoucheryearCode" class="form-control" readonly /></td>
        <td><input asp-for="AgainstVoucherDate" class="form-control" readonly /></td>
        <td><input asp-for="AgainstVoucherType" class="form-control" readonly /></td>
        <td><input asp-for="AgainstVoucherEntryId" class="form-control" readonly /></td>
        <td><input asp-for="VoucherBillAmt" class="form-control" readonly /></td>
        <td><input asp-for="PendBillAmt" class="form-control" readonly /></td>
    </tr>
}