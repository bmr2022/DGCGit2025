@model eTactWeb.DOM.Models.ProfitAndLossModel

@{
    var excludeColumns = new List<string> { "ParentAccountCode", "AccountCode", "PLseqNo" };
}
<div class="card-body table-responsive" style="max-height:300px;overflow-y:auto;">
    <table class="table table-responsive table-hover table-bordered PMRPGrid TbCss text-nowrap mb-0" id="ReportTable">
        <thead class="bg-gradient card-headerBG text-light PMRPThead" style="position:sticky; top:0; z-index:1;" id="dashRThead">
            <tr>
                <th>Action</th>
                <th>Sr#</th>

                @* Generate headers dynamically from first row, excluding some *@
                @if (Model.ProfitAndLossGrid != null && Model.ProfitAndLossGrid.Any())
                {
                    foreach (var colName in Model.ProfitAndLossGrid.First().DynamicColumns.Keys)
                    {
                        if (!excludeColumns.Contains(colName)) // <-- skip excluded columns
                        {
                            <th data-columnno="@colName" data-sortorder="asc" class="sortCol">
                                <div class="header-icons" style="display:flex; align-items:center; gap:6px;">
                                    <span class="sort-icon" title="Sort Column" style="user-select:none; cursor:pointer;">
                                        <i class="fa fa-sort-down" style="display:none;"></i>
                                    </span>
                                    <span>@colName</span>
                                </div>
                            </th>
                        }
                    }
                }
            </tr>
        </thead>

        <tbody id="divStockRegisterBody">
            @{
                var cntr = 0;
                if (Model.ProfitAndLossGrid == null || !Model.ProfitAndLossGrid.Any())
                {
                    <tr class="text-center">
                        <td colspan="50" class="text-black-50">
                            <strong>NO DATA FOUND</strong>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var row in Model.ProfitAndLossGrid)
                    {
                        cntr++;

                        <tr id="row-@cntr" onclick="selection(this)">
                            <td>
                                <a class="table-link link-danger" id="del-@cntr"
                                   onclick="event.stopPropagation(); DeleteRow(this.id)">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>
                            <th>@cntr</th>

                            @foreach (var col in row.DynamicColumns)
                            {
                                if (!excludeColumns.Contains(col.Key)) // <-- skip excluded columns
                                {
                                    <td id="@col.Key-@cntr" style="background-color:#DAE0E2">
                                        @col.Value
                                    </td>
                                }
                            }
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>
    .header-icons {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .hidden-column {
        display: none !important;
    }

    .sort-icon, .toggle-col {
        cursor: pointer;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    #dashRThead th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }

</style>