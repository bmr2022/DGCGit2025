@using System.Globalization
@model eTactWeb.DOM.Models.DirectPurchaseBillModel



<input type="hidden" asp-for="ItemNetAmount" class="form-control" />



@if (Model.ItemDetailGrid == null)
{
    <tr class="text-center">
        <td colspan="32" class="text-black-50"><strong>NO DATA ADDED</strong></td>
    </tr>
}
else
{
    foreach (var item in Model.ItemDetailGrid)
    {
        <tr class="small @item.SeqNo" style="white-space:nowrap">
            <td style="white-space:nowrap;">
                @if (Model.Mode == "V" && Model.ID > 0)
                {
                    <a class="table-link link-primary noCursor" disabled>
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a class="table-link link-danger noCursor" disabled>
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                }
                else
                {
                    <a class="table-link link-primary" onclick="EditItemRow(@item.SeqNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a class="table-link link-danger" onclick="DeleteItemRow(@item.SeqNo);">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                }
            </td>
            <td>@item.SeqNo</td>
            <td class="divListDocType">@item.DocTypeText</td>
            <td class="divPOItemListPartCode">
                @if (!string.IsNullOrEmpty(item.PartText) && !item.PartText.Contains("Select"))
                {
                    @item.PartText
                }
            </td>

            <td class="divPOItemListPartCode">
                @if (!string.IsNullOrEmpty(item.ItemText) && !item.ItemText.Contains("Select"))
                {
                    @item.ItemText
                }
            </td>
            <td class="DirectPurchaseBillScheduleDetail">
                @if (item.PONo != null && item.PONo != "" && !item.PONo.Contains("Select"))
                {
                    @item.PONo
                }
                else { }
            </td>
            <td class="DirectPurchaseBillScheduleDetail">@item.POYear</td>
            @* <td class="DirectPurchaseBillScheduleDetail"> *@
            @*     @{ *@
            @*         DateTime parsedDate; *@
            @*         string formattedDate = DateTime.TryParse(item.PODate, out parsedDate) *@
            @*         ? parsedDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) *@
            @*         : string.Empty; *@
            @*     } *@
            @*     @formattedDate *@
            @* </td> *@
            <td class="DirectPurchaseBillScheduleDetail">
                @{
                    DateTime d;
                    @((DateTime.TryParse(item.PODate, out d) && d.Year != 1900)
                    ? d.ToString("dd/MM/yyyy")
                    : "")
                }
            </td>
            <td class="DirectPurchaseBillScheduleDetail">
                @if (item.ScheduleNo != null && item.ScheduleNo != "" && !item.ScheduleNo.Contains("Select"))
                {
                    @item.ScheduleNo
                }
                else { }
            </td>
            <td class="DirectPurchaseBillScheduleDetail">@item.ScheduleYear</td>
            @* <td class="DirectPurchaseBillScheduleDetail"> *@
            @*     @{ *@
            @*         DateTime parsedDate1; *@
            @*         string formattedDate1 = DateTime.TryParse(item.ScheduleDate, out parsedDate1) *@
            @*         ? parsedDate1.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) *@
            @*         : string.Empty; *@
            @*     } *@
            @*     @formattedDate1 *@
            @* </td> *@
            <td class="DirectPurchaseBillScheduleDetail">
                @{
                    DateTime d1;
                    @((DateTime.TryParse(item.ScheduleDate, out d1) && d1.Year != 1900)
                    ? d1.ToString("dd/MM/yyyy")
                    : "")
                }
            </td>
            <td class="DirectPurchaseBillScheduleDetail">@item.DPBQty</td>

            <td class="billQty">@item.BillQty</td>
            <td>@item.Rate.ToString()</td>
            <td class="OtherFieldOFDirectPurchaseBillDetailTable">@item.OtherRateCurr.ToString()</td>
            <td>@item.DiscPer</td>
            <td>@item.DiscRs</td>
            <td id="GridAmount-@item.SeqNo">@item.Amount.ToString()</td>
            <td>@item.HSNNo</td>
            <td>@item.Unit</td>
            <td class="OtherFieldOFDirectPurchaseBillDetailTable">@item.ProcessName</td>
            <td class="OtherFieldOFDirectPurchaseBillDetailTable">@item.Description</td>
            <td>
                <input type="text"
                       value="@item.ItemLocation"
                       class="item-location form-control form-control-sm"
                       data-seqno="@item.SeqNo" />
            </td>
            <td>@item.GroupName</td>
            <td class="OtherFieldOFDirectPurchaseBillDetailTable">@(item.CostCenterName ?? string.Empty)</td>
        </tr>
    }
}