@section Scripts
{
    <script>

        $(document).ready(function () {

            /* ---------------------------------------------------------
               1) CLEAR DRILLDOWN STACK when TrailBalance is opened fresh
               --------------------------------------------------------- */
            const navType = performance.getEntriesByType("navigation")[0]?.type;
            if (navType !== "back_forward") {
                sessionStorage.removeItem("DD_STACK");
                sessionStorage.removeItem("DD_ALLOW_RESTORE");
                sessionStorage.removeItem("DD_DRILLDOWN_NAVIGATION");
            }

            /* ---------------------------------------------------------
               2) INIT SELECT2 + DATEPICKERS
               --------------------------------------------------------- */
            $('#ReportType, #TrailBalanceGroupName, #ParentGroupName, #AccountName').select2();

            $("#FromDate").datepicker({ dateFormat: "dd/mm/yy" });
            $("#ToDate").datepicker({ dateFormat: "dd/mm/yy" });

            /* ---------------------------------------------------------
               3) DATE FORMATTER
               --------------------------------------------------------- */
            function convertToDDMMYYYY(dateStr) {
                if (!dateStr) return '';
                try {
                    let raw = dateStr.split(" ")[0];

                    if (/^\d{2}\/\d{2}\/\d{4}$/.test(raw))
                        return raw;

                    let [day, mon, year] = raw.includes('/') ? raw.split('/') : raw.split('-');

                    const mm = ({
                        Jan: "01", Feb: "02", Mar: "03", Apr: "04", May: "05", Jun: "06",
                        Jul: "07", Aug: "08", Sep: "09", Oct: "10", Nov: "11", Dec: "12"
                    })[mon] || mon.padStart(2, '0');

                    return `${day}/${mm}/${year}`;
                }
                catch {
                    return '';
                }
            }

            /* ---------------------------------------------------------
               4) SET DEFAULT DATES
               --------------------------------------------------------- */
            const currentDate = new Date();
            let fromDate = convertToDDMMYYYY('@Model.FromDate');
            $("#FromDate").datepicker("setDate", fromDate || currentDate);
            $("#ToDate").datepicker("setDate", currentDate);


            /* ---------------------------------------------------------
               5) LOAD ALL DROPDOWNS → THEN RESTORE FILTERS
               --------------------------------------------------------- */
            $.when(
                FillGroupList(),
                FillParentGroupList(),
                FillAccountList()
            ).done(function () {

                let f = ddLoadFilters("TrailBalance");
                if (f) {
                    $("#FromDate").val(f.FromDate);
                    $("#ToDate").val(f.ToDate);
                    $("#ReportType").val(f.ReportType).trigger("change");
                    $("#GroupList").val(f.GroupList).trigger("change");
                    $("#ParentGroupList").val(f.ParentGroupList).trigger("change");
                    $("#AccountList").val(f.AccountList).trigger("change");
                    $("#Search").val(f.Search);
                }

                // FINAL LOAD
                GetTrailBalanceDetailsData();
            });


            /* ---------------------------------------------------------
               6) INIT DRILLDOWN (Correct Call)
               --------------------------------------------------------- */
            ddInitPage("TrailBalance", "BackButton", "ReportType");


            /* ---------------------------------------------------------
               7) TOGGLE COLUMN LOGIC
               --------------------------------------------------------- */
            var hiddenCols = {};

            $('.toggle-col').on('click', function () {
                var $th = $(this).closest('th');
                var colIndex = $th.index() + 1;
                var $icon = $(this).find('i');
                var isVisible = !$('table tr th:nth-child(' + colIndex + ')').hasClass('hidden-column');

                if (isVisible) {
                    $('table tr').each(function () {
                        $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                            .addClass('hidden-column');
                    });
                    $icon.removeClass('fa-eye-slash').addClass('fa-eye');
                    hiddenCols[colIndex] = $th.text().trim();
                } else {
                    $('table tr').each(function () {
                        $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                            .removeClass('hidden-column');
                    });
                    $icon.removeClass('fa-eye').addClass('fa-eye-slash');
                    delete hiddenCols[colIndex];
                }
            });

            $('#toggle-hidden-cols-btn').on('click', () => $("#hidden-cols-panel").toggle());


            /* ---------------------------------------------------------
               8) REPORT TYPE CHANGE → LOAD UI FIELDS
               --------------------------------------------------------- */
            function loadReportFields(reportType) {
                if (reportType === "TRAILDETAIL") {
                    $("#reportFields").html(`<!-- TRAILDETAIL HTML -->`);
                }
                else if (reportType === "TRAILSUMMARY") {
                    $("#reportFields").html(`<!-- TRAILSUMMARY HTML -->`);
                }
            }

            $("#ReportType").change(function () {
                loadReportFields($(this).val());
                updateButtonTitle();
            });

            loadReportFields($("#ReportType").val());


            /* ---------------------------------------------------------
               9) DYNAMIC TITLE
               --------------------------------------------------------- */
            function updateButtonTitle() {
                let type = $("#ReportType").val();
                $("#dynamicText").text(
                    type === "TRAILSUMMARY" ? "Trail Balance Summary" : "Trail Balance Detail"
                );
            }

            updateButtonTitle();


            /* ---------------------------------------------------------
               10) STYLE SUMMARY ROWS
               --------------------------------------------------------- */
            $(".bold-row").css({
                "font-weight": "bold",
                "font-size": "16px",
                "color": "green"
            }).find("input").css("color", "green");

        });

        function FillGroupList() {

            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            $.ajax({
                url: '@Url.Action("FillGroupList", "TrailBalance")',
                type: 'GET',
                async: false,
                data: { "FromDate": FromDate, "ToDate": ToDate },
                success: function (response, status, error) {

                    var TrailBalanceGroupName = $('#TrailBalanceGroupName');
                    var obj = $.parseJSON(response);
                    TrailBalanceGroupName.empty();
                    TrailBalanceGroupName.append('<option value="">--Select--</option>');

                    $.each(obj.Result, function (index, ledger) {
                        TrailBalanceGroupName.append('<option value="' + ledger.Account_Code + '">' + ledger.GroupName + '</option>');
                    });

                },
                error: function (xhr, status, error) {
                    alert('Failed to load groups.');
                }
            });
        }

        function FillParentGroupList() {

            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var GroupCode = $('#TrailBalanceGroupName').val();
            if (GroupCode == "") {
                GroupCode = null;
            }
            $.ajax({
                url: '@Url.Action("FillParentGroupList", "TrailBalance")',
                type: 'GET',
                async: false,
                data: { "FromDate": FromDate, "ToDate": ToDate, "GroupCode": GroupCode },
                success: function (response, status, error) {

                    var ParentGroupName = $('#ParentGroupName');
                    var obj = $.parseJSON(response);
                    ParentGroupName.empty();
                    ParentGroupName.append('<option value="">--Select--</option>');

                    $.each(obj.Result, function (index, ledger) {
                        ParentGroupName.append('<option value="' + ledger.Account_Code + '">' + ledger.ParentGroupName + '</option>');
                    });

                },
                error: function (xhr, status, error) {
                    alert('Failed to load groups.');
                }
            });
        }

        function FillAccountList() {

            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var GroupCode = $('#TrailBalanceGroupName').val();
            var ParentGroupCode = $('#ParentGroupName').val();
            if (GroupCode == "") {
                GroupCode = null;
            }
            if (ParentGroupCode == "") {
                ParentGroupCode = null;
            }
            $.ajax({
                url: '@Url.Action("FillAccountList", "TrailBalance")',
                type: 'GET',
                async: false,
                data: { "FromDate": FromDate, "ToDate": ToDate, "GroupCode": GroupCode, "ParentGroupCode": ParentGroupCode },
                success: function (response, status, error) {

                    var AccountName = $('#AccountName');
                    var obj = $.parseJSON(response);
                    AccountName.empty();
                    AccountName.append('<option value="">--Select--</option>');

                    $.each(obj.Result, function (index, ledger) {
                        AccountName.append('<option value="' + ledger.Account_Code + '">' + ledger.AccountName + '</option>');
                    });

                },
                error: function (xhr, status, error) {
                    alert('Failed to load groups.');
                }
            });
        }

        $("#TrailBalanceGroupName").change(function () {
            FillParentGroupList();
        });

        $("#ParentGroupName").change(function () {
            FillAccountList();
        });

        function selection(CurrentRow) {

            //$(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#divStockRegisterBody tr").each(function () {
                $(this).removeAttr("style"); // Remove any inline styles
            });

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#divStockRegisterBody tr").not(CurrentRow).css({ 'background-color': '' });
        }

        $("#ReportType").change(function () {
