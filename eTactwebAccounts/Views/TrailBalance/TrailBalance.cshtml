        });

        function updateHiddenColPanel() {
            const $panel = $('#hidden-cols-panel');
            $panel.empty();

            if (Object.keys(hiddenCols).length === 0) {
                $panel.append('<em>No hidden columns</em>');
                return;
            }

            $.each(hiddenCols, function (index, name) {
                const btn = $('<button class="btn btn-sm btn-outline-primary" style="margin: 2px;"></button>')
                    .text('Show: ' + name)
                    .on('click', function () {
                        $('table tr').each(function () {
                            $(this).find('th:nth-child(' + index + '), td:nth-child(' + index + ')').removeClass('hidden-column');
                        });
                        $('.toggle-col').each(function () {
                            const $btn = $(this);
                            const colIndex = $btn.closest('th').index() + 1;
                            if (colIndex == index) {
                                $btn.find('i').removeClass('fa-eye').addClass('fa-eye-slash');
                            }
                        });
                        delete hiddenCols[index];
                        updateHiddenColPanel();
                    });



                $panel.append(btn);
            });
        }

        function GetTrailBalanceDetailsData() {
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var EntryByMachine = $('#EntryByMachine').val();
            var ReportType = $('#ReportType').val();
            var TrailBalanceGroupCode = $('#TrailBalanceGroupName option:selected').val();
            var ParentAccountCode = $('#ParentGroupName option:selected').val();

            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetTrailBalanceDetailsData", "TrailBalance")",
                data: {
                    FromDate: FromDate,
                    ToDate: ToDate,
                    EntryByMachine: EntryByMachine,
                    ReportType: ReportType,
                    TrailBalanceGroupCode: TrailBalanceGroupCode,
                    ParentAccountCode: ParentAccountCode
                },
                success: function (response) {
                    $('#divStockMainRegister').html(response);

                    // 🔹 Re-apply hidden columns after reload
                    $.each(hiddenCols, function (colIndex, colName) {
                        $('#divStockMainRegister table tr').each(function () {
                            $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                                .addClass('hidden-column');
                        });
                        // update icon
                        $('#divStockMainRegister table tr th:nth-child(' + colIndex + ') .toggle-col i')
                            .removeClass('fa-eye-slash').addClass('fa-eye');
                    });

                    // 🔹 Update row count
                    var totalRows = $('#divStockMainRegister tr').length;
                    $('#totalRows').text(totalRows);
                    countAllTotal();
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching Trail Balance data:", error);
                }
            });
        }

