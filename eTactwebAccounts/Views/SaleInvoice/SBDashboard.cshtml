        function YearEditDeleteRight() {

            var loggedInYearCode = $('#SaleBillYearCode').val();

            $('.sbDashboardRow').each(function () {

                var $row = $(this);
                var yearCode = $row.find('.gridYearCode').val();

                var $deleteBtn = $row.find('.btnDeleteData');
                var $editBtn = $row.find('.btnEditData');

                if (yearCode == loggedInYearCode) {
                    $deleteBtn.css('cursor', 'default');
                    $deleteBtn.css('pointer-events', 'auto');
                    $editBtn.css('cursor', 'default');
                    $editBtn.css('pointer-events', 'auto');
                } else {
                    $row.css("color", "#9629a4");
                    $deleteBtn.css('cursor', 'not-allowed');
                    $deleteBtn.css('pointer-events', 'none');
                    $editBtn.css('cursor', 'not-allowed');
                    $editBtn.css('pointer-events', 'none');
                }
            });
        }

        function getFinancialYear() {
            let today = new Date();
            let year = today.getFullYear();
            let month = today.getMonth() + 1;

            if (month < 4) {
                return year - 1;
            } else {
                return year;
            }
        }

        function GetSearchData() {

            var formData = {
                'summaryDetail': $('#SummaryDetail').val(),
                'partCode': $('#PartCode').val(),
                'itemName': $('#ItemName').val(),
                'saleBillNo': $('#SaleBillNo').val(),
                'customerName': $('#AccountName').val(),
                'sono': $('#SONO').val() == 0 ? "" : $('#SONO').val(),
                'custOrderNo': $('#CustOrderNo').val(),
                'schNo': $('#SchNo').val(),
                'performaInvNo': $('#PerformaInvNo').val(),
                'saleQuotNo': $('#SaleQuotNo').val(),
                'domesticExportNEPZ': $('#DomesticExportNEPZ').val(),
                'fromDate': $('#FinFromDate').val(),
                'toDate': $('#FinToDate').val()
            };

            $.ajax({
                url: '@Url.Action("GetSearchData")',
                type: "POST",
                async: false,
                data: formData,
                success: function (data) {
                    $('#divDashboardGrid').empty().append(data);
                    CheckInv();
                    YearEditDeleteRight();
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        }
