                        $("#FinFromDate").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", parseDateToFormat(result));
                    } else {
                        var fromDate = $('#FromDate1').val();
                        $("#FinFromDate").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", parseDateToFormat(fromDate.split(" ")[0]));
                    }
                }
            });

            function addDays(date, days) {
                var result = new Date(date);
                result.setDate(result.getDate() + days);
                return result;
            }

