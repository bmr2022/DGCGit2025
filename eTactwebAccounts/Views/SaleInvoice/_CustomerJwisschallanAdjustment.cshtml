@model List<eTactWeb.DOM.Models.CustomerJobWorkIssueAdjustDetail>

@{
    @if (Model == null || Model.Count == 0)
    {
        <tr class="text-center">
            <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
        </tr>
    }
    else
    {
        var @Cntr = 0;
        foreach (var item in Model)
        {
            Cntr = Cntr + 1;
            <tr id="@Cntr" class="small" id="divUnMain" style="white-space:nowrap">
                <td>@Cntr</td>
                <td>@item.EntryIdRecJW</td>
                <td>@item.RecJWChallanNo</td>
                <td>@item.RecYearCode</td>
                <td>@item.ChallanDate</td>
                <td>@item.RecPartCode</td>
                <td>@item.RecItemName<input type="hidden" value="@item.RecItemCode"/></td>
                <td>@item.BomNo</td>
                <td>@item.BomDate</td>
                <td>@item.BomStatus</td>
                <td>@item.PendQty</td>
                <td>@item.IssuePartCode</td>
                <td>@item.IssueItemName</td>
                <td>@item.BomQty</td>
                <td>@item.Through</td>
                <td>@item.QtyToBeRec</td>
                <td>@item.ActualAdjQty</td>
                <td>@item.Batchno</td>
                <td>@item.UniqueBatchno</td>
                <td>@item.IssueQty</td>
                <td>@item.Rate</td>
                <td>@item.OriginalRecQty</td>
                <td>@item.IdealScrap</td>
                <td>@item.IssuedScrap</td>

            </tr>
        }
    }
    
}
<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
