@model List<eTactWeb.DOM.Models.CustomerJobWorkChallanAdj>

@{
    @if (Model == null || Model.Count == 0)
    {
        <tr class="text-center">
            <td colspan="25" class="text-black-50"><strong>NO DATA ADDED</strong></td>
        </tr>
    }
    else
    {
        var @Cntr = 0;
        foreach (var item in Model)
        {
            Cntr = Cntr + 1;
            <tr id="@Cntr" class="small" id="divUnMain" style="white-space:nowrap">
                <td>@Cntr</td>
                <td>@item.CustJwRecEntryId</td>
                <td>@item.CustJwRecChallanNo</td>
                <td>@item.CustJwRecYearCode</td> @* Rec YearCode *@
                <td>@item.CustJwIssChallanDate</td> @* Challan Date *@
                <td>@item.RecPartCode<input type="hidden" id="recItemCodeGrid-@Cntr" value="@item .RecItemCode"/></td> @* PartCode *@
                <td>@item.RecItemName</td> @* ItemName *@
                <td>@item.BomRevNo</td>
                <td>@item.BOMRevDate</td> 
                <td>@item.PendQty</td>
                <td>@item.FGPartCode <input type="hidden" id="fgItemCodeGrid-@Cntr" value="@item.FinishItemCode"/> </td> @*Issue PartCode*@
                <td>@item.FGItemName</td> @*Issue ItemName*@
                <td>@item.BOMQty</td>
                <td>@item.IssQty</td> @* qtyTobeIss-rec *@
                <td>@item.AdjQty</td> @*ActualAdjQty*@
                <td>@item.Issbatchno</td>
                <td>@item.Issuniquebatchno</td>
                <td>@item.IssuedScrapQty</td> @*IssQty*@
                <td>@item.TotalRecQty</td> @* OrginialRecQty *@
                <td>@item.IdealScrapQty</td>
                <td>@item.IssuedScrapQty</td>
                @*Bomstuatus , recpartcode , recitemname, issuepartcode, issueditemname, issueditemcode
                        ,Rate*@
            </tr>
        }
    }
    
}
<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px;
        }

    #GateDataTable {
        width: 100%;
        border-collapse: collapse;
    }

    #dashGateThead th {
        background-color: #127387;
        position: sticky;
        top: -2px;
        z-index: 1;
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }

    table {
        width: 100%;
    }

    th, td {
        white-space: nowrap;
    }
</style>
