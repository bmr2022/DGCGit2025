                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        var hiddenCols = {};

        $(document).ready(function () {

            let currentDate = new Date();

            // FromDate model thi value
            let fromDateRaw = '@Model.FromDate'; // e.g. "01/Apr/2025 00:00:00"

            function convertToDDMMYYYY(dateStr) {
                if (!dateStr) return '';
                let parts = dateStr.split(" ");
                let datePart = parts[0]; // "01/Apr/2025"
                let [day, mon, year] = datePart.split("/");

                const months = {
                    Jan: "01", Feb: "02", Mar: "03", Apr: "04",
                    May: "05", Jun: "06", Jul: "07", Aug: "08",
                    Sep: "09", Oct: "10", Nov: "11", Dec: "12"
                };

                return `${day}/${months[mon]}/${year}`;
            }

            let fromDateFormatted = convertToDDMMYYYY(fromDateRaw);

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' })
                .datepicker("setDate", fromDateFormatted);

            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' })
                .datepicker("setDate", 'now');

            $('#LiabilitiesAndAssets').select2();
            $('#ParentAccountName').select2();
            $('#AccountName').select2();
            $('#BackButton').hide();
            GetLiabilitiesAndAssetsData();

            let history = JSON.parse(sessionStorage.getItem('HistoryStack')) || [];
            let parentCode = sessionStorage.getItem('ParentCode');
            if (parentCode) {
                GetLiabilitiesAndAssetsData(parentCode)
            }
            let reportType = sessionStorage.getItem('ReportType');
            if (history.length > 0
                || sessionStorage.getItem('ParentCode')
                || sessionStorage.getItem('ShowOpening')
                || sessionStorage.getItem('ReportType')) {
                $('#BackButton').show();
            } else {
                $('#BackButton').hide();
            }
            if (history.length > 0) {
                let lastStep = history[history.length - 1];
                const action = lastStep.action;
                const params = lastStep.params;

                switch (action) {
                    case 'BalanceSheetSummary':
                        $('#ReportType').val(params.ReportType).trigger('change');

                        history.pop();
                        sessionStorage.setItem('HistoryStack', JSON.stringify(history));
                        break;
                }
            }
            if (history.length === 0) $('#BackButton').hide();

            GetBalanceSheetData();
        });

        $(document).on('click', '.toggle-col', function () {
             ; // should now hit when clicked
            var $th = $(this).closest('th');
            var colIndex = $th.index() + 1;
            var $icon = $(this).find('i');
            const isVisible = !$('table tr th:nth-child(' + colIndex + ')').hasClass('hidden-column');

            if (isVisible) {
                $('table tr').each(function () {
                    $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                        .addClass('hidden-column');
                });
                $icon.removeClass('fa-eye-slash').addClass('fa-eye');
                hiddenCols[colIndex] = $th.text().trim();
            } else {
                $('table tr').each(function () {
                    $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                        .removeClass('hidden-column');
                });
                $icon.removeClass('fa-eye').addClass('fa-eye-slash');
                delete hiddenCols[colIndex];
            }
            updateHiddenColPanel();
        });

        function updateHiddenColPanel() {
            const $panel = $('#hidden-cols-panel');
            $panel.empty();

            if (Object.keys(hiddenCols).length === 0) {
                $panel.append('<em>No hidden columns</em>');
                return;
            }

            $.each(hiddenCols, function (index, name) {
                const btn = $('<button class="btn btn-sm btn-outline-primary" style="margin: 2px;"></button>')
                    .text('Show: ' + name)
                    .on('click', function () {
                        $('table tr').each(function () {
                            $(this).find('th:nth-child(' + index + '), td:nth-child(' + index + ')').removeClass('hidden-column');
                        });
                        $('.toggle-col').each(function () {
                            const $btn = $(this);
                            const colIndex = $btn.closest('th').index() + 1;
                            if (colIndex == index) {
                                $btn.find('i').removeClass('fa-eye').addClass('fa-eye-slash');
                            }
                        });
                        delete hiddenCols[index];
                        updateHiddenColPanel();
                    });
                $panel.append(btn);
            });
        }

        $('#ReportType').change(function () {
            GetBalanceSheetData();
        })

        function GetBalanceSheetData() {
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var ReportType = $('#ReportType').val();

            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetBalanceSheetData", "BalanceSheet")",
                data: {
                    FromDate: FromDate,
                    ToDate: ToDate,
                    ReportType: ReportType
                },
                success: function (response) {
                    $('#divStockMainRegister').html(response);

                    // 🔹 Re-apply hidden columns after reload
                    $.each(hiddenCols, function (colIndex, colName) {
                        $('#divStockMainRegister table tr').each(function () {
                            $(this).find('th:nth-child(' + colIndex + '), td:nth-child(' + colIndex + ')')
                                .addClass('hidden-column');
                        });
                        // update icon
                        $('#divStockMainRegister table tr th:nth-child(' + colIndex + ') .toggle-col i')
                            .removeClass('fa-eye-slash').addClass('fa-eye');
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching Trail Balance data:", error);
                }
            });
        }

        function GetBalanceSheetDataByBalParentCode(td) {
            // td is the clicked cell
            let cellValue = $(td).text().trim();

            if ($('#ReportType').val() == "SUMMARY" || $('#ReportType').val() == "CONSOLIDATED") {
                // hidden input value inside this td
                var balParentCode = $(td).find(".hdnBalParentAccountCode").val();
                var FromDate = $('#FromDate').val();
                var ToDate = $('#ToDate').val();
                var ReportType = $('#ReportType').val();
                // Save history
                saveHistory('BalanceSheetSummary', {
                    balParentCode: balParentCode,
                    FromDate: FromDate,
                    ToDate: ToDate,
                    ReportType: ReportType
                });

                // Save to sessionStorage
                sessionStorage.setItem('ParentCode', balParentCode);
                sessionStorage.setItem('ReportType', "GROUPSUMMARY");

                // Mark current page
                sessionStorage.setItem('CurrentPage', 'BalanceSheetSummary');

                // Redirect
                window.location.href = '/TransactionLedger/Index';
            }
            else {
                // Save OLD state first
                let currentFromDate = $('#FromDate').val();
                let currentToDate = $('#ToDate').val();
                let currentReportType = $('#ReportType').val();
                let currentGroup = $('#Group').val();
                let curentShowOpening = $('#ShowOpening').prop('checked') ? "YES" : "NO";
                let currentShowRecordWithZeroAmt = $('#ShowRecordWithZeroAmt').prop('checked') ? "YES" : "NO";
                saveHistory('ProfitAndLossGroupDetail', { FromDate: currentFromDate, ToDate: currentToDate, ReportType: currentReportType, GroupCode: currentGroup, ShowOpening: curentShowOpening, ShowRecordWithZeroAmt: currentShowRecordWithZeroAmt });

                // Apply NEW state
                var FromDate = $('#FromDate').val();
                var ToDate = $('#ToDate').val();
                var GroupCode = $(td).find(".hdnParentAccountCode").val();
                var ShowOpening = $('#ShowOpening').prop('checked') ? "YES" : "NO";
                var ShowRecordWithZeroAmt = $('#ShowRecordWithZeroAmt').prop('checked') ? "YES" : "NO";
                $('#Group').val(GroupCode).trigger("change");
                $('#ReportType').val("DETAIL").trigger("change");

                $('#BackButton').show();
            }
        }

        function GetLiabilitiesAndAssetsData(selectedGroupCode = null) {
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();

            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetLiabilitiesAndAssetsData", "BalanceSheet")",
                data: {
                    FromDate: FromDate,
                    ToDate: ToDate
                },
                success: function (response) {
                    var LiabilitiesAndAssets = $('#LiabilitiesAndAssets');
                    var obj = $.parseJSON(response);
                    LiabilitiesAndAssets.empty();
                    LiabilitiesAndAssets.append('<option value="">--Select--</option>');

                    $.each(obj.Result, function (index, ledger) {
                        LiabilitiesAndAssets.append('<option value="' + ledger.ParentAccountCode + '">' + ledger.ParentAccountName + '</option>');
                    });

                    // Set selected GroupCode AFTER options are loaded
                    let groupCode = selectedGroupCode || sessionStorage.getItem('ParentCode');
                    if (groupCode) {
                        if ($('#ParentAccountName option[value="' + groupCode + '"]').length === 0) {
                            // Add option if not present
                            ParentAccountName.append(new Option(groupCode, groupCode, true, true));
                        }
                        ParentAccountName.val(groupCode).trigger('change');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching Group data:", error);
                }
            });
        }

        function saveHistory(action, params = {}) {
            // Load existing history or create empty
            let history = JSON.parse(sessionStorage.getItem('HistoryStack')) || [];

            // Push new action
            history.push({ action, params });

            // Save back
            sessionStorage.setItem('HistoryStack', JSON.stringify(history));

            // Show back button
            $('#BackButton').show();
        }

    </script>
}
