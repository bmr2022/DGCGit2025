                        function ChangeAdjustAmount() {
            var rowCount = $('#divDisplayPopupForPendingVouchersDetail tr').length;
            var AdjustQtyStr = $('#AdjustAmount').val();

            // Check for negative sign
            if (AdjustQtyStr.includes('-')) {
                alert('Negative amounts are not allowed.');
                return;
            }

            var AdjustQty = parseFloat(AdjustQtyStr);

            if (isNaN(AdjustQty) || AdjustQty <= 0) {
                alert('Please enter a valid Adjust Amount.');
                return;
            }

            // Calculate total available BalanceAmt
            var TotalAvailable = 0;
            for (let i = 1; i <= rowCount; i++) {
                let balanceText = $('#BalanceAmt-' + i).data('original');
                if (balanceText === undefined) {
                    balanceText = $('#BalanceAmt-' + i).text();
                    $('#BalanceAmt-' + i).data('original', parseFloat(balanceText));
                }
                let balanceVal = parseFloat($('#BalanceAmt-' + i).data('original'));
                if (!isNaN(balanceVal)) {
                    TotalAvailable += balanceVal;
                }
            }

            if (AdjustQty > TotalAvailable) {
                alert('Only ' + TotalAvailable.toFixed(2) + ' is available to adjust. Please enter a lesser amount.');
                return;
            }

            // Reset and distribute from the beginning
            let RemainingQty = AdjustQty;
            for (let i = 1; i <= rowCount; i++) {
                let $balanceElement = $('#BalanceAmt-' + i);
                let originalBalance = parseFloat($balanceElement.data('original') || 0);

                let AdjustInThisRow = 0;
                if (RemainingQty > 0 && originalBalance > 0) {
                    AdjustInThisRow = Math.min(RemainingQty, originalBalance);
                    RemainingQty -= AdjustInThisRow;

                    $('#CheckUnCheck-' + i).prop('checked', true);
                    $('#AdjustAmt-' + i).val(AdjustInThisRow.toFixed(2));
                    $balanceElement.text((originalBalance - AdjustInThisRow).toFixed(2));
                } else {
                    $('#CheckUnCheck-' + i).prop('checked', false);
                    $('#AdjustAmt-' + i).val('0.00');
                    $balanceElement.text(originalBalance.toFixed(2));
                }

                CheckUnCheckCheck(i);
            }

            alert('Adjusted total of ' + AdjustQty.toFixed(2) + ' across rows.');
        }

