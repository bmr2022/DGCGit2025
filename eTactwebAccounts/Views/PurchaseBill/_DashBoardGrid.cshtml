@model eTactWeb.DOM.Models.PBDashBoard
@using Microsoft.AspNetCore.Http
@using System.Reflection.PortableExecutable
@using System.Globalization
@inject IHttpContextAccessor HttpContextAccessor
@{
    var yearCode = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("YearCode"));
}
@if (Model.DashboardType == "Detail" || Model.DashboardType == "TAXDetail")
{
    <partial name="_DashboardDetailGrid" />
}
else
{
    <div class="table-responsive" style="max-height:350px;">
        <table class="table table-bordered TbCss text-nowrap mb-0" id="PBDashboardGrid">
            <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="dashPBThead">
                <tr>
                    <th>Sr#</th>
                    <th>Action</th>
                    <th data-columnno="2" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Entry ID</th>
                    <th data-columnno="3" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Entry Date</th>
                    <th data-columnno="4" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Voucher No</th>
                    <th data-columnno="5" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Voucher Date</th>
                    <th data-columnno="6" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Invoice type</th>
                    <th data-columnno="7" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Invoice Date</th>
                    <th data-columnno="8" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Vendor Name</th>
                    <th data-columnno="9" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Vendor Address</th>
                    <th data-columnno="10" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Document Name</th>
                    <th data-columnno="11" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>MRN Type</th>
                    <th data-columnno="12" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>MRN No</th>
                    <th data-columnno="13" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Gate No</th>
                    <th data-columnno="14" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Part Code</th>
                    <th data-columnno="15" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Item Name</th>
                    <th data-columnno="16" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>HSNNo</th>
                    <th data-columnno="17" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>GST type</th>
                    <th data-columnno="18" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>State Name</th>
                    <th data-columnno="19" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Order type</th>
                    <th data-columnno="20" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Service</th>
                    <th data-columnno="21" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Transporter</th>
                    <th data-columnno="22" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Vehicle No</th>
                    <th data-columnno="23" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Payment Terms</th>
                    <th data-columnno="24" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Currency</th>
                    <th data-columnno="25" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Bill Amount</th>
                    <th data-columnno="26" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Net Amount</th>
                    <th data-columnno="27" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Pend Amt</th>
                    <th data-columnno="28" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Paid Amt</th>
                    <th data-columnno="29" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Created on</th>
                    <th data-columnno="30" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Updated on</th>
                    <th data-columnno="31" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Created By</th>
                    <th data-columnno="32" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>Updated By</th>
                </tr>
            </thead>
            <tbody id="divDashboardGrid1">
                @{
                    var @Cntr = 0;
                    if (Model.PBDashboard == null || Model.PBDashboard.Count == 0)
                    {
                        <tr class="text-center"><td colspan="18" class="text-black-50"><strong>NO DATA FOUND</strong></td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.PBDashboard)
                        {
                            Cntr = Cntr + 1;
                            <tr id="approvedRow-@Cntr">
                                <td class="FWB">
                                    @Cntr
                                    <input type="hidden" id="approvedOrNot-@Cntr" value="@item.Approved" />
                                    <input type="hidden" id="fLevelApproved-@Cntr" value="@item.ApprovedBy" />
                                    <input type="hidden" id="AmmApproved-@Cntr" value="@item.ApprovedDate" />
                                </td>
                                <td style="text-align:center;white-space: nowrap;">
                                    <div id="container">
                                        <div id="printData-@Cntr">
                                            <a class="table-link link-dark" asp-action="PrintReport" asp-route-EntryId="@item.PurchBillEntryId" asp-route-YearCode="@item.PurchBillYearCode">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa-solid fa-print fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        <div id="viewCursorDiv-@Cntr">
                                            <a class="table-link link-success" asp-action="PurchaseBill" asp-route-Mode="V" asp-route-ID="@item.PurchBillEntryId" asp-route-YearCode="@item.PurchBillYearCode" onclick="BackButtonData(event,'@item.PurchBillEntryId','@item.PurchBillYearCode');">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa-solid fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                        @if (item.Approved == "Y" ||/*  item.Approval1Levelapproved == "Y" || item.ApproveAmm=="Y" ||*/  item.PurchBillYearCode.ToString() != yearCode.ToString())
                                        {
                                            <div>
                                                <a class="table-link link-primary noCursor">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div id="editCursorDiv-@Cntr">
                                                <a class="table-link link-primary" asp-action="PurchaseBill" asp-route-Mode="U" asp-route-ID="@item.PurchBillEntryId" asp-route-YearCode="@item.PurchBillYearCode" onclick="BackButtonData(event,'@item.PurchBillEntryId','@item.PurchBillYearCode');">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        @if (@item.Approved == "Y" || /* item.Approval1Levelapproved == "Y" || item.ApproveAmm == "Y" || */ item.PurchBillYearCode.ToString() != yearCode.ToString())
                                        {
                                            <div>
                                                <a class="table-link link-danger noCursor">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div id="deleteCursorDiv-@Cntr">
                                                <a class="table-link link-danger" asp-action="DeleteByID" asp-route-ID="@item.PurchBillEntryId" asp-route-YearCode="@item.PurchBillYearCode" asp-route-PurchVoucherNo="@item.VoucherNo" asp-route-InvNo="@item.InvoiceNo" asp-route-IsDetail="false">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa-solid fa-trash fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td class="FWB">@item.EntryID</td>
                                <td>
                                    @(item.EntryDate.HasValue
                                    ? item.EntryDate.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                                    : string.Empty)
                                </td>
                                <td>@item.VoucherNo</td>
                                <td>
                                    @{
                                        DateTime parsedDate;
                                        string formattedDate = DateTime.TryParse(item.VoucherDate, out parsedDate)
                                        ? parsedDate.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                                        : string.Empty;
                                    }
                                    @formattedDate
                                </td>
                                <td>@item.InvoiceNo</td>
                                <td>
                                    @(item.InvoiceDate.HasValue
                                    ? item.InvoiceDate.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                                    : string.Empty)
                                </td>
                                <td>@item.VendorName</td>
                                <td>@item.VendorAddress</td>
                                <td>@item.DocumentName</td>
                                <td>@item.MRNType</td>
                                <td>@item.MRNNo</td>
                                <td>@item.GateNo</td>
                                <td>@item.PartCode</td>
                                <td>@item.ItemName</td>
                                <td>@item.HSNNO</td>
                                <td>@item.GSTType</td>
                                <td>@item.StateName</td>
                                <td>@item.DomesticImport</td>
                                <td>@item.ItemOrService</td>
                                <td>@item.Transporter</td>
                                <td>@item.VehicleNo</td>
                                <td>@item.PaymentTerm</td>
                                <td>@item.Currency</td>
                                <td>@item.BillAmount</td>
                                <td>@item.NetAmt</td>
                                <td>@item.PendAmt</td>
                                <td>@item.PaidAmt</td>
                                <td>
                                    @(item.CreatedOn.HasValue
                                    ? item.CreatedOn.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                                    : string.Empty)
                                </td>
                                <td>
                                    @(item.UpdatedOn.HasValue
                                    ? item.UpdatedOn.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
                                    : string.Empty)
                                </td>
                                <td>@item.EnteredBy</td>
                                <td>@item.UpdatedByName</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>

    </div>
    <center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>
}
<style>
    #container {
        display: flex;
    }

        #container > div {
            flex: 1;
            margin-right: 10px; /* Adjust margin as needed */
        }

    #PBDashboardGrid {
        width: 100%;
        border-collapse: collapse;
    }

    #dashPBThead th {
        background-color: #127387;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tbody td {
        /* Table cell styles */
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }
</style>