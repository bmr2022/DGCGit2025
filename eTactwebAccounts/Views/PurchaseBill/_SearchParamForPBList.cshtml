@model eTactWeb.DOM.Models.PBListDataModel

<div class="row">
    <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col">
                <label class="form-label">From Date</label>
                <input asp-for="FromDate" maxlength="10" class="form-control" />
            </div>
            <div class="col">
                <label class="form-label">To Date</label>
                <input asp-for="ToDate" maxlength="10" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="DashboardType" class="form-label">Dashboard Type</label>
        <select class="form-select" asp-for="DashboardType">
            <option value="" disabled>-Select-</option>
            <option value="Summary" selected>Summary</option>
            <option value="Detail">Detail</option>
        </select>
    </div>
    <div class="col-xxl-1 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="MRNType" class="form-label">MRN Type</label>
        <select class="form-select" asp-for="MRNType">
            <option value="MRN">MRN</option>
            <option value="JWMRN">JW MRN</option>
            <option value="ServiceGateEntry">Service Gate Entry</option>
 
            <option value="ReceiveChallan">Receive Challan</option>

 
            <option value="ALL">ALL</option>
 
        </select>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
        <label asp-for="PartyName" class="form-label">Party Name</label>
        @* <input asp-for="PartyName" class="form-control" /> *@
        <select class="form-select" asp-for="PartyName" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.PartyNameList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="MRNNo" class="form-label">MRN No</label>
        @* <input asp-for="MRNNo" class="form-control" /> *@
        <select class="form-select" asp-for="MRNNo" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.MRNNoList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
        <label asp-for="PONO" class="form-label">Voucher NO</label>
        @* <input asp-for="PONO" autocomplete="on" value="" class="form-control" /> *@
        <select class="form-select" asp-for="PONO" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.PONOList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
        @* <input asp-for="InvoiceNo" class="form-control" /> *@
        <select class="form-select" asp-for="InvoiceNo" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.InvoiceNoList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <label asp-for="GateNo" class="form-label">Gate No</label>
        @* <input asp-for="GateNo" class="form-control" /> *@
        <select class="form-select" asp-for="GateNo" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.GateNoList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
        <label asp-for="DocumentName" class="form-label">Document Name</label>
        @* <input asp-for="DocumentName" class="form-control" /> *@
        <select class="form-select" asp-for="DocumentName" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.DocumentNameList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
        <label asp-for="ItemName" class="form-label">Item Name</label>
        @* <input asp-for="ItemName" class="form-control" /> *@
        <select class="form-select" asp-for="ItemName" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.ItemNameList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
        <label asp-for="PartCode" class="form-label">Part Code</label>
        @* <input asp-for="PartCode" class="form-control" /> *@
        <select class="form-select" asp-for="PartCode" style="heigt:190px;width:190px;" asp-items="@(new SelectList(Model.PartCodeList,"Value","Text"))">
            <option value="0">-Select-</option>
        </select>
    </div>
    <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
        <label class="form-label">Global search</label>
        <input type="text" class="form-control" id="search-box" style="background-color:#FFFACD" placeholder="Search...">
    </div>
    <div class=" d-flex justify-content-center mt-3" width="inherit">
        <button class="btn btn-sm btn-outline-info" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" onclick="GetSearchData();">
            <i class="fa-solid fa-magnifying-glass fa-fw fa-lg "></i>SEARCH
        </button>
        <button class="btn btn-sm btn-outline-success" style="padding:3px;height:30px;width:100px;margin-left:20px;" type="button" id="sendToExcel">
            <i class="fa-solid fa-upload fa-fw fa-lg "></i>EXCEL
        </button>
        <a class="btn btn-sm btn-outline-danger" style="padding:3px;height:30px;width:100px;margin-left:20px;" asp-controller="PurchaseBill" asp-action="PurchaseBillList">
            <i class="fa-solid fa-rotate fa-fw fa-lg"></i>RESET
        </a>
        <div class="d-flex" style="margin-left:50px;margin-top:10px;">
            <label class="color-box" style="background-color: #FF0000;"></label><label style="margin-left:5px;margin-top:-5px;">UNAPPROVED</label>
            <label class="color-box" style="background-color: green;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">APPROVED</label>
            @* <label class="color-box" style="background-color: purple;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">1st Level Approved</label>
            <label class="color-box" style="background-color: blue;margin-left:25px;"></label><label style="margin-left:5px;margin-top:-5px;">Amendment PENDING</label> *@
        </div>
    </div>
    
</div>

<style>
    .color-box {
        width: 10px;
        height: 10px;
    }
</style>