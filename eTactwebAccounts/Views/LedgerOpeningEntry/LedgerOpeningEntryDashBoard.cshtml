        function confirmEdit(event) {
            event.preventDefault();
            if (confirm("Are you sure you want to Edit this entry?")) {
                // Get the automatically generated href
                 
                var linkUrl = $(event.currentTarget).attr("href");
                
                // Redirect to the new URL
