            }
            function updateButtonTitle() {
               
                let reportType = $("#ReportType").val();
                let newTitle = (reportType === "GROUPSUMMARY") ? "Group Ledger Summary" : "Group Ledger Detail";

                $("#dynamicText").text(newTitle);
            }

            // Update title on page load
            updateButtonTitle();

            // Update title when dropdown selection changes
            $("#ReportType").change(updateButtonTitle);
            var currentDate = new Date();
            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            $('#totalRows').text($('#divStockRegisterBody tr').length);
            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", firstDayOfMonth);
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');
            $('#ReportType').select2();
            //$('#VoucherType').select2();

            $('#GroupName').change(function () {
                checkAndRunFunction();
            });
            

        });
        function checkAndRunFunction() {
             
            var groupName = $("#GroupName").val();
            if (groupName) {
                GetGroupLedgerDetailsData();
            } else {
                $.notify("Group Name is required for displaying Details Data", "error");
            }
        }
        $('#GroupName').change(function () {
            $('#Account_Code').val($('#GroupName').val());
        });

        function selection(CurrentRow) {

            //$(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#divStockRegisterBody tr").each(function () {
                $(this).removeAttr("style"); // Remove any inline styles
            });

            $(CurrentRow).css({ 'background-color': '#00bcd4' });
            $("#divStockRegisterBody tr").not(CurrentRow).css({ 'background-color': '' });
        }

        $("#ReportType").change(function () {
            checkAndRunFunction();
        });
        function FillGroupName() {
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var Mode = $('#Mode').val();
            $.ajax({
                url: '@Url.Action("FillGroupName", "AccGroupLedger")',
                type: 'POST',
                data: {
                    FromDate: FromDate,
                    ToDate: ToDate
                },
                async: false,
                success: function (response, status, error) {
                    var GroupNameDropdown = $('#GroupName');
                    var obj = $.parseJSON(response);
                    GroupNameDropdown.empty();
                    GroupNameDropdown.append('<option value="">--Select--</option>');
                    $.each(obj.Result, function (index, GroupName) {
                        GroupNameDropdown.append('<option value="' + GroupName.Account_Code + '">' + GroupName.GroupName + '</option>');
                    });

                    if ($('#Mode').val() == "U" || $('#Mode').val() == "V") {
                         
                        var GroupName = '@Model.Account_Code';
                        //$('#LedgerName').val(LedgerName).trigger("change");
                        $('#GroupName').val(GroupName);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Failed to load ledger names.');
                }
            });
        }

        function GetGroupLedgerDetailsData() {
             
            //var reportType = $('#ReportType').val();
            //var EntryByMachine = $('#EntryByMachine').val();
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var ReportType = $('#ReportType').val();
            var GroupCode = $('#Account_Code').val();
            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetGroupLedgerDetailsData", "AccGroupLedger")",
                data: {
                    FromDate: FromDate,
                    ToDate: ToDate,
                    GroupCode: GroupCode,
                    ReportType: ReportType
                },
                success: function (response) {
                    $('#divStockMainRegister').html(response);

                    var totalRows = $('#divStockMainRegister tr').length;
                    $('#totalRows').text(totalRows);
                    countAllTotal();
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching BOM tree data:", error);
                }
            });
        }

        function countAllTotal() {
             
            var rowCount = $('#divStockRegisterBody tr').length;

            var TotCr = 0;
            var TotDr = 0;
            var TotOpening = 0;
            var TotCurrDr = 0;
            var TotCurrCr = 0;
            var TotNetCurr = 0;
            var TotNet = 0;
           
            for (var i = 1; i <= rowCount; i++) {

                var groupLedger = $('#divStockRegisterBody tr:eq(' + (i - 1) + ') td:last').text().trim();
                if (groupLedger !== "G") {
                    TotDr += $('#totDrG-' + i).text() == '' ? 0 : parseFloat($('#totDrG-' + i).text());
                    TotCr += $('#totCrG-' + i).text() == '' ? 0 : parseFloat($('#totCrG-' + i).text());
                    TotOpening += $('#totOpeningG-' + i).text() == '' ? 0 : parseFloat($('#totOpeningG-' + i).text());
                    TotCurrDr += $('#totCurrDrG-' + i).text() == '' ? 0 : parseFloat($('#totCurrDrG-' + i).text());
                    TotCurrCr += $('#totCurrCrG-' + i).text() == '' ? 0 : parseFloat($('#totCurrCrG-' + i).text());
                    TotNetCurr += $('#totNetCurrAmtG-' + i).text() == '' ? 0 : parseFloat($('#totNetCurrAmtG-' + i).text());
                    TotNet += $('#totNetAmtG-' + i).text() == '' ? 0 : parseFloat($('#totNetAmtG-' + i).text());

                }

                //if(totAmount < 0){
                //    $('#SAGridRow-' + i).css('background-color', 'red');
                //}
            }


            $('#totCr').val(isNaN(TotCr) ? 0 : TotCr.toFixed(2));
            $('#totDr').val(isNaN(TotDr) ? 0 : TotDr.toFixed(2));
            $('#totOpening').val(isNaN(TotOpening) ? 0 : TotOpening.toFixed(2));
            $('#totCurrDr').val(isNaN(TotCurrDr) ? 0 : TotCurrDr.toFixed(2));
            $('#totCurrCr').val(isNaN(TotCurrCr) ? 0 : TotCurrCr.toFixed(2));
            $('#totNetCurrentAmt').val(isNaN(TotNetCurr) ? 0 : TotNetCurr.toFixed(2));
            $('#totNetAmt').val(isNaN(TotNet) ? 0 : TotNet.toFixed(2));

           
        }
        function getFirstDayOfMonth(dateString) {
            const [day, month, year] = dateString.split('/');

            // Create a new Date object (months are 0-indexed, so subtract 1 from the month)
            const currentDate = new Date(year, month - 1, day);

            // Set the date to the 1st day of the month
            currentDate.setDate(1);

            // Format the result as dd/mm/YYYY
            const firstDayOfMonth = `${currentDate.getDate().toString().padStart(2, '0')}/${(currentDate.getMonth() + 1).toString().padStart(2, '0')}/${currentDate.getFullYear()}`;

            return firstDayOfMonth;
        }

