            AutoComplete('VBooktransDetail', 'DrCr', 'DrCr', null);
            AutoComplete('VBooktransDetail', 'EntryByEmployee', 'EntryByEmployee', null);
            AutoComplete('VBooktransDetail', 'ActualEntryDate', 'ActualEntryDate', null);
            AutoComplete('VBooktransDetail', 'UpdatedByEmployee', 'UpdatedByEmployee', null);
            AutoComplete('VBooktransDetail', 'Updationdate', 'Updationdate', null);
            AutoComplete('VBooktransDetail', 'EntryByMachine', 'EntryByMachine', null);

