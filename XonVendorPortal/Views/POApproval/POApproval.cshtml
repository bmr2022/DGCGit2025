            var inputFromDateStr = $("#FromDate").val();
            var parsedFromDate = new Date(inputFromDateStr);

            if (!isNaN(parsedFromDate.getTime())) {
                var formattedDate = (parsedFromDate.getDate() < 10 ? '0' : '') + parsedFromDate.getDate() + '/' +
