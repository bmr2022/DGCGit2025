@model eTactWeb.DOM.Models.Master.WorkCenterMasterModel

<div class="card-body table-responsive" style="max-height:350px;">
    <table class="table table-hover table-bordered table-striped TbCss" id="WorkCenterMasterTable">
        <thead class="bg-gradient card-headerBG text-light" style="position:static;" id="WorkCenterHeadTable">
            <tr>
                <th style="display: none">
                    @Html.DisplayNameFor(model => model.WCID)
                </th>
                <th>Action</th>
                <th>Sr#</th>
                <th data-columnno="1" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>WCID</th>
                <th data-columnno="2" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>WorkCenter Code</th>
                <th data-columnno="3" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>WorkCenter Description</th>
                <th data-columnno="4" data-sortorder="asc" class="sortCol"><span style="padding:5px;margin:5px" class="sort-icon"><i class="fa" aria-hidden="true"></i></span>WorkCenter Type</th>

            </tr>
        </thead>
        <tbody id="WorkCenterMasterBody">
            @if (Model.WorkCenterMasterList == null)
            {
                <tr class="text-center">
                    <td colspan="14" class="text-black-50"><strong>NO DATA FOUND</strong></td>
                </tr>
            }
            else
            {
                var @Cntr = 0;
                foreach (var item in Model.WorkCenterMasterList)
                {
                    Cntr = Cntr + 1;
                    <tr onclick="selection(this)">
                        <td style="display: none">
                            @Html.DisplayFor(modelItem => item.WCID)
                        </td>
                        <td style="white-space: nowrap;display:flex;width:20px;">
                            <div id="container">
                                <div id="viewCursorDiv-@Cntr">
                                    <a class="table-link link-success" asp-controller="WorkCenterMaster" asp-action="WorkCenterMaster"
                                       asp-route-ID="@item.WCID" asp-route-Mode="V">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-magnifying-glass fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="editCursorDiv-@Cntr">
                                    <a class="table-link link-primary" asp-controller="WorkCenterMaster" asp-action="WorkCenterMaster"
                                       asp-route-ID="@item.WCID" asp-route-WCName="@item.WorkCenterDescription" asp-route-Mode="U">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                                <div id="deleteCursorDiv-@Cntr">
                                    <a class="table-link link-danger" asp-controller="WorkCenterMaster" asp-action="Delete"
                                       asp-route-WorkCenterDescription="@item.WorkCenterDescription">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-trash fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </td>
                        <th>@Cntr</th>
                        <td>
                            @Html.DisplayFor(modelItem => item.WCID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkCenterCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkCenterDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkCenterType)
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>

<style>
    #container {
        display: flex;
    }
    #container > div {
            flex: 1; /* Adjust margin as needed */
            margin-right: 10px;
    }

    #WorkCenterMasterTable {
        width: 100%;
        border-collapse: collapse;
    }

    #WorkCenterHeadTable th {
        background-color: #127387;
        position: sticky;
        top: -18px;
        z-index: 1;
    }

    tbody td {
        /* Table cell styles */
    }

    .sort-icon {
        padding: 5px;
        margin: 5px;
        vertical-align: top;
    }

    .ascCol {
        font-size: 15px;
        vertical-align: bottom;
    }

    .descCol {
        font-size: 15px;
        vertical-align: super;
    }
</style>