                </div>
            </div>
        </div>
        <div class="progress my-3 mb-3" style="height: 4px;">
            <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="card-body">
            <div class="card overflow-auto">
                <div class="card-body" id="divDashboardGrid">
                    <partial name="_SSApprovalGrid" />
                </div>
            </div>
        </div>
        <center><strong>TOTAL ROWS : <span id="totalRows"></span></strong></center>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {

            var urlString = window.location.href;
            var url = new URL(urlString);

            var sonoRegex = /[?&]SONO=/;
            if (sonoRegex.test(url.search)) {
                var sonoValue = url.searchParams.get("SONO");
                $('#SONO').val(sonoValue);

            }
             
            var VendorNameRegex = /[?&]VendorName=/;
            if (VendorNameRegex.test(url.search)) {
                var VNValue = url.searchParams.get("VendorName");
                $('#VendorName').val(VNValue);
            }

            $(document).on("click", ".redirectToApproval", function (e) {

                e.preventDefault();
                var formData = $("#yourFormId").serialize();
                var newUrl = this.href;
                newUrl = newUrl + "&TypeOfApproval=" + $('#ApprovalType').val() + "&SONO=" + $('#SONO').val() + "&SchNo=" + $('#SchNo').val() + "&VendorName=" + $('#VendorName').val();
                window.location.href = newUrl;

            });


            if ($('#selectedApprovalType').val() == 'UnApproval') {
                $('#ApprovalType').val('listofApp').change();
                GetListOfApprovedSS();
            }
            if ($('#selectedApprovalType').val() == 'Approval') {
                $('#ApprovalType').val('listofUnApp').change();
                GetListOfApprovedSS();
            }
            if ($('#selectedApprovalType').val() == 'Unapproving Amendment') {
                $('#ApprovalType').val('listofAppAmd').change();
                GetListOfApprovedSS();
            }
            if ($('#selectedApprovalType').val() == 'Approving Amendment') {
                $('#ApprovalType').val('listofUnAppAmd').change();
                GetListOfApprovedSS();
            }
        });

        var currentSearchColumn = null;

        $("#search-box").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#divDashboardGrid1 tr").filter(function () {
                if (currentSearchColumn !== null) {
                    var columnText = $(this).find('td').eq(currentSearchColumn).text().toLowerCase();
                    $(this).toggle(columnText.indexOf(value) > -1);
                } else {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                }
            });
        });


        $(document).on("click", "th[data-columnno]", function () {
            currentSearchColumn = $(this).data('columnno');
            $("#search-box").val('').trigger('keyup');
        });

        function redirectToApproval(EntryId, SchYear, SchNo) {


            //e.preventDefault();

            var fData = new FormData();

            var newUrl = this.href;

            newUrl = newUrl + "&TypeOfApproval=" + $('#ApprovalType').val();

            fData.append('ID', EntryId);
            fData.append('SchYear', SchYear);
            fData.append('SchNo', SchNo);
            fData.append('SONO', $('#SONO').val());
            fData.append('SchFromDate', $('#FromDate').val());
            fData.append('SchToDate', $('#ToDate').val());
            fData.append('VendorName', $('#VendoreName').val());
            fData.append('ApprovalType', $('#ApprovalType').val());


            $.ajax({
                url: "@Url.Action("ShowSSDetail")",
                type: 'POST',
                data: fData,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log(response);
                },
                error: function (error) {
                    console.error(error);
                }
            });
        }


        $(function () {

            var currentDate = new Date();
            var firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                var dateString = day + "/" + month + "/" + year;
                return dateString;
            }
            //$('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

            $('#FromDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", formatDate(firstDayOfMonth));
            $('#ToDate').datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", 'now');

             
            AutoComplete('VSALESCHEDULE', 'VendorName', 'CustomerName', null);
            AutoComplete('VSALESCHEDULE', 'SONO', 'SONO', null);
            AutoComplete('VSALESCHEDULE', 'SchNo', 'SchNo', null);
            AutoComplete('VSALESCHEDULE', 'CC', 'CC', null);
            GetTotalRows();
            GetListOfApprovedSS();
            //GetAllowedAction();
        });


        function GetListOfApprovedSS() {

            $.ajax({
                type: "GET",
                url: "@Url.Action("GetListOfApprovedSS")",
                type: "POST",
                async: false,
                data: { FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val(), ApprovalType: $('#ApprovalType').val(), SONO: $('#SONO').val(), SchNo: $('#SchNo').val(), VendorName: $('#VendorName').val() },
                success: function (result, status, error) {
                     
                    $('#divDashboardGrid').empty().append(result);
                    GetTotalRows();

                     
                    sortTable(1, false);
                }
            });
        }



        $(document).on("click", ".sortCol", function () {
             ;
            var $column = $(this).parent().closest("th");
            var colno = $(this).data('columnno');
            var currentOrder = $(this).data('sortorder');

            $('.sortCol').css('color', 'white');

            if (currentOrder === 'asc') {
                sortTable(colno, false);
                $(this).data('sortorder', 'desc');
                $(this).css('color', 'yellow');
                //$(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-up');
                $(this).find('i:first').addClass('fa-arrow-down');
            } else {
                sortTable(colno, true);
                $(this).data('sortorder', 'asc');
                $(this).css('color', 'yellow');
                // $(this).css('font-size', 'larger');
                $(this).find('i:first').removeClass('fa-arrow-down');
                $(this).find('i:first').addClass('fa-arrow-up');
            }
        });

        function sortTable(columnIndex, ascending) {
             
            var table = $('#PSDashboard');
            var rows = table.find('#divDashboardGrid1 > tr').toArray();

            rows.sort(function (a, b) {
                var aValue = $(a).find('td').eq(columnIndex).text();
                var bValue = $(b).find('td').eq(columnIndex).text();

                var aIntValue = 0;
                var bIntValue = 0;
                if (/^\d+$/.test(aValue) && /^\d+$/.test(bValue)) {
                    aIntValue = parseInt(aValue, 10);
                    bIntValue = parseInt(bValue, 10);
                }

                if (aIntValue > 0) {
                    if (ascending) {
                        return aValue - bValue;
                    } else {
                        return bValue - aValue;
                    }
                } else {
                    if (ascending) {
                        return aValue.localeCompare(bValue);
                    } else {
                        return bValue.localeCompare(aValue);
                    }
                }
            });

            $.each(rows, function (index, row) {
                table.children('#divDashboardGrid1').append(row);
            });
        }

        $('#ApprovalType').change(function () {
            if ($(this).val() == 'finalApproval') {
                $('#approvalType').val('Approving Final Level');
                //GetFinalApprovalPO();
            }
            else if ($(this).val() == 'firstLvlApproval') {
                $('#approvalType').val('Approving First Level');

                //GetInitialData();
            } else if ($(this).val() == 'finalUnApp') {
                $('#approvalType').val('Unapproving Final Level');

                //GetFinalUnApprovalPO();
            } else if ($(this).val() == 'firstLvlUnApp') {
                $('#approvalType').val('Unapproving first Level');

                //GetFirstLvlUnApprovalPO();
            } else if ($(this).val() == 'amdUnApp') {
                $('#approvalType').val('Unapproving Amendment Level');

                //GetAmmUnApprovalPO();
            }
            else {
                $('#approvalType').val('Approving Amendment Level');

                //GetAmmApprovalPO();
            }

        });

        $('#sendToExcel').click(function () {
            $('#poAppTable').table2excel({
                filename: "POApprovalTable.xls"
            });
        });

        async function GetTotalRows() {
            ;
            var rowCount = $('#divDashboardGrid1 tr').length;
            var columnCount = $('#divDashboardGrid1 tr td').length;

            if (columnCount > 1) {
                $('#totalRows').text(rowCount);
            }
            else {
                $('#totalRows').text(0);
            }
        }

    </script>
    <script src="~/Scripts/table2excel.js"></script>
}

